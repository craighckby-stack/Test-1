{
  "model_version": "v3.0_SovereignRCDM",
  "model_name": "Robust_Contextual_Decision_Matrix",
  "description": "Standardized definition for autonomous governance decisions, encompassing dynamic phases, tiered consensus mechanisms, and actor authority configuration.",
  "global_parameters": {
    "core_safety_factor": 0.15,
    "adaptive_safety_override": true,
    "thresholds": {
      "standard_consensus": 0.65,
      "high_risk_veto": 0.95,
      "stability_benchmark": 0.9995
    }
  },
  "actor_registry": {
    "EfficiencyModule": {
      "domain": "Resource Utilization",
      "authority_level": "Operational"
    },
    "ArchitectureAgent": {
      "domain": "Structural Integrity",
      "authority_level": "Strategic"
    },
    "SafetyAuditor": {
      "domain": "Risk & Security",
      "authority_level": "Critical"
    },
    "ArchitecturalCore": {
      "domain": "System Foundation",
      "authority_level": "Absolute"
    },
    "SafetyAgent": {
      "domain": "Existential Risk",
      "authority_level": "Absolute"
    }
  },
  "decision_matrix": {
    "EfficiencyModule": 0.35,
    "ArchitectureAgent": 0.40,
    "SafetyAuditor": 0.25
  },
  "phases": {
    "evolution": {
      "status": "active",
      "priority": 80,
      "ruleset_id": "P01_ProposalEvaluation",
      "entry_criteria": [
        "Triage_Complete",
        "Impact_Scoring_Rendered"
      ],
      "dynamic_transition": {
        "trigger": "risk_score_gt_0.70",
        "new_ruleset_id": "P03_MitigationAssessment"
      }
    },
    "stabilization": {
      "status": "active_monitoring",
      "priority": 95,
      "ruleset_id": "P02_SystemVerification",
      "required_metrics": [
        "latency",
        "stability_index"
      ],
      "exit_criteria": [
        "stability_index_ge_threshold",
        "latency_ge_benchmark"
      ]
    }
  },
  "rulesets": {
    "P01_ProposalEvaluation": {
      "type": "WeightedConsensus",
      "target_threshold_ref": "global_parameters.thresholds.standard_consensus",
      "scoring_model": "AdditiveWeightedSum",
      "factors": [
        {
          "name": "Utility_Gain",
          "weight_influence": 0.40
        },
        {
          "name": "Resource_Cost",
          "weight_influence": -0.35
        },
        {
          "name": "Security_Impact",
          "weight_influence": -0.25
        }
      ]
    },
    "P02_SystemVerification": {
      "type": "MetricCompliance",
      "validation_target_ref": "global_parameters.thresholds.stability_benchmark",
      "compliance_check": "MinStabilityIndexGE"
    },
    "P03_MitigationAssessment": {
      "type": "AbsoluteVeto",
      "required_approvals": [
        "SafetyAgent",
        "ArchitecturalCore"
      ]
    }
  }
}