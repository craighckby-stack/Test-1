{
  "auditLevel": "Mandatory",
  "logRetentionDays": 365,
  "criticalEvents": [
    "CODE_EVOLUTION_COMMIT",
    "GOVERNANCE_PARAM_UPDATE",
    "SECURITY_BREACH_ATTEMPT",
    "CORE_STATE_ROLLBACK"
  ],
  "evolutionAudit": {
    "logDiffs": true,
    "immutableCommitHash": true
  },
  "storagePolicy": {
    "target": "ImmutableLedger",
    "replicationFactor": 3
  }
}