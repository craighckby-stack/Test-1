{
  "schema_version": "2.0.0",
  "protocol_id": "recursive_constraint_resolution_protocol",
  "priority_level": 5,
  "config_flags": {
    "enable_meta_recursion": true,
    "early_exit_on_confidence": 0.95
  },
  "pipeline_definition": {
    "entry_stage": "context_indexing",
    "stages": [
      {
        "stage_name": "context_indexing",
        "description": "Initial context ingestion and indexing.",
        "input_map": {"source_data": "$.raw_input"},
        "output_path": "$.intermediate.indexed_context",
        "executor_requirement": "INDEXING_OPTIMIZED",
        "timeout_ms": 5000
      },
      {
        "stage_name": "constraint_synthesis",
        "description": "Deriving explicit and implicit constraints.",
        "input_map": {"context": "$.intermediate.indexed_context"},
        "output_path": "$.intermediate.active_constraints",
        "executor_requirement": "LOGIC_MODEL_HI_ACCURACY",
        "next_stage_condition": [
          {"if": "$.runtime.constraints_stable", "then": "reasoning_iteration"},
          {"else": "self_corrective_loop"}
        ]
      },
      {
        "stage_name": "reasoning_iteration",
        "description": "Core iterative reasoning loop.",
        "input_map": {"constraints": "$.intermediate.active_constraints", "memory": "$.working_memory"},
        "output_path": "$.results.proposition",
        "executor_requirement": "REASONING_GPU_TIGHT",
        "max_iterations": 7,
        "exit_criteria": {"metric": "confidence_score", "threshold": 0.98}
      }
    ],
    "exit_stage": "refinement_and_verification"
  },
  "resource_budget": {
    "cpu_units": 4.0,
    "memory_mb": 1024,
    "dedicated_storage_path": "/tmp/rCRP_run_{id}"
  }
}