{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "RRP_Policy_Definition.schema.json",
  "title": "RRP Policy Definition Schema",
  "type": "object",
  "properties": {
    "protocol_id": {"type": "string"},
    "policy_metadata": {
      "type": "object",
      "properties": {
        "definition_version": {"type": "string"},
        "evaluation_mode": {"type": "string", "enum": ["StrictDenyOnConflict", "FirstMatchAllowOverride"]}
      },
      "required": ["definition_version", "evaluation_mode"]
    },
    "policy_statements": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "statement_id": {"type": "string"},
          "priority": {"type": "integer", "minimum": 100},
          "effect": {"type": "string", "enum": ["Allow", "Deny"]},
          "target": {
            "type": "object",
            "properties": {
              "resource_pattern": {"type": "string", "format": "regex"},
              "methods": {"type": "array", "items": {"type": "string"}}
            },
            "required": ["resource_pattern", "methods"]
          },
          "conditions": {"type": "array"},
          "constraints": {"type": "object"}
        },
        "required": ["statement_id", "priority", "effect", "target"]
      }
    }
  },
  "required": ["protocol_id", "policy_metadata", "policy_statements"]
}