{
  "spec_id": "AS-P-94.1",
  "name": "Artifact Integrity Sealing Protocol",
  "purpose": "Standardized cryptographic sealing protocol for AASS outputs (DIAL, S14 Receipts), ensuring non-repudiation and structural compliance with P-M02/P-R03 requirements.",
  "metadata": {
    "protocol_version": "2.0.0-RC1",
    "supersedes_spec_version": "V1.0.0"
  },
  "cryptography": {
    "suite_identifier": "ED25519_SHA384_JCS_V1",
    "signature_algorithm": {
      "mechanism": "Ed25519",
      "mode": "Deterministic (No Pre-hashing)",
      "jwa_equivalent": "EdDSA"
    },
    "hashing_algorithm": {
      "integrity_check": "SHA-384"
    }
  },
  "signing_parameters": {
    "payload_canonicalization_rule": "RFC8785 (JCS) Standard",
    "payload_scope": "content_fields_only",
    "signature_encoding": "Base64url"
  },
  "key_management": {
    "key_identifier_format": "DID_URN:v1:AASS-KID:[hash]",
    "signer_identity_tag": "AASS-ROOT-TA-001",
    "key_rotation_cadence_days": 90,
    "revocation_check": "Mandatory lookup via OCS/DARM endpoint."
  },
  "payload_schema": {
    "content_fields": [
      "artifact_hash_sha384",
      "artifact_type",
      "gsep_sequence_id",
      "timestamp_utc_isostring",
      "signing_entity_metadata_hash"
    ],
    "sealing_fields": [
      "key_identifier",
      "signature_value",
      "protocol_spec_ref"
    ]
  },
  "verification_service_path": "/v2/governance/verify/seal"
}