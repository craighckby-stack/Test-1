{  "$id": "https://agi.sovereign.v94.1/protocol/execution_context_schema.json",  "$schema": "http://json-schema.org/draft-07/schema#",  "title": "Sovereign AGI Execution Context Schema",  "description": "Defines the state of the execution environment and source material *before* the AGI cycle commences, essential for reproducibility and integrity verification.",  "type": "object",  "required": [    "execution_id",    "timestamp_start",    "input_state_hash",    "system_environment"  ],  "properties": {    "execution_id": {      "type": "string",      "format": "uuid",      "description": "Unique identifier for the specific execution run."    },    "timestamp_start": {      "type": "string",      "format": "date-time",      "description": "Start time of the execution cycle."    },    "input_state_hash": {      "type": "string",      "pattern": "^[a-f0-9]{64}$",      "description": "Recursive hash (e.g., Merkelized or Content Hash) of the entire source filesystem/context provided to the AGI."    },    "system_environment": {      "type": "object",      "description": "Details about the runtime environment.",      "properties": {        "os": {"type": "string"},        "architecture": {"type": "string"},        "cpu_cores": {"type": "integer"},        ""memory_limit_mb": {"type": "integer"},        "dependencies_hash": {          "type": "string",          "description": "Hash of the dependency manifest (e.g., package-lock.json, requirements.txt) state."        }      },      "required": ["os", "architecture", "dependencies_hash"]    },    "source_mapping": {      "type": "array",      "description": "List of files processed or used as input for reference.",      "items": {        "type": "object",        "required": ["path", "checksum_hash"],        "properties": {          "path": {"type": "string"},          "checksum_hash": {"type": "string", "pattern": "^[a-f0-9]{64}$"},          "is_external": {"type": "boolean", "default": false}        }      }    }  }}