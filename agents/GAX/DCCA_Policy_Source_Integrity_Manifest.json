class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  #defaultConfig = {
    foo: 'bar',
    baz: true,
    loaded: false
  };

  #configSchema = {
    type: 'object',
    properties: {
      foo: { type: 'string' },
      baz: { type: 'boolean' }
    }
  };

  static create(values = {}) {
    return new Config(values);
  }

  #constructorSignature;

  private constructor(values = {}) {
    this.#setValues.apply(this, values);
  }

  private #setValues(...args) {
    this.constructorSignature = args;
    Object.assign(this, ...args);
    this.validate();
    return this;
  }

  get config() {
    return { ...this.#staticConfig, ...this.#defaultConfig, ...this };
  }

  get staticConfig() {
    return this.#staticConfig;
  }

  get defaultConfig() {
    return this.#defaultConfig;
  }

  get configSchema() {
    return this.#configSchema;
  }

  static get ConfigSchemaName() {
    return 'ConfigSchema';
  }

  validate() {
    try {
      const { Validator } = require('jsonschema');
      const validator = new Validator();
      validator.checkSchema(this.#configSchema);
      validator.validate(this.config, this.#configSchema);
    } catch (e) {
      throw e;
    }
  }
}

class LifecycleEvent {
  static readonly CONFIGURED = 'CONFIGURED';
  static readonly LOADED = 'LOADED';
  static readonly SHUTTING_DOWN = 'SHUTTING_DOWN';
  static readonly SHUTDOWN = 'SHUTDOWN';
  static readonly DESTROYED = 'DESTROYED';

  constructor(event) {
    if (!Object.values(LifecycleEvent).includes(event)) {
      throw new Error(`Invalid lifecycle event: ${event}`);
    }
    this.event = event;
  }
}

class LifecycleHandler {
  private handler;

  private constructor(handler) {
    this.handler = handler;
  }

  bind(target = this) {
    if (typeof target === 'function') {
      throw new TypeError(`Target ${target.name} is a function and does not have a prototype`);
    }
    this.handler = this.handler.bind(target);
    return this;
  }

  execute() {
    return this.handler();
  }
}

class LifecycleEventDispatcher {
  #lifecycleEventHandlers = {};

  private constructor() {
    this.#dispatchEvent(LifecycleEvent.DESTROYED);
  }

  bindLifecycleEventHandler(event, handler) {
    if (!Object.values(LifecycleEvent).includes(event)) {
      throw new Error(`Invalid lifecycle event: ${event}`);
    }
    if (this.#lifecycleEventHandlers[event]) {
      throw new Error('Lifecycle handler for event already exists');
    }
    return new LifecycleHandler(handler);
  }

  bindLifecycleEventHandlers(eventHandlers = {}) {
    Object.keys(eventHandlers).forEach((event) => {
      if (!Object.values(LifecycleEvent).includes(event)) {
        throw new Error(`Invalid lifecycle event: ${event}`);
      }
      this.#lifecycleEventHandlers[event] = eventHandlers[event];
    });
    return this.#lifecycleEventHandlers;
  }

  #dispatchEvent(event) {
    this.#lifecycleEventHandlers[event].forEach((handler) => {
      handler.execute();
    });
  }

  dispatch(event, ...args) {
    const lifecycleEvent = new LifecycleEvent(event);
    this.#dispatchEvent(event);
  }
}

class NexusCore {
  #lifecycleEventDispatcher = new LifecycleEventDispatcher();

  #lifecycle = new LifeCycleStatus();

  #status = new LifeCycleStatus();

  constructor() {
    this.#status.init();
  }

  get status() {
    return this.#status;
  }

  get lifecycleStatus() {
    return this.#lifecycle;
  }

  bindLifecycleEventHandlers(eventHandlers = {}) {
    return this.#lifecycleEventDispatcher.bindLifecycleEventHandlers(eventHandlers);
  }

  get lifecycleEventHandlers() {
    return this.#lifecycleEventDispatcher.#lifecycleEventHandlers;
  }

  async init() {
    if (!this.#lifecycle.shuttingDown && this.#lifecycle.configured) {
      throw new Error('NexusCore has not been configured yet');
    }
    await this.#status.init();
  }

  async configure(config) {
    await this.validateConfig(config);
    this.#lifecycle.configured = true;
  }

  async validateConfig(config) {
    try {
      const { Validator } = require('jsonschema');
      const validator = new Validator();
      validator.checkSchema(Config.configSchema);
      validator.validate(config, Config.configSchema);
      return config;
    } catch (e) {
      throw e;
    }
  }

  async load() {
    if (!this.#lifecycle.shuttingDown && this.#lifecycle.configured) {
      try {
        console.log('Loading...');
        await new Promise(resolve => setTimeout(resolve, 1000));
        console.log('Loading complete...');
        this.#lifecycle.loaded = true;
      } catch (e) {
        console.error('Load error:', e);
      }
    }
  }

  async startup() {
    await this.configure(Config.create().defaultConfig);
    await this.load();
  }

  async shutdown() {
    console.log('Shutdown initiated...');
    this.#lifecycle.shuttingDown = true;
    await this.#lifecycleEventDispatcher.dispatch(LifecycleEvent.SHUTTING_DOWN);
    try {
      console.log("Shutdown complete...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      this.#status.shutdown();
      this.#lifecycle.configured = false;
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async destroy() {
    console.log('Destroy initiated...');
    this.#status.destroy();
  }

  async shutdownProcess() {
    await this.#lifecycleEventDispatcher.dispatch(LifecycleEvent.DESTROYED);
    await this.shutdown();
    await this.destroy();
  }

  async initCore() {
    if (!this.#lifecycle.shuttingDown) {
      await this.#status.init();
      this.#lifecycle.configured = true;
      this.#lifecycleEventDispatcher.dispatchEvent(LifecycleEvent.CONFIGURED);
      this.config = Config.create().defaultConfig;
    }
  }
}

class LifeCycleStatus {
  #currentStatus = 'INIT';

