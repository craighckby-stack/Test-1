class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  #defaultConfig = {
    foo: 'bar',
    baz: true,
    loaded: false
  };

  #configSchema = {
    type: 'object',
    properties: {
      foo: { type: 'string' },
      baz: { type: 'boolean' }
    }
  };

  static create(values = {}) {
    return new Config(values);
  }

  #constructorSignature;

  private constructor(values = {}) {
    this.#setValues.apply(this, values);
  }

  private #setValues(...args) {
    this.constructorSignature = args;
    Object.assign(this, ...args);
    this.validate();
    return this;
  }

  get config() {
    return { ...this.#staticConfig, ...this.#defaultConfig, ...this };
  }

  get staticConfig() {
    return this.#staticConfig;
  }

  get defaultConfig() {
    return this.#defaultConfig;
  }

  get configSchema() {
    return this.#configSchema;
  }

  static get ConfigSchemaName() {
    return 'ConfigSchema';
  }

  validate() {
    try {
      const { Validator } = require('jsonschema');
      const validator = new Validator();
      validator.checkSchema(this.#configSchema);
      validator.validate(this.config, this.#configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

class LifecycleEvent {
  static CONFIGURED = 'CONFIGURED';
  static LOADED = 'LOADED';
  static SHUTTING_DOWN = 'SHUTTING_DOWN';
  static SHUTDOWN = 'SHUTDOWN';
  static DESTROYED = 'DESTROYED';

  constructor(event) {
    this.event = event;
  }
}

class LifecycleHandler {
  private handler;

  private constructor(handler) {
    this.handler = handler;
  }

  bind(target = this) {
    if (typeof target === 'function') {
      throw new TypeError(`Target ${target.name} is a function and does not have a prototype`);
    }
    this.handler = this.handler.bind(target);
    return this;
  }

  execute() {
    this.handler();
  }
}

class NexusCore {
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  #status = "INIT";

  private constructor() {
    this.status = "INIT";
  }

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  private constructor(lifecycleEventHandlers = {}) {
    this.#lifecycle = lifecycleEventHandlers.lifecycle || this.#lifecycle;
    this.#status = lifecycleEventHandlers.status || this.#status;
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  get bindLifecycleEvent() {
    return (event, handler) => {
      const lifecycleEvent = new LifecycleEvent(event);
      lifecycleEventHandlers.lifecycle = this.#lifecycle;
      return new LifecycleHandler(handler);
    };
  }

  get bindLifecycleEvents() {
    return (event, handler) => {
      const lifecycleEvent = new LifecycleEvent(event);
      this.#lifecycle[lifecycleEvent.event] = new LifecycleHandler(handler);
      return lifecycleEventHandlers;
    };
  }

  get lifecycleEventHandlers() {
    return {
      CONFIGURED: new LifecycleHandler(() => {
        this.#lifecycle.configured = true;
        this.config = Config.create().defaultConfig;
      }),
      LOADED: new LifecycleHandler(() => {
        this.#lifecycle.loaded = true;
      }),
      SHUTTING_DOWN: new LifecycleHandler(() => {
        this.#lifecycle.shuttingDown = true;
      }),
      SHUTDOWN: new LifecycleHandler(() => {
        this.#lifecycle.shuttingDown = false;
        this.#status = "SHUTDOWN";
      }),
      DESTROYED: new LifecycleHandler(() => {
        this.#lifecycle = {
          configured: false,
          loaded: false,
          shuttingDown: false
        };
      })
    };
  }

  async init() {
    if (!this.#lifecycle.shuttingDown) {
      throw new Error('NexusCore has not been configured yet');
    }
    this.status = "INIT";
  }

  async configure(config) {
    await this.validateConfig(config);
  }

  async validateConfig(config) {
    try {
      const { Validator } = require('jsonschema');
      const validator = new Validator();
      validator.checkSchema(Config.configSchema);
      validator.validate(config, Config.configSchema);
      return config;
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  async load() {
    if (!this.#lifecycle.shuttingDown && this.#lifecycle.configured) {
      try {
        console.log('Loading...');
        await new Promise(resolve => setTimeout(resolve, 1000));
        console.log('Loading complete...');
        this.#lifecycle.loaded = true;
      } catch (e) {
        console.error('Load error:', e);
      }
    }
  }

  async startup() {
    await this.configure(Config.create().defaultConfig);
    await this.load();
  }

  async shutdown() {
    console.log('Shutdown initiated...');
    this.#lifecycle.shuttingDown = true;
    await this.executeLifecycleEvent(LifecycleEvent.SHUTTING_DOWN);
    try {
      console.log("Shutdown complete...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      this.status = "SHUTDOWN";
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async destroy() {
    console.log('Destroy initiated...');
    this.status = "DESTROYED";
  }

  async shutdownProcess() {
    await this.shutdown();
    await this.destroy();
  }

  async initCore() {
    if (this.#lifecycle.shuttingDown) {
      throw new Error('Cannot initialize while shutting down!');
    }
    const lifecycle = this.#lifecycle;
    const lifecycleEventHandlers = this.bindLifecycleEventHandlers();
    lifecycle.configured = true;
    this.config = Config.create().defaultConfig;
    this.status = "CONFIGURED";
  }

  async executeLifecycleEvent(event) {
    const lifecycleEvent = new LifecycleEvent(event);
    if (this.#lifecycle[lifecycleEvent.event]) {
      this.#lifecycle[lifecycleEvent.event].bind(this).execute();
    }
  }
}

const nexusCore = new NexusCore();
nexusCore.bindLifecycleEvent(LifecycleEvent.DESTROYED, () => {
  console.log("NexusCore instance destroyed.");
});

nexusCore.initCore();
nexusCore.startup();
nexusCore.shutdownProcess();