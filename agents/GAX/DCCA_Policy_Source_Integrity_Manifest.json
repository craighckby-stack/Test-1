class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  #defaultConfig = {
    foo: 'bar',
    baz: true
  };

  #configSchema = {
    type: 'object',
    properties: {
      foo: { type: 'string' },
      baz: { type: 'boolean' }
    }
  };

  static create(values = {}) {
    return new Config(values);
  }

  constructor(values = {}) {
    this.#setValues(values);
  }

  #setValues(values) {
    Object.assign(this, values);
    this.validate();
    return this;
  }

  get config() {
    return { ...this.#staticConfig, ...this.#defaultConfig, ...this };
  }

  get staticConfig() {
    return this.#staticConfig;
  }

  get defaultConfig() {
    return this.#defaultConfig;
  }

  get configSchema() {
    return this.#configSchema;
  }

  validate() {
    try {
      const { Validator } = require('jsonschema');
      const validator = new Validator();
      validator.checkSchema(this.#configSchema);
      validator.validate(this, this.#configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

class LifecycleEvent {
  static CONFIGURED = 'CONFIGURED';
  static LOADED = 'LOADED';
  static SHUTTING_DOWN = 'SHUTTING_DOWN';
  static SHUTDOWN = 'SHUTDOWN';
  static DESTROYED = 'DESTROYED';

  constructor(event) {
    this.event = event;
  }
}

class LifecycleHandler {
  constructor(handler) {
    this.handler = handler;
  }

  bind(target = this) {
    this.handler = this.handler.bind(target);
    return this;
  }

  execute() {
    this.handler();
  }
}

class NexusCore {
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  #status = "INIT";

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  configure(config) {
    if (this.#lifecycle.shuttingDown) {
      throw new Error('Cannot configure while shutting down!');
    }
    this.validateConfig(config);
    this.onLifecycleEvent(LifecycleEvent.CONFIGURED, () => {
      this.#lifecycle.configured = true;
      this.config = config;
    });
  }

  async validateConfig(config) {
    try {
      const { Validator } = require('jsonschema');
      const validator = new Validator();
      validator.checkSchema(Config.configSchema);
      validator.validate(config, Config.configSchema);
      return config;
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  onLifecycleEvent(event, handler) {
    const lifecycleHandler = new LifecycleHandler(handler);
    this.#lifecycle[event] = lifecycleHandler;
  }

  get bindLifecycleEvent() {
    return (event, handler) => {
      const lifecycleEvent = new LifecycleEvent(event);
      this.onLifecycleEvent(event, handler);
    };
  }

  executeLifecycleEvent(event) {
    if (this.#lifecycle[event]) {
      this.#lifecycle[event].bind(this).execute();
    }
  }

  async init() {
    throw new Error('Not implemented');
  }

  async startup() {
    await this.configure(Config.create().defaultConfig);
    await this.load();
  }

  async load() {
    if (!this.#lifecycle.shuttingDown) {
      if (!this.#lifecycle.configured) {
        throw new Error('Cannot load while not configured!');
      }
      await this.executeLifecycleEvent(LifecycleEvent.CONFIGURED);
      try {
        console.log("Loading...");
        await new Promise(resolve => setTimeout(resolve, 1000));
        console.log("Loading complete...");
        this.#lifecycle.loaded = true;
        await this.executeLifecycleEvent(LifecycleEvent.LOADED);
      } catch (e) {
        console.error('Load error:', e);
      }
    }
  }

  async shutdown() {
    if (!this.#lifecycle.shuttingDown) {
      console.log("Shutdown initiated...");
      this.#lifecycle.shuttingDown = true;
      await this.executeLifecycleEvent(LifecycleEvent.SHUTTING_DOWN);
      try {
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
        await new Promise(resolve => setTimeout(resolve, 1000));
      } catch (e) {
        console.error("Shutdown error:", e);
      }
    }
  }

  async destroy() {
    if (!this.#lifecycle.shuttingDown) {
      this.status = "DESTROYED";
      this.#lifecycle = {
        configured: false,
        loaded: false,
        shuttingDown: false
      };
    }
  }

  async shutdownProcess() {
    await this.shutdown();
    await this.destroy();
  }
}

const nexusCore = new NexusCore();
nexusCore.bindLifecycleEvent(LifecycleEvent.DESTROYED, () => {
  console.log("NexusCore instance destroyed.");
});

nexusCore.startup();
nexusCore.shutdownProcess();