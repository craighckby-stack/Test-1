{
  "service_id": "AASS_V1",
  "service_name": "Artifact Attestation and Signing Service",
  "purpose": "Provides highly secure, cryptographic signing and timestamping for critical, non-mutable system artifacts (Certification, State Receipts, Manifests). Maintains immutable commitment integrity using isolated HSM facilities.",
  "schema_references": {
    "dial_certification_input": "registry/schemas/DARM_RCA_Output.json",
    "state_transition_receipt_input": "registry/schemas/S14_Verification_Data.json",
    "chr_manifest_input": "registry/schemas/CHR_Schema.json"
  },
  "interfaces": [
    {
      "method": "POST",
      "path": "/sign/dial_certification",
      "description": "Signs the validated DIAL Certification artifact.",
      "input_ref": "dial_certification_input",
      "required_policy": "POLICY_AASS_DIAL_V1",
      "output_artifact_type": "JWS/Ed25519",
      "attestation_key_alias": "KID_DIAL_001"
    },
    {
      "method": "POST",
      "path": "/seal/state_transition_receipt",
      "description": "Seals the verified State Transition Receipt.",
      "input_ref": "state_transition_receipt_input",
      "required_policy": "POLICY_AASS_STATE_V1",
      "output_artifact_type": "JWS/P-521",
      "attestation_key_alias": "KID_STR_002"
    },
    {
      "method": "POST",
      "path": "/attest/configuration_hash_registry",
      "description": "Signs and applies an RFC 3161 Timestamp to the Configuration Hash Registry Manifest.",
      "input_ref": "chr_manifest_input",
      "required_policy": "POLICY_AASS_CHR_V1",
      "output_artifact_type": "Signed/Timestamped_Manifest",
      "attestation_key_alias": "KID_CHR_003"
    }
  ],
  "security_spec": {
    "key_management_provider": "Internal-HSM/v3",
    "policy_enforcement_engine": "SPEE_Integrated_V2",
    "logging": "Mandatory write to L-9 immutable audit log, including request headers and policy enforcement results.",
    "key_policies_config_ref": "security/aass_key_policies.json"
  },
  "operational_constraints": {
    "throughput_target_rps": 50,
    "max_signature_latency_ms": 65,
    "service_criticality_level": 5
  }
}