{
  "metadata": {
    "schema_version": "2.1.0",
    "name": "Global_Dimensional_Velocity_Model",
    "description": "Standardized configuration defining feature space topology, real-time change monitoring (velocity), and systemic data governance rules."
  },
  "feature_space_topology": {
    "embedding_size": 768,
    "quantization_profile": {
      "type": "PRODUCT_QUANTIZATION",
      "bits_per_centroid": 8
    }
  },
  "vector_indexing_config": {
    "index_algorithm": "HNSW",
    "similarity_metric": "cosine",
    "optimization_target": "MAX_RECALL",
    "indexing_parameters": {
      "M": 32,
      "ef_construction": 200,
      "reindex_trigger_load": 0.85,
      "hnsw_optimization_mode": "IN_MEMORY_PRELOAD"
    }
  },
  "runtime_velocity_metrics": {
    "aggregation_window_ms": 3600000,
    "anomaly_thresholds": {
      "relative_std_dev_multiplier": 3.0,
      "min_change_percentage": 0.05
    },
    "rate_control": {
      "debounce_ms": 500,
      "max_ingress_rps": 1000,
      "throttle_mode": "DYNAMIC_BACKPRESSURE"
    },
    "event_retention_days": 7
  },
  "data_governance_policies": {
    "data_lifespan": {
      "auto_pruning_enabled": true,
      "stale_age_days": 30
    },
    "schema_validation": {
      "enforcement_level": "STRICT_WARN",
      "integrity_check_frequency_hours": 6
    },
    "privacy_compliance": {
      "pii_masking_enabled": false,
      "default_masking_algorithm": "NONE",
      "auditing_level": "METADATA_ONLY"
    }
  }
}