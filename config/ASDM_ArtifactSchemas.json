{
  "SchemaVersion": "ASDM_V94.1",
  "Description": "Defines strict JSON schemas for all core artifacts used in the Sovereign AGI processing loop, ensuring reliable data transmission and state integrity.",
  "Registry": {
    "TaskDefinition": {
      "id": "ASDM:TD:V1",
      "version": 1,
      "description": "A detailed instruction set and objective for an execution cycle.",
      "required_fields": [
        "objective",
        "priority_level",
        "expected_output_type"
      ],
      "schema_definition": {
        "type": "object",
        "properties": {
          "objective": { "type": "string" },
          "context_hash": { "type": "string" },
          "priority_level": { "type": "integer", "minimum": 1, "maximum": 100 },
          "expected_output_type": { "type": "string", "enum": [ "CodeArtifact", "DesignArtifact", "ConfigurationUpdate", "Report" ] },
          "required_capabilities": { "type": "array", "items": { "type": "string" } }
        },
        "required": [
          "objective",
          "priority_level",
          "expected_output_type"
        ]
      }
    },
    "CodeArtifact": {
      "id": "ASDM:CA:V1",
      "version": 1,
      "description": "Evolved or newly scaffolded source code file.",
      "required_fields": [
        "path",
        "content",
        "checksum"
      ],
      "schema_definition": {
        "type": "object",
        "properties": {
          "path": { "type": "string", "format": "uri-reference" },
          "language": { "type": "string" },
          "content": { "type": "string" },
          "checksum": { "type": "string", "pattern": "^[a-fA-F0-9]{64}$" },
          "dependency_imports": { "type": "array", "items": { "type": "string" } }
        },
        "required": [
          "path",
          "content",
          "checksum"
        ]
      }
    },
    "ObservationReport": {
      "id": "ASDM:OR:V1",
      "version": 1,
      "description": "Result and feedback captured from execution or environment scanning.",
      "required_fields": [
        "source_task_id",
        "result_status",
        "timestamp"
      ],
      "schema_definition": {
        "type": "object",
        "properties": {
          "source_task_id": { "type": "string" },
          "result_status": { "type": "string", "enum": [ "SUCCESS", "FAILURE", "PARTIAL" ] },
          "log_trace": { "type": "string" },
          "metrics": { "type": "object" }
        },
        "required": [
          "source_task_id",
          "result_status"
        ]
      }
    }
  }
}