class NexusCore {
  constructor() {
    this.#genkit = new Genkit();
    this.#db = new Firestore();
  }

  async start() {
    const startMethodOrder = ["init", "load", "shutdown"];
    const synergyManager = await this.#genkit.configureSynergy();
    for (const methodName of startMethodOrder) {
      if (this[methodName] instanceof Function) {
        await this[methodName](synergyManager);
      }
    }
  }

  async init() {
    const db = new Firestore();
    const toolsRef = db.collection('Tools');
    const toolsCode = await toolsRef.get();
    toolsCode.docs.forEach(doc => {
      const tool = doc.data();
      this.#genkit.registerTool(tool);
    });
  }

  async load(synergyManager) {
    const db = new Firestore();
    const toolsRef = db.collection('Tools');
    const toolsCode = await toolsRef.get();
    toolsCode.docs.forEach(doc => {
      const tool = doc.data();
      synergyManager.injectTools({ tool, code: tool });
    });
  }

  async shutdown() {
    await this.#genkit.shutdownSynergy();
  }

  async destroy() {
    await this.#genkit.destroy();
  }

  async getHeartbeatInterval() {
    return Google.HearbeatInterval;
  }

  async getWatchdogTimeout() {
    return Google.WatchdogTimeout;
  }

  async getStallerReset() {
    return Google.StallerReset;
  }

  async injectIIFE(toolCode) {
    const iife = Google.IIFEInjection(toolCode);
    return iife;
  }

  async loadContext(toolCode) {
    const context = Google.DynamicContextLoading(toolCode);
    return context;
  }

  async discoverTools() {
    const db = new Firestore();
    const toolsRef = db.collection('Tools');
    const toolsCode = await toolsRef.get();
    return toolsCode.docs;
  }
