{
  "$schema": "./config.schema.json",
  "governance_registry": {
    "description": "Configuration settings for accessing the external Governance Parameter Registry (GPR).",
    "service_config": {
      "endpoint": "https://governance.svc/v1/parameters",
      "resilience": {
        "cache_ttl_seconds": 3600,
        "cache_jitter_percent": 15,
        "request_timeout_ms": 5000,
        "max_retries": 3
      },
      "security": {
        "authentication_mode": "IAM_TOKEN",
        "iam_scope": "gpr:read_config"
      }
    },
    "parameter_management": {
      "version_strategy": "LATEST_GOVERNED",
      "schema_validation_enabled": true,
      "required_sets": [
        {
          "name": "Efficacy_Weights_Q3",
          "prefix": "GPR:EFCY",
          "criticality": "STARTUP"
        },
        {
          "name": "Risk_Controls_Q3",
          "prefix": "GPR:RISK",
          "criticality": "STARTUP"
        }
      ]
    }
  }
}