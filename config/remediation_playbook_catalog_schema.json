{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agi.sovereign/schemas/remediation_playbook_catalog_schema.json",
  "title": "Sovereign AGI Remediation Playbook Catalog",
  "description": "A catalog mapping known remediation scenarios to specific, executable playbooks. Keys are the unique Playbook IDs.",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    "^[a-zA-Z0-9_-]+$": {
      "$ref": "#/definitions/Playbook"
    }
  },
  "definitions": {
    "Playbook": {
      "type": "object",
      "required": [
        "id",
        "version",
        "metadata",
        "target_system",
        "steps"
      ],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the playbook (must match the key in the catalog object)."
        },
        "version": {
          "type": "string",
          "format": "semver",
          "description": "Semantic version of the playbook (e.g., 1.0.0)."
        },
        "status": {
          "type": "string",
          "enum": [
            "ACTIVE",
            "DEPRECATED",
            "EXPERIMENTAL",
            "FROZEN"
          ],
          "default": "EXPERIMENTAL"
        },
        "metadata": {
          "type": "object",
          "required": [
            "name",
            "description",
            "category"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "category": {
              "type": "string",
              "description": "e.g., Network, Security, Data_Integrity"
            },
            "author": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "prerequisites": {
          "type": "array",
          "description": "List of required setup checks or external systems that must be available.",
          "items": {
            "type": "string"
          }
        },
        "target_system": {
          "type": "object",
          "required": [
            "type",
            "os_compatibility"
          ],
          "properties": {
            "type": {
              "type": "string",
              "description": "e.g., K8S_CLUSTER, LINUX_HOST, CLOUD_RESOURCE"
            },
            "os_compatibility": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "e.g., RHEL_8, Ubuntu_20.04"
              }
            }
          },
          "additionalProperties": false
        },
        "security_context": {
          "type": "string",
          "enum": [
            "ROOT_PRIVILEGE",
            "MINIMAL_PRIVILEGE",
            "AGENT_CONTEXT"
          ],
          "default": "MINIMAL_PRIVILEGE",
          "description": "Required privilege level for successful execution."
        },
        "steps": {
          "type": "array",
          "minItems": 1,
          "description": "The sequence of atomic actions to be executed.",
          "items": {
            "$ref": "#/definitions/Step"
          }
        }
      },
      "additionalProperties": false
    },
    "Step": {
      "type": "object",
      "required": [
        "name",
        "action"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "Human-readable name for the step."
        },
        "action": {
          "type": "string",
          "description": "The executable module or atomic function to invoke (e.g., 'shell_exec', 'api_call', 'filesystem_op')."
        },
        "params": {
          "type": "object",
          "description": "Key-value pairs passed as runtime arguments to the action handler."
        },
        "failure_policy": {
          "type": "string",
          "enum": [
            "CONTINUE",
            "HALT",
            "RETRY"
          ],
          "default": "HALT"
        },
        "timeout_seconds": {
          "type": "integer",
          "minimum": 5,
          "description": "Maximum time allowed for this step before failure."
        }
      },
      "additionalProperties": false
    }
  }
}