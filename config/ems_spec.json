{
  "ems_version": "V2.0.0-PRO_FUSION",
  "actor_name": "Efficacy Measurement Subsystem (EMS)",
  "description": "Normalized configuration for deterministic generation and validation across all governance artifact stages (S07, S08). Centralizes thresholds and defines stages sequentially for improved extensibility.",

  "global_thresholds": {
    "OMEGA_MIN_COMPUTE": {
      "value": 0.985,
      "provenance_id": "GAX-I-BASELINE-T2"
    },
    "OMEGA_MAX_LATENCY_MS": {
      "value": 50,
      "provenance_id": "GAX-I-BASELINE-T2"
    },
    "H_SEC_94A3_ENV": {
      "value": "H_SEC_94A3",
      "provenance_id": "SECURITY-POLICY-V9.4"
    }
  },

  "process_stages": [
    {
      "stage_id": "S07",
      "artifact_output": "ECVM",
      "governance_axiom": "GAX II",
      "type": "ContextualValidation",
      "description": "Ensuring system integrity prior to artifact generation.",
      "rules": [
        {
          "rule_id": "ENV_001",
          "name": "Operating Environment Hash Check",
          "target_resource": "OperatingEnvironment",
          "threshold_key": "H_SEC_94A3_ENV",
          "operator": "==",
          "action_on_mismatch": "Fail (Contextual Integrity Violation)"
        },
        {
          "rule_id": "ENV_002",
          "name": "Dependency Manifest State Compliance",
          "target_resource": "DependencyManifest",
          "allowed_states": ["Stable", "Quiescent"],
          "min_required_passing": 2
        }
      ]
    },
    {
      "stage_id": "S08",
      "artifact_output": "TEMM",
      "governance_axiom": "GAX I",
      "type": "EfficacyMeasurement",
      "description": "Quantitative assessment of system utility metrics.",
      "metrics": [
        {
          "metric_id": "UTIL_001_COMP",
          "name": "Computational Efficiency Delta",
          "unit": "ratio",
          "operator": ">=",
          "threshold_key": "OMEGA_MIN_COMPUTE"
        },
        {
          "metric_id": "UTIL_002_LAT",
          "name": "Latency Profile Tolerance",
          "unit": "ms",
          "operator": "<=",
          "threshold_key": "OMEGA_MAX_LATENCY_MS"
        }
      ]
    }
  ]
}