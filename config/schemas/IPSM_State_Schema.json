{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://sovereign.agi/schemas/IPSM_State_Schema.json",
  "title": "IPSM Runtime State Schema",
  "description": "Defines the mandatory state structure for the Intelligent Process Supervision Module.",
  "type": "object",
  "properties": {
    "active_agents": {
      "description": "List of currently supervised agent IDs.",
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[A-Z]{3}-[0-9]{4}$"
      }
    },
    "resource_utilization": {
      "description": "Current aggregated resource usage metrics.",
      "type": "object",
      "properties": {
        "cpu_load_percent": {
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "memory_mb": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["cpu_load_percent", "memory_mb"]
    },
    "last_heartbeat_ms": {
      "type": "integer",
      "description": "Timestamp of the last successful synchronization heartbeat."
    }
  },
  "required": ["active_agents", "resource_utilization", "last_heartbeat_ms"]
}