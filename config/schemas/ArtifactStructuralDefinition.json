{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GSEP Artifact Structural Definition Model (ASDM)",
  "description": "Defines the mandatory structural schemas for critical GSEP artifacts (L0-L5) for SCR and ACM validation.",
  "definitions": {
    "ContextFrameManifest": {
      "type": "object",
      "properties": {
        "version": { "type": "string", "pattern": "^V\\d+\.\\d+" },
        "proposal_id": { "type": "string", "format": "uuid" },
        "source_hash": { "type": "string", "format": "SHA256" },
        "target_component": { "type": "string" },
        "scope_verified": { "type": "boolean" }
      },
      "required": ["version", "proposal_id", "source_hash", "target_component", "scope_verified"]
    },
    "DecisionalStateCheckpoint": {
      "type": "object",
      "properties": {
        "commitment_ts": { "type": "string", "format": "date-time" },
        "parent_manifest_hash": { "type": "string" },
        "p01_result": { "type": "boolean" },
        "s01_score": { "type": "number", "minimum": 0 },
        "s02_score": { "type": "number", "minimum": 0 },
        "final_signature": { "type": "string", "description": "Cryptographic signature of the L4 GCO decision." }
      },
      "required": ["commitment_ts", "parent_manifest_hash", "p01_result", "s01_score", "s02_score", "final_signature"]
    }
  },
  "components": {
    "C-FRAME-V1": { "$ref": "#/definitions/ContextFrameManifest" },
    "DSC-V1": { "$ref": "#/definitions/DecisionalStateCheckpoint" }
  }
}