class Config {
  static getConfig() {
    return {
      VERSION: "1.0.0",
      env: process.env.NODE_ENV || "development"
    };
  }

  static getDefaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static getConfigSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
  }

  constructor(values = {}) {
    this.values = values;
  }

  validate() {
    const schema = Config.getConfigSchema();
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(this.values, schema);
    } catch (e) {
      throw e;
    }
  }
}

class LifecycleEvent {
  constructor(event, payload = {}) {
    this.event = event;
    this.payload = payload;
  }
}

class LifecycleHandler {
  constructor(handler) {
    this.handler = (...args) => handler(...args);
  }

  bind(target = this) {
    this.handler = this.handler.bind(target);
  }

  execute(...args) {
    this.handler(...args);
  }
}

class NexusCore {
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  #status = 'INIT';

  get status() {
    return this.#status;
  }

  set status(value) {
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    this.#lifecycle.configured &= value !== 'INIT';
    this.#lifecycle.loaded &= value !== 'INIT';
    this.#lifecycle.shuttingDown &= value === 'SHUTDOWN';
    this.#status = value;
  }

  lifecycle = this.#lifecycle;

  async configure(config) {
    if (!(await config.validate())) {
      throw new Error('Invalid configuration');
    }
    this.on('CONFIGURED');
    this.#lifecycle.configured = true;
    this.config = config;
    this.status = 'CONFIGURED';
  }

  async load() {
    this.on('CONFIGURED');
    try {
      await new Promise(resolve => setTimeout(resolve, 1000));
      this.#lifecycle.loaded = true;
      this.on('LOADED');
    } catch (e) {
      this.on('FAILED_LOAD');
      throw e;
    }
    this.status = 'LOADED';
  }

  async shutdown() {
    if (!this.#lifecycle.shuttingDown) {
      this.on('SHUTDOWN_INITIATED');
      this.#lifecycle.shuttingDown = true;
      this.on('SHUTTING_DOWN');
      console.log("Shutdown complete...");
      this.status = 'SHUTDOWN';
    }
  }

  async start() {
    const methods = ['configure', 'load', 'shutdown'];
    for (const method of methods) {
      if (this[method] && typeof this[method] === 'function') {
        await this[method]();
      }
    }
  }

  async destroy() {
    this.status = 'DESTROYED';
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
  }

  on(event, handler) {
    const lifecycleHandler = new LifecycleHandler(handler);
    this.#lifecycle[event] = lifecycleHandler;
  }

  async handler(event, ...args) {
    if (this.#lifecycle[event]) {
      return this.#lifecycle[event].bind(this).execute(...args);
    }
  }

  async triggerEvent(event, ...args) {
    this.status = event;
    return this.handler(event, ...args);
  }
}

