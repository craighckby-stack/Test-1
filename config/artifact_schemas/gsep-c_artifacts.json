{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://sovereign.agi/schemas/config/artifact_schemas/gsep-c_artifacts.json",
  "description": "Defines immutable data contracts (JSON Schema) for artifacts exchanged between GSEP-C State Machine stages, leveraging JSON Schema composition and standardization.",
  "$defs": {
    "UUID": {
      "type": "string",
      "description": "Standard UUID v4 format.",
      "pattern": "^[0-9a-fA-F]{8}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{4}-[0-9a-fA-F]{12}$"
    },
    "SHA256": {
      "type": "string",
      "description": "Standard 256-bit SHA256 hash string.",
      "minLength": 64,
      "maxLength": 64
    },
    "TimestampUTC": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 formatted timestamp (must include Z suffix)."
    }
  },
  "contracts": {
    "GSEP-C-A01": {
      "name": "S00_START_TOKEN",
      "version": "1.1",
      "immutability_enforced": true,
      "schema": {
        "type": "object",
        "properties": {
          "token_id": {
            "$ref": "#/$defs/UUID",
            "description": "Unique execution instance identifier."
          },
          "timestamp_utc": {
            "$ref": "#/$defs/TimestampUTC"
          },
          "initial_vector_hash": {
            "$ref": "#/$defs/SHA256",
            "description": "Hash of the initial system state vector."
          }
        },
        "required": [
          "token_id",
          "timestamp_utc",
          "initial_vector_hash"
        ],
        "additionalProperties": false
      }
    }
    // Placeholder for GSEP-C-A02 through GSEP-C-A22 artifacts...
  }
}