{
  "metadata": {
    "module_name": "ViabilityMarginOracle",
    "version": "2.0.0-R1",
    "description": "Defines the calculation kernel and phase-dependent weighting profiles for dynamically computing the P-01 viability margin (epsilon), ensuring safety margins adapt proactively to systemic volatility and operational context."
  },
  "io_schema": {
    "inputs": [
      { "ref": "S-02_sigma", "label": "SystemicRiskVolatility" },
      { "ref": "L0_ReEntry_Ratio", "label": "RecentStateTransitionFailureRate" },
      { "ref": "RSL", "label": "ResourceSaturationLevel" }
    ],
    "output_metric": {
      "ref": "P-01_Epsilon_Margin",
      "label": "Viability Margin Epsilon"
    }
  },
  "model_config": {
    "core": {
      "type": "AdaptivePolynomialModel",
      "formula_reference": "VMO-CALC-R4.2"
    },
    "parameters": {
      "base_epsilon_static": 0.005,
      "enforcement_bounds": {
        "min_epsilon": 0.001,
        "max_epsilon": 0.150
      },
      "default_phase": "OPERATIONAL_NORMAL",
      "weight_profiles": {
        "OPERATIONAL_NORMAL": {
          "S-02_sigma": 1.0,
          "L0_ReEntry_Ratio": 3.0,
          "RSL": 0.7
        },
        "DEGRADED_PERFORMANCE": {
          "S-02_sigma": 1.8,
          "L0_ReEntry_Ratio": 4.5,
          "RSL": 1.5
        },
        "CRITICAL_FAILURE_IMMINENT": {
          "S-02_sigma": 2.5,
          "L0_ReEntry_Ratio": 6.0,
          "RSL": 3.0
        }
      }
    }
  }
}