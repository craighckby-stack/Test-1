{
  "version": "1.1.0",
  "name": "EPDU_SecureArchival_Spec",
  "description": "Formalized specification for secure, immutable archival requirements for cryptographically signed Forensic Data & Log Snapshots (FDLS). Mandatory for GAX I compliance verification.",
  "regulatory_context": {
    "primary_compliance_standard": "GAX_I_Financial",
    "required_immutability_level": "WORM_L4_Strict",
    "audit_log_version": "SA_44.3"
  },
  "archive_policy": {
    "storage": {
      "medium_class": "WORM_L4_Strict",
      "implementation_alias": "Vault_Shard_P7_Cold",
      "access_tier": "Archive",
      "min_storage_redundancy": "Triple_Zonal_Replication"
    },
    "security": {
      "encryption_standard": "AES-256-GCM",
      "key_management_system": "Internal_KMS_Cluster_R6",
      "retention": {
        "type": "Policy_Based",
        "minimum_years": 10,
        "maximum_duration_code": "REGULATORY_LITIGATION_HOLD"
      }
    }
  },
  "data_integrity": {
    "hash_algorithm": "SHA-512",
    "signature_check": {
      "field": "AASS_Signature",
      "utility_service": "AASS_PKI_Lookup_Service_v3"
    },
    "required_metadata_fields": [
      "P_Set_Trigger_ID",
      "IH_Timestamp_UTC",
      "FDLS_Integrity_Hash",
      "Originating_Node_ID"
    ]
  },
  "transmission": {
    "protocol": "SECURE_ZERO_KNOWLEDGE_RPC",
    "maximum_latency_ms": 500,
    "bandwidth_policy": "Tier_1_Priority"
  }
}