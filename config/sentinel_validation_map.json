{
  "validation_groups": {
    "API_INBOUND_V1": {
      "description": "Validation rules applied to all incoming V1 API payloads.",
      "strategy": "CRITICAL_FAILFAST",
      "default_enforcement": true,
      "mappings": [
        {
          "sentinelId": "USER_REGISTRATION_POST",
          "type": "JSON_SCHEMA_REF",
          "ref": "$/api_schemas.json#/definitions/V1/UserCreation",
          "options": { "coerceTypes": true }
        },
        {
          "sentinelId": "SYSTEM_HEALTH_GET",
          "type": "NONE",
          "options": { "loggingLevel": "DEBUG" }
        }
      ]
    },
    "INTERNAL_STATE_TRANSITIONS": {
      "description": "Internal integrity checks between state modules.",
      "strategy": "SOFT_REPORT_ALL",
      "default_enforcement": true,
      "mappings": [
        {
          "sentinelId": "TASK_MANAGER_UPDATE",
          "type": "CUSTOM_HANDLER",
          "handlerPath": "@internal/validation/TaskManagerHandler"
        },
        {
          "sentinelId": "LOG_INTEGRITY_CHECKPOINT",
          "type": "CUSTOM_HANDLER",
          "handlerPath": "@internal/governance/LogIntegrityValidator"
        }
      ]
    }
  },
  "metadata": {
    "version": "1.2.0",
    "last_updated": "2024-05-30"
  }
}