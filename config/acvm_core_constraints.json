class Config extends Object {
  static get staticConfig() {
    return {
      VERSION: '1.0.0',
      env: process.env.NODE_ENV || 'development',
    };
  }

  constructor({ values = {} }) {
    super();
    this.setValues(values);
  }

  setValues(values) {
    Object.assign(this, values);
    return this;
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true,
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' },
      },
    };
  }

  validate() {
    try {
      const { Validator } = require('jsonschema');
      const validator = new Validator();
      validator.checkSchema(Config.configSchema);
      validator.validate(this, Config.configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

class LifecycleEvent extends Object {
  constructor({ event }) {
    super();
    this.event = event;
  }
}

class LifecycleHandler extends Object {
  constructor({ handler }) {
    super();
    this.handler = handler;
  }

  bind(target = this) {
    this.handler = this.handler.bind(target);
    return this;
  }

  execute() {
    this.handler.call(this);
  }
}

class NexusCore extends Object {
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false,
  };

  #status = 'INIT';

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const { #status, #lifecycle } = this;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        #lifecycle.shuttingDown = false;
      }
    }
    if (#status === 'INIT' && value !== 'INIT') {
      #lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  composeConfig(config) {
    this.validateConfig(config);
    this.onLifecycleEvent('CONFIGURED', () => {
      this.#lifecycle.configured = true;
      this.config = config;
    });
  }

  validateConfig(config) {
    const { Validator } = require('jsonschema');
    const validator = new Validator();
    validator.checkSchema(Config.configSchema);
    validator.validate(config, Config.configSchema);
  }

  onLifecycleEvent(event, handler) {
    const lifecycleHandler = new LifecycleHandler(handler);
    this.#lifecycle[event] = lifecycleHandler;
  }

  executeLifecycleEvent(event) {
    const { event, [event]: lifecycleHandler } = this.#lifecycle;
    if (lifecycleHandler) {
      lifecycleHandler.bind(this).execute();
    }
  }

  async startup() {
    try {
      this.onLifecycleEvent('CONFIGURED', () => {
        this.#lifecycle.configured = true;
      });
      await this.load();
      this.#lifecycle.loaded = true;
      this.executeLifecycleEvent('LOADED');
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  shutdown() {
    this.#lifecycle.shuttingDown = true;
    this.executeLifecycleEvent('SHUTTING_DOWN');
  }

  async start() {
    const startMethodOrder = ['startup', 'shutdown'];
    for (const methodName of startMethodOrder) {
      if (this[methodName] instanceof Function) {
        this[methodName]();
      }
    }
  }

  async destroy() {
    this.status = 'DESTROYED';
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false,
    };
  }

  awaitOn(event, handler) {
    return this.onLifecycleEvent(event, handler);
  }

  async on(event, handler) {
    await this.awaitOn(event, handler);
  }
}

const nexusCore = new NexusCore();
nexusCore.on('DESTROYED', () => {
  console.log('NexusCore instance destroyed.');
});
nexusCore.configure(Config.defaultConfig);
nexusCore.start();
nexusCore.load();
nexusCore.shutdown();
nexusCore.destroy();



