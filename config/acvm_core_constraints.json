const Config = class {
  static get staticConfig({ version = '1.0.0', env = process.env.NODE_ENV || 'development', ...rest }) {
    return {
      version,
      env,
      ...rest,
    };
  }

  constructor({ values = {} }) {
    this.setValues(values);
  }

  setValues(values) {
    return { ...this, ...values };
  }

  static get defaultConfig() {
    return Object.freeze({ foo: 'bar', baz: true });
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' },
      },
    };
  }

  validate() {
    try {
      const { Validator } = require('jsonschema');
      const validator = new Validator();
      validator.checkSchema(Config.configSchema);
      validator.validate(this, Config.configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
};

const LifecycleEvent = class {
  constructor({ event }) {
    this.event = event;
  }
};

const LifecycleHandler = class {
  constructor({ handler }) {
    this.handler = handler;
  }

  bind(target = this) {
    return { ...this, handler: this.handler.bind(target) };
  }

  execute() {
    return this.handler.call(this);
  }
};

const onLifecycleEvent = (eventHandler) => (event, handler) => {
  const lifecycleHandler = new LifecycleHandler({ handler });
  return lifecycleHandler;
};

const executeLifecycleEvent = (lifecycle, event) => {
  const handler = lifecycle[event];
  if (handler) {
    return handler.bind(lifecycle).execute();
  }
};

const NexusCore = class {
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false,
  };

  #status = 'INIT';

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        this.#lifecycle.shuttingDown = false;
      }
    }
    if (this.#status === 'INIT' && value !== 'INIT') {
      this.#lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  composeConfig(config) {
    this.validateConfig(config);
    const CONFIGURED_HANDLER = onLifecycleEvent('CONFIGURED')(config => {
      this.#lifecycle.configured = true;
      this.config = config;
    });
    this.onLifecycleEvent('CONFIGURED', CONFIGURED_HANDLER);
  }

  validateConfig(config) {
    const { Validator } = require('jsonschema');
    const validator = new Validator();
    validator.checkSchema(Config.configSchema);
    validator.validate(config, Config.configSchema);
  }

  onLifecycleEvent(event, handler) {
    return onLifecycleEvent(event)(event, handler);
  }

  executeLifecycleEvent(event) {
    return executeLifecycleEvent(this.#lifecycle, event);
  }

  async startup() {
    try {
      this.onLifecycleEvent('CONFIGURED', async () => {
        this.#lifecycle.configured = true;
      });
      await this.load();
      this.#lifecycle.loaded = true;
      await this.executeLifecycleEvent('LOADED');
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  shutdown() {
    this.#lifecycle.shuttingDown = true;
    this.executeLifecycleEvent('SHUTTING_DOWN');
  }

  async start() {
    const startMethodOrder = ['startup', 'shutdown'];
    for (const methodName of startMethodOrder) {
      if (this[methodName] instanceof Function) {
        await this[methodName]();
      }
    }
  }

  async destroy() {
    this.status = 'DESTROYED';
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false,
    };
  }

  async awaitOn(event, handler) {
    return this.onLifecycleEvent(event, async () => {
      handler();
    });
  }

  async on(event, handler) {
    await this.awaitOn(event, handler);
  }
};

const nexusCore = new NexusCore();
nexusCore.on('DESTROYED', () => {
  console.log('NexusCore instance destroyed.');
});
nexusCore.composeConfig(Config.defaultConfig);
await nexusCore.start();
await nexusCore.load();
await nexusCore.shutdown();
await nexusCore.destroy();



