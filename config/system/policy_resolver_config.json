{
  "resolver_strategy": "HierarchicalFallback",
  "policy_sources": [
    {
      "name": "LocalFS",
      "type": "filesystem",
      "path": "assets/policies/"
    },
    {
      "name": "RemoteRegistry",
      "type": "remote_api",
      "endpoint": "https://policy.registry.agi/v1/",
      "cache_ttl_seconds": 3600
    }
  ],
  "policy_caching": {
    "enabled": true,
    "max_size_mb": 64,
    "invalidation_triggers": [
      "CERTIFICATE_ROTATION",
      "SBCM_HASH_MISMATCH"
    ]
  }
}