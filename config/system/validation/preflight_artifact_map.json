{
  "metadata": {
    "version": "4.0",
    "description": "Normalized and policy-driven index for essential system artifacts used in preflight validation (PFR).",
    "notes": "Version 4.0 standardizes retrieval configuration and abstracts validation mechanisms using specialized 'config' objects."
  },
  "global_policy": {
    "pfr_trigger_context": ["INITIAL_BOOT", "DEPLOYMENT_COMMIT"],
    "criticality_levels": {
      "BLOCKING": 90,
      "CRITICAL": 70,
      "ADVISORY": 30
    }
  },
  "artifact_map": {
    "TVCR": {
      "name": "Trusted Validator Configuration Register",
      "criticality_level": 90,
      "scope": "SYSTEM_CORE",
      "retrieval": {
        "method": "CACHE_FETCH",
        "primary_source": "ArtifactCache",
        "fallback_policy": "DATABASE_PULL",
        "config": {
          "key": "V_Registry",
          "namespace": "ArtifactCache",
          "consistency": "STRONG"
        }
      },
      "validation": {
        "schema_id": "VCS-44A",
        "ttl_seconds": 3600,
        "integrity": {
          "mechanism": "COUNT_MINIMUM",
          "config": {
            "minimum_value": 1,
            "message": "Configuration register must contain at least one entry."
          }
        }
      }
    },
    "ADEP": {
      "name": "Autonomous Deployment Plan",
      "criticality_level": 70,
      "scope": "EXECUTION_PLANNER",
      "retrieval": {
        "method": "DATABASE_PULL",
        "primary_source": "SystemDB",
        "fallback_policy": "NONE",
        "config": {
          "key": "AD_Planner",
          "namespace": "SystemDB",
          "consistency_level": "STRONG"
        }
      },
      "validation": {
        "schema_id": "ADS-22B",
        "ttl_seconds": 600,
        "integrity": {
          "mechanism": "HASH_COMPARISON",
          "config": {
            "algorithm": "SHA256",
            "source_hash_field": "metadata.checksum"
          }
        }
      }
    },
    "SHEP": {
      "name": "System Health Endpoint Pointers",
      "criticality_level": 30,
      "scope": "COMMUNICATION_LAYER",
      "retrieval": {
        "method": "SERVICE_CALL",
        "primary_source": "DiscoveryService",
        "fallback_policy": "NONE",
        "config": {
          "endpoint": "/v1/health/endpoints",
          "service_name": "DiscoveryService",
          "timeout_ms": 500
        }
      },
      "validation": {
        "schema_id": "HES-10C",
        "ttl_seconds": 120,
        "integrity": {
          "mechanism": "STATUS_CODE_CHECK",
          "config": {
            "expected_code": 200,
            "max_retries": 1
          }
        }
      }
    }
  }
}