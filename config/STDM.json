{
  "manifest_id": "STDM_V99.0",
  "description": "System Telemetry Definition Manifest: Defines required operational performance metrics, tiered resource budget checks, structured reporting templates, and designated ingestion priorities for the Governance Telemetry Bus (GTB). Required by SGS for rigorous S6 checks.",
  "resource_budgets": [
    {
      "metric": "ComputeUsage",
      "unit": "GigaFLOPS",
      "level_definition": {
        "warning": 8500.0,
        "critical": 10000.0
      },
      "reaction_protocols": {
        "warning": "RRP_W_C-A_101",
        "critical": "RRP_C_C-B_101"
      }
    },
    {
      "metric": "MemoryCommitment",
      "unit": "GB",
      "level_definition": {
        "warning": 450.0,
        "critical": 512.0
      },
      "reaction_protocols": {
        "warning": "RRP_W_M-A_102",
        "critical": "RRP_C_M-B_102"
      }
    }
  ],
  "telemetry_endpoints": [
    {
      "stream_name": "AgentHealthStream",
      "format": "JSON_L",
      "priority": "CRITICAL",
      "data_rate_hz": 1.0
    },
    {
      "stream_name": "CISM_Metadata_Stream",
      "format": "Avro",
      "priority": "HIGH",
      "data_rate_hz": 0.1
    }
  ],
  "required_agent_metrics": [
    {
      "name": "Agent_Heartbeat_Latency_ms",
      "target_system": "Kernel_RTOS",
      "interval_ms": 1000,
      "validation_range": [10, 50],
      "violation_policy": "RVP_RT-LATENCY_900"
    },
    {
      "name": "CRoT_Signing_Throughput",
      "target_system": "Trust_Anchor",
      "interval_ms": 5000,
      "validation_range": [100, 500],
      "violation_policy": "RVP_CRYPTO_501"
    },
    {
      "name": "GAX_Policy_Evaluation_Time_ms",
      "target_system": "Governance_Engine",
      "interval_ms": 500,
      "validation_range": [5, 20],
      "violation_policy": "RVP_GOVERNANCE_302"
    }
  ]
}