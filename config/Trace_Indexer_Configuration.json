{
  "service_name": "TraceabilityDataIndexer_L3",
  "version": "1.0.0",
  "description": "Configuration for the validation and indexing service responsible for L3 Traceability Data.",
  "ingress": {
    "protocol": "HTTP/2",
    "endpoint": "/v94/l3/trace/submit",
    "authorization_scheme": "Sovereign-L3-API-Key"
  },
  "validation": {
    "schema_path": "config/Traceability_Data_Schema.json",
    "strict_mode": true,
    "failure_action": "REJECT_AND_LOG_CRITICAL",
    "failure_routing_target": "Failsafe_Telemetry_Archive"
  },
  "persistence": {
    "repository_name": "TR-01_TraceLog",
    "indexing_strategy": "TraceID_Primary_Key",
    "archive_retention_days": 3650
  },
  "downstream_routing": [
    {"target": "S-01_EfficacyProjection_Engine", "priority": 1},
    {"target": "S-02_RiskSynthesis_MCRA", "priority": 2}
  ]
}