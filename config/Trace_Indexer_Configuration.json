{
  "version": "2.1.0",
  "status": "active",
  "service_id": "TraceIndexer_Core_01",
  "configuration_timestamp": "$DATE_TIME$",
  "ingestion_policy": {
    "enabled": true,
    "log_level": "WARN",
    "max_throughput_metrics_per_sec": 100000,
    "buffer_management": {
      "type": "AdaptiveLIFO",
      "max_queue_size_mb": 4096,
      "flush_interval_ms": 5000
    },
    "input_connectors": [
      {
        "name": "OpenTelemetry_Standard",
        "type": "OTLP",
        "protocol": "gRPC",
        "port": 4317
      },
      {
        "name": "Legacy_Zipkin",
        "type": "ZipkinV2",
        "port": 9411,
        "transformation_pipeline": "ZipkinToOTLP"
      }
    ],
    "sampling_policy": {
      "default_rate": 0.95,
      "critical_services_override": [
        {"service": "AuthenticationService", "rate": 1.0},
        {"service": "PaymentGateway", "rate": 1.0}
      ],
      "error_traces_force_sample": true
    }
  },
  "indexing_strategy": {
    "target_backend": "ElasticSearch_V8",
    "cluster_name": "trace-analytics-production",
    "performance_profile": "HighWriteThroughput",
    "index_mapping": {
      "strategy": "DynamicFieldDetection",
      "time_series_pattern": "trace-{YYYY-MM-DD-HH}",
      "shard_count": 5,
      "replica_count": 1
    },
    "data_governance": {
      "retention_policy": {
        "default_days": 45,
        "tag_based_exemptions": [
          {"tag_key": "deployment_stage", "tag_value": "staging", "days": 15},
          {"tag_key": "severity", "tag_value": "P0", "days": 90}
        ]
      },
      "PII_masking_enabled": true
    }
  }
}