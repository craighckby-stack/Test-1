{
  "standard_id": "SOI-94.1-P",
  "state_sync": {
    "protocol": "ZMQ_PUB_SUB",
    "heartbeat_interval_ms": 1000,
    "data_compression": "LZ4"
  },
  "telemetry": {
    "mode": "ADAPTIVE",
    "base_interval_ms": 3000,
    "load_thresholds": {
      "high_load_factor": 0.8,
      "min_reporting_interval_ms": 500
    },
    "endpoint": "/v94/metrics/ingest"
  },
  "logging": {
    "standard_level": "WARNING",
    "audit_level": "CRITICAL_ACTION",
    "output_format": "PROTOBUF",
    "rate_limiting": {
      "max_log_burst": 500,
      "per_second_cap": 100
    }
  },
  "resilience": {
    "failure_policy": "ISOLATE_AND_REPORT",
    "retry_strategy": {
      "algorithm": "JITTERED_EXPONENTIAL",
      "max_attempts": 5,
      "base_delay_ms": 100
    }
  },
  "interface_security": {
    "minimum_tls_version": "TLS_1_3_FIPS",
    "signature_requirement": true
  }
}