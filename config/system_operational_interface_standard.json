{
  "metadata": {
    "systemId": "SOV-AGI-v94.1",
    "interfaceStandard": "OperationalBus",
    "schemaVersion": "3.0.0"
  },
  "operationalBus": {
    "protocolStack": "ZMQ_PULL_PUSH_HEARTBEAT",
    "encoding": "MsgPack",
    "compressionAlgorithm": "ZSTD_Level3",
    "connection": {
      "primaryPort": 9000,
      "telemetryPort": 9001,
      "heartbeat": {
        "intervalMs": 250,
        "timeoutMs": 1000,
        "reconnectionPolicy": "EXPONENTIAL_BACKOFF"
      }
    }
  },
  "securityContext": {
    "authMechanism": "ECDSA_P521_v5",
    "channelEncryptionStandard": "DTLS_1_3_Profile_A",
    "integrityCheck": "SHA512_HMAC_GCM",
    "accessControl": {
      "defaultLevel": "RESTRICTED",
      "policyPath": "security/acl/operational.json"
    }
  },
  "diagnostics": {
    "schemaRef": "schemas/telemetry_operational_v2.json",
    "reporting": {
      "defaultLevel": "INFO",
      "dynamicAdaptivePolicy": true,
      "metricsQueueDepth": 1024
    },
    "criticalMetrics": [
      "cycleTime_P95_ms",
      "memoryUsage_resident_GiB",
      "taskQueueLength_critical",
      "networkLatency_p50_us"
    ]
  },
  "contractDefinitions": [
    {
      "contractName": "StatusQuery",
      "interactionType": "REQ_REP",
      "transportMethod": "PULL",
      "constraints": {
        "rateLimitHz": 20,
        "requiresAuthentication": false
      },
      "schemaOutput": "schemas/status_response_v2.json"
    },
    {
      "contractName": "ConfigUpdate",
      "interactionType": "PUSH_ASYNC",
      "transportMethod": "PUSH",
      "constraints": {
        "rateLimitHz": 0.05,
        "requiresAuthentication": true,
        "requiresHighPrivilege": true
      }
    }
  ]
}