}

class Tokenizer {
  #tokenizer = null;

  constructor() {
    this.#tokenizer = FunctionTokenizer();
  }

  tokenize(input) {
    const tokenizedOutput = this.#tokenizer.tokenize(input);
    return tokenizedOutput;
  }
}

class FunctionTokenizer {
  tokenize(input) {
    // Tokenize the input string
    return input.split(" ");
  }
}


