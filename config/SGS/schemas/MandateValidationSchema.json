{
  "schema_version": "v94.1",
  "schema_name": "SGS_Mandate_Validation_Report",
  "description": "Schema defining the expected data structure for reporting compliance status against a Target Evolution Mandate Manifest.",
  "required_fields": [
    "mandate_id",
    "execution_timestamp",
    "compliance_status",
    "evaluated_metrics",
    "constraint_violations"
  ],
  "field_definitions": {
    "mandate_id": {"type": "string", "description": "Reference ID matching the manifest.", "example": "SGS-EFF-KRNL-202409-001"},
    "compliance_status": {"type": "enum", "values": ["COMPLIANT", "NON_COMPLIANT", "INCONCLUSIVE"]},
    "evaluated_metrics": {
      "type": "array",
      "item_schema": {
        "metric_key": {"type": "string", "description": "e.g., Kernel_Ops/Sec_Certified_MSR"},
        "achieved_value": {"type": "number"},
        "baseline_value": {"type": "number"},
        "delta": {"type": "number", "unit": "percentage_or_absolute"}
      }
    },
    "constraint_violations": {
      "type": "array",
      "item_schema": {
        "constraint_id": {"type": "string"},
        "violated": {"type": "boolean"},
        "actual_value": {"type": "number"},
        "limit_value": {"type": "number"}
      }
    }
  }
}