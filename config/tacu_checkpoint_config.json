{
  "system_label": "TacuEvolutionEngine_A",
  "checkpoint_policy": {
    "enabled": true,
    "root_path_template": "/mnt/agidata/checkpoints/${system_label}/",
    "max_retained_versions": 5,
    "storage_driver": "LocalDisk",
    "serialization_format": "BSON_Compressed",
    "graceful_shutdown_save": true
  },
  "triggers": {
    "temporal": {
      "enabled": true,
      "interval_steps": 5000,
      "throttle_seconds": 300
    },
    "metric_based": {
      "enabled": true,
      "target_metric": "evolution_score_f1",
      "mode": "HighWaterMark",
      "minimum_improvement": 0.01
    },
    "event_driven": {
      "enabled": true,
      "events": ["SystemAnomalyDetected", "ContextSwitchRequest"]
    }
  },
  "metadata_injection": {
    "source_code_hash": true,
    "runtime_config": true,
    "active_context_uuid": true
  }
}