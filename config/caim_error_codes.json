class LifecycleEvent {
  private _event: string;
  private _handler: () => void;

  constructor(event: string, handler: () => void) {
    this._event = event;
    this._handler = handler;
  }

  get event(): string {
    return this._event;
  }

  get handler(): () => void {
    return this._handler;
  }
}

// LifecycleHandler.ts
class LifecycleHandler {
  private _handler: () => void;
  private _target: Object;

  constructor(handler: () => void, target = this) {
    this._handler = handler;
    this._target = target;
  }

  bind(): void {
    this._handler = this._handler.bind(this._target);
  }

  execute(): void {
    this._handler();
  }
}

// Atlas.ts
import { Config } from './Config';

class Atlas {
  private _status: string;
  private _lifecycle: Lifecycle;

  constructor() {
    this._status = 'INIT';
    this._lifecycle = new Lifecycle();
  }

  get status(): string {
    return this._status;
  }

  set status(value: string) {
    this._status = value;
    const lifecycle = this._lifecycle;
    if (value !== 'INIT') {
      console.log(`Atlas instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    if (this._status === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  get lifecycle(): Lifecycle {
    return this._lifecycle;
  }

  configure(config: Config): void {
    config.validate();
    this.onLifecycleEvent('CONFIGURED', () => {
      this._lifecycle.configured = true;
      this.config = config;
    });
  }

  onLifecycleEvent(event: string, handler: () => void): void {
    const lifecycleHandler = new LifecycleHandler(handler);
    this._lifecycle[event] = lifecycleHandler;
  }

  start(): Promise<void> {
    const methods = ['configure', 'load', 'shutdown'];
    return Promise.all(methods.map(methodName => this[methodName]()));
  }

  load(): Promise<void> {
    return this.onLifecycleEvent('CONFIGURED', () => {
      console.log("Loading...");
      return new Promise(resolve => setTimeout(resolve, 1000))
        .then(() => {
          console.log("Loading complete...");
          this._lifecycle.loaded = true;
          return this.onLifecycleEvent('LOADED');
        })
        .catch(error => {
          console.error('Load error:', error);
        });
    });
  }

  shutdown(): Promise<void> {
    return Promise.resolve()
      .then(() => {
        console.log("Shutdown initiated...");
        this._lifecycle.shuttingDown = true;
        return this.onLifecycleEvent('SHUTTING_DOWN');
      })
      .then(() => {
        console.log("Shutdown complete...");
        this._status = "SHUTDOWN";
      })
      .catch(error => {
        console.error("Shutdown error:", error);
      });
  }

  destroy(): Promise<void> {
    this._status = "DESTROYED";
    this._lifecycle = new Lifecycle();
  }
}

class Lifecycle {
  configured = false;
  loaded = false;
  shuttingDown = false;

  [Symbol.for('event')]: { [event: string]: LifecycleHandler } = {};
}

const atlas = new Atlas();

atlas.on('DESTROYED', () => {
