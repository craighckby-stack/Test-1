      "metric_key": "Input.Buffer.ProjectedFill",
      "enforced_component": "DHC",
      "settings": [
        { "level": "ELEVATED", "severity_index": 50, "value": 0.95, "unit": "PERCENT_CAPACITY" }
      ],
      "actions": [
        { "action_id": "ACTION_THROTTLE_INPUT_ACQUISITION", "config": {} }
