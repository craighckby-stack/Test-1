      "settings": [
        { "level": "SOFT", "severity_index": 10, "value": 0.75, "unit": "PERCENT_CAPACITY" },
        { "level": "ELEVATED", "severity_index": 30, "value": 0.85, "unit": "PERCENT_CAPACITY" }
      ],
      "actions": [
        { "action_id": "ACTION_LOG_PRIORITY", "config": { "level": "PIM" } },
        { "action_id": "ACTION_REQUEST_TELEMETRY_SAMPLE", "config": {} }
      ]
    },
    "W-R-001": {
      "metadata": {
