// nexus.ts
import { defaultConfig } from './config';
import { configSchema } from './config';
import { validateConfig } from './config';
import { Pipeline } from './events';
import { Lifecycle } from './lifecycle';

enum Status {
  INIT = 'INIT',
  SHUTDOWN = 'SHUTDOWN',
  DESTROYED = 'DESTROYED',
}

class NexusCore {
  private _config: any;
  private _pipeline: Pipeline;
  private _lifecycle: Lifecycle;
  private _status: Status = Status.INIT;

  get config(): any {
    return this._config;
  }

  set config(value: any) {
    this._config = value;
    this.validateConfig();
    if (this._status === Status.INIT) {
      this.start();
    }
  }

  get pipeline(): Pipeline {
    if (!this._pipeline) {
      this._pipeline = new Pipeline();
    }
    return this._pipeline;
  }

  set pipeline(value: Pipeline) {
    this._pipeline = value;
  }

  get lifecycle(): Lifecycle {
    if (!this._lifecycle) {
      this._lifecycle = new Lifecycle();
    }
    return this._lifecycle;
  }

  set lifecycle(value: Lifecycle) {
    this._lifecycle = value;
  }

  get status(): Status {
    return this._status;
  }

  set status(value: Status) {
    this._status = value;
  }

  async start() {
    if (this._status === Status.INIT) {
      this.config = defaultConfig();
      await this.pipeline.execute('CONFIGURED');
      await this.lifecycle.configured = true;
    }
  }

  async load() {
    console.log('Loading...');
    await new Promise(resolve => setTimeout(resolve, 1000));
    console.log('Loading complete...');
    this.lifecycle.loaded = true;
    await this.pipeline.execute('LOADED');
  }

  async shutdown() {
    console.log('Shutdown initiated...');
    this.lifecycle.shuttingDown = true;
    await this.pipeline.execute('SHUTTING_DOWN');
    console.log('Shutdown complete...');
    this.status = Status.SHUTDOWN;
  }

  async destroy() {
    await this.shutdown();
    this.pipeline = new Pipeline();
    this.lifecycle = new Lifecycle();
    this.config = null;
    this._status = Status.DESTROYED;
  }
}

class Config {
  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true,
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' },
      },
    };
  }

  constructor(values = {}) {
    Object.assign(this, values);
  }

  static get staticConfig() {
    return {
      VERSION: '1.0.0',
      env: process.env.NODE_ENV || 'development',
    };
  }
}

class LifecycleEvent {}
class LifecycleHandler {
  constructor(handler) {
    this.handler = handler;
  }

  execute() {
    this.handler();
  }

  bind(target = this) {
    this.handler = this.handler.bind(target);
  }
}

class Pipeline {
  async execute(event: string) {
    this.fireEvent(event);
  }

  fireEvent(event: string) {
    console.log(`Event: ${event}`);
  }
}

const defaultNexus = () => {
  const nexus = new NexusCore();
  return nexus;
};

const nexus = defaultNexus();
nexus.on('CONFIGURED', () => {
  console.log('Nexus pipeline configured.');
});
nexus.on('LOADED', () => {
  console.log('Nexus pipeline loaded.');
});
nexus.on('SHUTTING_DOWN', () => {
  console.log('Nexus pipeline shutting down.');
});


