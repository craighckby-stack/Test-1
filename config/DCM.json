{
  "manifest_id": "DCM",
  "version": "2.0.0",
  "description": "Drift Control Manifest (DCM v2.0). Structured, declarative monitoring and remediation setup for L8 DERE operations. Formulas have been replaced by structured threshold comparisons.",
  "status": "ACTIVE",
  "execution_context": {
    "frequency_type": "INTERVAL",
    "interval_seconds": 3600,
    "max_parallel_checks": 10
  },
  "monitoring_targets": [
    {
      "target_id": "S-01",
      "metric_name": "System Efficacy Score",
      "data_sources": [
        "PREDICTIVE",
        "ACTUAL"
      ],
      "trigger_profile_id": "TP01_CorePerformance",
      "evaluation_strategy": {
        "method": "PREDICTIVE_VS_ACTUAL_ABSDIFF",
        "thresholds": {
          "CRITICAL": 0.05,
          "WARNING": 0.02
        }
      }
    }
  ],
  "trigger_profiles": [
    {
      "profile_id": "TP01_CorePerformance",
      "description": "Performance degradation triggers derived from absolute difference.",
      "conditions": [
        {
          "severity": "CRITICAL",
          "threshold_ref": "CRITICAL",
          "action_ref": "A001_Recalibrate_Core"
        },
        {
          "severity": "WARNING",
          "threshold_ref": "WARNING",
          "action_ref": "A002_Report_Warning"
        }
      ]
    }
  ],
  "remediation_catalogue": {
    "A001_Recalibrate_Core": {
      "execution_metadata": {
        "description": "Standard recalibration sequence.",
        "max_runtime_s": 300,
        "rollback_ref": "A003_Soft_Rollback"
      },
      "sequence": [
        {
          "step_id": "P01",
          "action_type": "RECALIBRATE",
          "target_ref": "S-01",
          "algorithm": "MODEL_A/V3",
          "priority": 1
        }
      ]
    },
    "A002_Report_Warning": {
      "execution_metadata": {
        "description": "Simple notification."
      },
      "sequence": [
        {
          "step_id": "R02",
          "action_type": "NOTIFY",
          "channel": "SLACK_ALERT_DCM",
          "priority": 50
        }
      ]
    },
    "A003_Soft_Rollback": {
      "execution_metadata": {
        "description": "Emergency soft rollback action."
      },
      "sequence": [
        {
          "step_id": "F01",
          "action_type": "FALLBACK",
          "strategy_code": "R-01_soft_rollback",
          "priority": 10
        }
      ]
    }
  },
  "reporting_config": {
    "audit_endpoint": "AIA_L8_Audit_Endpoint",
    "minimum_log_level": "WARNING"
  }
}