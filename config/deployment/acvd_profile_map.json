{
  "schemaVersion": "2.0",
  "definitions": {
    "verificationPipelines": {
      "sanity": "smoke_test",
      "integration": "integration_test_suite",
      "e2e": "full_e2e_regression"
    },
    "preflightChecks": {
      "default": [
        "dependency_check",
        "linting"
      ],
      "security_minor": [
        "security_scan_minor",
        "dependency_check"
      ],
      "security_major": [
        "security_scan_major",
        "compliance_audit"
      ]
    },
    "deploymentStrategies": {
      "standard": "RollingUpdate",
      "safe": "Canary5Percent",
      "immediate": "ImmediateDeploy"
    },
    "infrastructureTargets": {
      "dev": "EphemeralSandbox",
      "staging": "PersistentTestCluster",
      "prod": "ProductionMain"
    }
  },
  "profiles": {
    "base": {
      "defaultRegion": "us-east-1",
      "timeoutSeconds": 300,
      "maxRetries": 3,
      "loggingLevel": "INFO",
      "requiredContextKeys": [
        "COMMIT_HASH",
        "BUILD_ID"
      ],
      "notificationChannel": "slack:alerts-deploy",
      "scalingFactor": 0.0,
      "deploymentStrategyKey": "immediate"
    },
    "development": {
      "inherits": "base",
      "targetInfrastructureKey": "dev",
      "verificationPipelineKey": "sanity",
      "preflightCheckKey": "default",
      "scalingFactor": 0.1,
      "notificationChannel": "slack:alerts-dev"
    },
    "staging": {
      "inherits": "base",
      "targetInfrastructureKey": "staging",
      "verificationPipelineKey": "integration",
      "preflightCheckKey": "security_minor",
      "scalingFactor": 0.5,
      "dataSeedingRequired": true,
      "deploymentStrategyKey": "standard"
    },
    "production": {
      "inherits": "base",
      "targetInfrastructureKey": "prod",
      "verificationPipelineKey": "e2e",
      "preflightCheckKey": "security_major",
      "scalingFactor": 1.0,
      "approvalGates": [
        "CISO_L2",
        "PlatformOwner"
      ],
      "deploymentStrategyKey": "safe",
      "notificationChannel": "slack:alerts-critical"
    }
  }
}