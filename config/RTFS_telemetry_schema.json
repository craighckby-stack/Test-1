      "purpose": "S-01 Input - Real-time systemic health assessment.",
      "metadata": {
        "type": "float",
        "unit": "Index (0.0 to 1.0)",
        "criticality": "High",
        "sampling_frequency_hz": 5
      },
      "constraints": {
        "min": 0.0,
        "max": 1.0,
        "required_decimal_places": 3
      }
    },
    {
      "metric_id": "M_98.2.ResourceVolatilityFactor",
      "purpose": "S-02 Input - Measures dynamic risk exposure based on memory/compute pressure.",
      "metadata": {
        "type": "float",
        "unit": "Factor (0.0 to 10.0)",
        "criticality": "High",
        "sampling_frequency_hz": 10
      },
      "constraints": {
        "min": 0.0,
        "max": 10.0,
        "default_if_missing": 0.0
      }
    },
    {
      "metric_id": "M_98.3.PolicyBreachDelta",
      "purpose": "GRS Input - Quantifies compliance delta between deployed state and ideal governance state (S-03 system component).",
      "metadata": {
        "type": "integer",
        "unit": "Count",
        "criticality": "Extreme",
        "sampling_frequency_hz": 1
      },
      "constraints": {
        "min": 0,
        "max": 1000
      }
    },
    {
      "metric_id": "M_98.4.TestCoverageRatio",
      "purpose": "S-01 Input - Static assessment of evolutionary test suite robustness (M-02 system).",
      "metadata": {
        "type": "float",
        "unit": "Ratio (0.0 to 1.0)",
        "criticality": "Medium",
        "sampling_frequency_hz": 0.1
      },
      "constraints": {
        "min": 0.0,
        "max": 1.0,
        "is_static": true
      }
    }
  ],
  "validation_requirements": {
    "max_age_seconds": 3,
    "minimum_signal_integrity": 0.99,
    "source_verification_required": true
  }
}