{
  "version": "1.1",
  "metadata": {
    "policy_id": "GACR-SYN-2024Q3",
    "description": "Granular Access Control Rights Synchronization Policy Definitions"
  },
  "sync_profiles": {
    "identity_to_services": {
      "target_systems": [
        "Microservice_A",
        "Gateway_B"
      ],
      "schedule_type": "REALTIME_EVENT_DRIVEN",
      "coalescing_window_ms": 50,
      "conflict_resolution": "SOURCE_OF_TRUTH_WINS",
      "source_id": "AuthN_Provider_Main",
      "failure_strategy": "LOG_AND_SKIP",
      "throttling": {
        "max_per_second": 500,
        "burst_limit": 1000
      }
    },
    "service_to_auditlog": {
      "target_systems": [
        "Audit_DB_Cluster"
      ],
      "schedule_type": "BATCH_HOURLY",
      "batch_size": 5000,
      "conflict_resolution": "MOST_RECENT_TIMESTAMP_WINS",
      "source_id": "Operational_Data_Store",
      "failure_strategy": "RETRY_WITH_BACKOFF",
      "retry_config": {
        "max_attempts": 3,
        "initial_delay_ms": 1000
      }
    }
  },
  "global_enforcement": {
    "circuit_breaker_enabled": true,
    "max_sync_errors_per_hour": 1000
  }
}