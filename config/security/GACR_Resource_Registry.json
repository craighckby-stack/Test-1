{
  "version": "1.0",
  "metadata": {
    "registry_id": "GACR-RES-REGISTRY-V1",
    "description": "Mapping of GACR Policy Aliases to System Endpoint Configurations and Protocols"
  },
  "resources": {
    "AuthN_Provider_Main": {
      "endpoint_type": "KAFKA_TOPIC",
      "protocol": "SASL_SSL",
      "uri": "kafka://auth-broker-01:9092/gacr-events",
      "auth_mechanism": "mTLS",
      "security_profile": "HIGH_CONFIDENTIALITY"
    },
    "CONSUMER_MS": {
      "endpoint_type": "HTTP_SYNC_API",
      "protocol": "HTTPS",
      "uri_template": "https://ms-consumer.{env}.internal/v1/gacr/sync",
      "timeout_ms": 5000
    },
    "AUDIT_CLUSTER_MAIN": {
      "endpoint_type": "POSTGRES_CLUSTER",
      "protocol": "TCP/TLS",
      "connection_pool_limit": 50,
      "database": "audit_logs_gacr"
    },
    "GATEWAY_CTRL": {
      "endpoint_type": "GRPC",
      "protocol": "mTLS",
      "uri": "gatekeeper-a:50051"
    }
  }
}