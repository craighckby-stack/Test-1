// Config.js
class ConfigRegistry {
  constructor() {
    this.configs = new Map();
  }

  registerConfig(config) {
    const configKey = JSON.stringify(config);
    this.configs.set(configKey, config);
  }

  getConfig(configKey) {
    return this.configs.get(configKey);
  }
}

const configRegistry = new ConfigRegistry();

class Config {
  static get staticConfig() {
    return {
      VERSION: "1.0.0",
      env: process.env.NODE_ENV || "development"
    };
  }

  constructor(values = {}) {
    this.setValues(values);
  }

  setValues(values) {
    Object.assign(this, values);
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
  }

  validate() {
    try {
      const schema = Config.configSchema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(this, schema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  registerWithRegistry() {
    configRegistry.registerConfig(this);
  }

  static getConfigInstance(configKey) {
    const config = this.getConfigSchema();
    const instance = Object.assign(Object.create(Object.getPrototypeOf(this)), config);
    instance.registerWithRegistry();
    return instance;
  }
}

// nexus-core.js
class LifecycleEvent {
  constructor(event, data = {}) {
    this.event = event;
    this.data = data;
  }
}

class LifecycleHandler {
  constructor(handler) {
    this.handler = handler;
  }

  bind(target = this) {
    this.handler = this.handler.bind(target);
  }

  execute() {
    this.handler();
  }
}

class NexusCore {
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  #status = "INIT";

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  onLifecycleEvent(event, handler, data = {}) {
    const lifecycleHandler = new LifecycleHandler(handler);
    this.#lifecycle[event] = lifecycleHandler;
    const eventInstance = new LifecycleEvent(event, data);
    lifecycleHandler.bind(this).execute(eventInstance);
  }

  get on() {
    return (event, handler, data = {}) => {
      const lifecycleHandler = new LifecycleHandler(handler);
      this.onLifecycleEvent(event, handler, data);
    };
  }

  executeLifecycleEvent(event, data = {}) {
    if (this.#lifecycle[event]) {
      this.#lifecycle[event].bind(this).execute(new LifecycleEvent(event, data));
    }
  }

  async load() {
    await this.executeLifecycleEvent("CONFIGURED");
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      this.executeLifecycleEvent("LOADED");
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        this.executeLifecycleEvent("SHUTTING_DOWN");
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      if (this[methodName] instanceof Function) {
        await this[methodName]();
      }
    }
  }

  async destroy() {
    this.status = "DESTROYED";
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
  }

  async on(event, handler, data = {}) {
    await this.onLifecycleEvent(event, handler, data);
  }
}

const nexusCore = new NexusCore();
nexusCore.on('DESTROYED', () => {
  console.log("NexusCore instance destroyed.");
});
const defaultConfig = Config.getConfigInstance(JSON.stringify(Config.defaultConfig));
defaultConfig.registerWithRegistry();
nexusCore.configure(defaultConfig);
nexusCore.start();
nexusCore.load();
nexusCore.shutdown();
nexusCore.destroy();

