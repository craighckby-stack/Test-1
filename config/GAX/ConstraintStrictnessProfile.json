class Config {
  static get staticConfig() {
    return this.mergeSchemas([Config.defaultConfig, require("json-schema").loadSync(require.resolve('./schema.json'))]);
  }

  static mergeSchemas(...schemas) {
    return schemas.reduce((accumulator, schema) => this.mergeSchemasRecursive(accumulator, schema), {});
  }

  static mergeSchemasRecursive(parent, schema) {
    return Object.keys(schema).reduce((accumulator, key) => {
      return {
        ...accumulator,
        [key]: (accumulator[key] || schema[key]).$merge ? this.mergeSchemasRecursive(accumulator[key], schema[key]) : schema[key]
      };
    }, parent);
  }

  static get defaultConfig() {
    return {
      ...Config.configSchema,
      foo: '$schema="https://json-schema.org/draft-07/schema#" type="string"',
      baz: '$ref="#/definitions/boolean"'
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      definitions: {
        boolean: { type: 'boolean' },
        string: { type: 'string' }
      },
      properties: {
        foo: { type: 'string' },
        baz: { $ref: '#/definitions/boolean' }
      }
    };
  }

  constructor(values = {}) {
    this.setValues(values);
  }

  async setValues(values) {
    Object.assign(this, await this.validateConfig(values));
  }

  static async validateConfig(config) {
    const configSchema = Config.configSchema;
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(configSchema);
      validator.validate(config, configSchema);
      return Promise.resolve(config);
    } catch (e) {
      throw await Promise.reject('Config validation error:', e);
    }
  }
}

class LifecycleEvent {
  constructor(event) {
    this.event = event;
  }
}

class LifecycleHandler {
  constructor(handler) {
    this.handler = handler;
  }

  bind(target = this) {
    this.handler = this.handler.bind(target);
  }

  execute() {
    this.handler();
  }
}

class NexusCore {
  static #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  static status = "INIT";

  static get #lifecycle() {
    return NexusCore.#lifecycle;
  }

  static set #lifecycle(value) {
    NexusCore.#lifecycle = value;
  }

  get status() {
    return NexusCore.status;
  }

  set status(value) {
    this.#updateStatus(value);
  }

  static #updateStatus(value) {
    const currentValue = NexusCore.status;
    const lifecycle = NexusCore.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        NexusCore.#lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      NexusCore.#lifecycle.configured = true;
    }
    NexusCore.status = value;
  }

  static configure = async(config) => {
    await Config.validateConfig(config);
    NexusCore.#lifecycle.configured = true;
    NexusCore.#lifecycle.loaded = false;
    NexusCore.#updateStatus('CONFIGURED');
  }

  static async onLifecycleEvent(event, handler) {
    const lifecycleHandler = new LifecycleHandler(handler);
    NexusCore.#lifecycle[event] = lifecycleHandler;
  }

  get on() {
    return (event, handler) => {
      const lifecycleEvent = new LifecycleEvent(event);
      this.onLifecycleEvent(event, handler);
    };
  }

  static async executeLifecycleEvent(event) {
    const lifecycleHandler = NexusCore.#lifecycle[event];
    if (lifecycleHandler) {
      lifecycleHandler.bind(this).execute();
    }
  }

  static async start() {
    const methodsOrder = ["configure", "load", "shutdown"];
    this.#forEachMethodName(methodsOrder, async (methodName) => {
      if (this[methodName] instanceof Function) {
        await this[methodName]();
      }
    });
  }

  static async shutDown() {
    if (!this.#lifecycle.shuttingDown) {
      console.log("Shutdown initiated...");
      this.#lifecycle.shuttingDown = true;
      this.executeLifecycleEvent("SHUTTING_DOWN");
      console.log("Shutdown complete...");
      this.#updateStatus("SHUTDOWN");
    }
  }

  static async load() {
    await this.executeLifecycleEvent("CONFIGURED");
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      NexusCore.#lifecycle.loaded = true;
      this.executeLifecycleEvent("LOADED");
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  static async destroy() {
    Nimbus.on('DESTROYED');
    NexusCore.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
  }
}

NexusCore.on("SHUTDOWN", () => {
  console.log("NexusCore instance shut down.");
});

NexusCore.configure(Config.defaultConfig);
NexusCore.start();
NexusCore.load();
NexusCore.shutdown();
NexusCore.destroy();

async function Nimbus() {
  try {
    await NexusCore.start();
  } catch (e) {
    console.error(e);
  }
}

async function forEachMethodName(list, callback) {
  for (const methodName of list) {
    if (this[methodName] instanceof Function) {
      try {
        await callback.bind(this)(methodName);
      } catch (e) {
        console.error(e);
      }
    }
  }
}