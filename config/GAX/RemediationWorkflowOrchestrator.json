// Configuration Manager (High Performance).
class MutatedConfigManager {
  #inMemorySettingsSource = new InMemorySettingsSource();
  #settings = {
    initialized: false
  };

  /**
   * @method getSettings
   * @async
   * @return {object} - The current settings.
   */
  async getSettings() {
    await this.#loadSettings();
    return { ...this.#settings, lastUpdated: Date.now() };
  }

  async #loadSettings() {
    let settings = await this.#inMemorySettingsSource.getSettings();
    if (settings === null || settings === undefined) {
      settings = {};
    }
    settings.initialized = true;
    Object.assign(this.#settings, settings);
  }

  async #saveSettings(settings) {
    await this.#inMemorySettingsSource.saveSettings(settings);
  }

  /**
   * @method saveSettings
   * @param {object} settings - The new settings.
   */
  saveSettings(settings) {
    this.#settings = { ...this.#settings, ...settings };
    this.#saveSettings(this.#settings);
  }
}

class MutatedConfig {
