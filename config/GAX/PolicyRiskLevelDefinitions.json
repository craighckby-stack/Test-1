class LifecycleHandler {
  /**
   * Initializes the lifecycle handler with the given handler.
   * @param handler
   */
  constructor(handler) {
    this.handler = handler;
  }

  /**
   * Binds the handler to the context.
   * @param target
   */
  bind(target = this) {
    this.handler = this.handler.bind(target);
  }

  /**
   * Executes the handler.
   */
  execute() {
    this.handler();
  }
}

