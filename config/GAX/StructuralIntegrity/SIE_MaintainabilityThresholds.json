import { InMemorySettingsSource } from './InMemorySettingsSource';
import * as jsonschema from 'jsonschema';

class ConfigManager {
  private _inMemorySettingsSource = new InMemorySettingsSource();
  private _settings = {
    initialized: false
  };

  public async getSettings() {
    await this.loadSettings();
    return { ...this._settings, lastUpdated: Date.now() };
  }

  private async loadSettings() {
    let settings = await this._inMemorySettingsSource.getSettings();
    if (settings === null || settings === undefined) {
      settings = {};
    }
    settings.initialized = true;
    Object.assign(this._settings, settings);
  }

  private async saveSettings(settings) {
    await this._inMemorySettingsSource.saveSettings(settings);
  }

  public saveSettings(settings) {
    this._settings = { ...this._settings, ...settings };
    this.saveSettings(this._settings);
  }

  public validateConfig(config) {
    try {
      const validator = new jsonschema.Validator();
      validator.checkSchema(Config.configSchema);
      validator.validate(config, Config.configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

export { ConfigManager };


