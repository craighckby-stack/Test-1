import { NexusCore } from './NexusCore';
import { ConfigManager } from './NexusConfigManager';
import * as jsonschema from 'jsonschema';

class Nexus {
  private _nexusCore = new NexusCore();

  constructor() {
    const configManager = new ConfigManager();
    const config = Config.defaultConfig;

    configManager.configure(config);

    this._nexusCore.configure(config);

    this._nexusCore.load();
  }

  public get nexusCore() {
    return this._nexusCore;
  }

  public configureNexusCore() {
    const defaultConfig = Config.defaultConfig;
    this._nexusCore.configure(defaultConfig);
    this._nexusCore.load();
  }
}

export { Nexus };


