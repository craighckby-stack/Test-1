{
  "ValidationEngineConfig": {
    "version": "3.0.0",
    "metadata": {
      "description": "Configuration for the GAX Constraint Validation Engine, focused on performance and dynamic context resolution."
    },
    "core": {
      "defaultMode": "Strict",
      "fallbackStrictness": "FailFast",
      "enableValidationGroups": true,
      "lazyLoadModules": true
    },
    "performance": {
      "ruleCompilationStrategy": "JIT",
      "maxParallelValidations": 128,
      "compilationCache": {
        "enabled": true,
        "ttlSeconds": 7200,
        "storageType": "Redis"
      },
      "precompiledSchemas": [
        "User",
        "Product"
      ]
    },
    "schemaSources": {
      "sourceDirectory": "./rules/schemas",
      "defaultFileFormat": "yaml",
      "ruleAdapters": [
        "GAX_JoiAdapter",
        "GAX_ZodAdapter"
      ]
    },
    "customValidators": [
      {
        "name": "DatabaseExistenceCheck",
        "path": "@GAX/validators/DatabaseIntegrityValidator.js",
        "loadPriority": 100
      }
    ],
    "contextResolution": {
      "enabled": true,
      "resolverPath": "@core/context/ValidationContextResolver.js",
      "contextMap": {
        "HTTP_POST:/api/v1/*": "creation_api",
        "JOB_TYPE:BILLING_CYCLE": "batch_processing"
      }
    }
  }
}