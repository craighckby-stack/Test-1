class Config {
  #schema = {
    type: 'object',
    properties: {
      foo: { type: 'string' },
      baz: { type: 'boolean' }
    },
    required: ['foo'],
    additionalProperties: false
  };

  #staticConfig = {
    VERSION: "1.0.0",
    env: "development"
  };

  static get configSchema() {
    return this.#schema.mapSchema(() => this.#schema);
  }

  static get defaultConfig() {
    return this.#schema.reduce(config => this.#schema.mapProperties(config, () => this.#staticConfig), {});
  }

  constructor(values = {}) {
    this.setValues(values);
  }

  setValues(values) {
    const schema = this.constructor.configSchema();
    Object.keys(values).forEach(key => {
      if (!(key in schema.properties)) {
        console.error(`Invalid key: ${key}`);
        throw new Error(`Invalid key: ${key}`);
      }
      this[key] = values[key];
    });
    Object.keys(schema.properties).forEach(key => {
      if (!(key in values)) {
        this[key] = schema.properties[key].default || (typeof schema.properties[key].default === 'function' ? schema.properties[key].default() : schema.properties[key].default);
      }
    });
  }

  validate() {
    const schema = this.constructor.configSchema();
    const value = this.reduce((object, key, value) => {
      object[key] = value;
      return object;
    }, {});
    const validator = new (require('jsonschema').Validator)();
    validator.checkSchema(schema, () => schema);
    if (!validator.validate(value, schema)) {
      console.error('Config validation error:', validator.errors);
      throw new Error('Config validation error');
    }
  }

  static createFrom(values = {}) {
    return new this(values);
  }

  static mergeStaticConfig(values = {}) {
    this.#staticConfig = { ...this.#staticConfig, ...values };
    return this;
  }
}

class LifecycleEvent {
  #handler;

  constructor(event, handler) {
    this.event = event;
    this.handler = handler;
  }

  handle() {
    this.handler();
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target) {
    this.#handler = this.#handler.bind(target);
  }

  execute() {
    this.#handler();
  }
}

class NexusCore {
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  #status = "INIT";

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    this.#lifecycle.shuttingDown = false;
    console.log(`NexusCore instance is ${value}.`);
    if (value === 'SHUTDOWN') {
      this.#lifecycle.configured = false;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  configure(config) {
    this.validateConfig(config);
    this.onLifecycleEvent("CONFIGURED", () => this.onConfigured());
  }

  validateConfig(config) {
    const schema = this.constructor.configSchema();
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema, () => schema);
      validator.validate(config, schema);
    } catch (e) {
      console.error(`Config validation error: ${e}`);
      throw e;
    }
  }

  onConfigured() {
    this.#lifecycle.configured = true;
    this.config = Config.createFrom(this.#staticConfig);
    this.onLifecycleEvent(
      'CONFIGURED',
      () => this.onConfigured()
    ).handle();
  }

  onLifecycleEvent(event, handler) {
    const lifecycleHandler = new LifecycleHandler(handler);
    this.#lifecycle[event] = lifecycleHandler;
    return lifecycleHandler;
  }

  get on() {
    return (event, handler) => {
      this.onLifecycleEvent(event, handler);
    };
  }

  async load() {
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      this.onLifecycleEvent("LOADED", () => this.onLoaded());
    } catch (e) {
      console.error('Load error: ' + e);
    }
  }

  onLoaded() {
    this.status = "LOAD";
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        this.onLifecycleEvent("SHUTTING_DOWN", () => this.onShuttingDown());
        await new Promise(resolve => setTimeout(resolve, 1000));
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
      }
    } catch (e) {
      console.error("Shutdown error: " + e);
    }
  }

  onShuttingDown() {
    this.#lifecycle.configured = false;
  }

  async start() {
    const startMethods = ["configure", "load", "shutdown"];
    for (const methodName of startMethods) {
      this[methodName]();
    }
  }

  async destroy() {
    this.status = "DESTROYED";
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false,
      on: this.onto,
    };
  }

  onto(...args) {
    return this.on(...args);
  }
}

