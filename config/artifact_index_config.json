const { defaultSchema } = require('jsonschema');
const { performance } = require('perf_hooks');
const events = require('events');

class Config {
  static get staticConfig() {
    return {
      VERSION: '1.0.0',
      env: process.env.NODE_ENV || 'development',
      foo: 'bar',
      baz: true,
      timezone: 'UTC'
    };
  }

  constructor(values = {}) {
    Object.assign(this, values);
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static get configSchema() {
    return {
      $schema: 'https://json-schema.org/draft-07/schema#',
      type: 'object',
      default: Config.staticConfig,
      required: ['VERSION', 'env'],
      properties: {
        VERSION: {
          const: Config.staticConfig.VERSION,
          type: 'string'
        },
        env: {
          const: Config.staticConfig.env,
          default: process.env.NODE_ENV || 'development',
          type: 'string'
        },
        foo: {
          const: Config.defaultConfig.foo,
          type: 'string'
        },
        baz: {
          const: Config.defaultConfig.baz,
          type: 'boolean'
        },
        timezone: {
          const: Config.staticConfig.timezone,
          type: 'string'
        }
      }
    };
  }

  async validate() {
    try {
      const validator = new defaultSchema.Validator();
      const result = validator.validate(this, this.constructor.configSchema);
      if (!result.valid) {
        throw result;
      }
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

class LifecycleEvent extends events.EventEmitter {
  constructor(event) {
    super();
    this.event = event;
  }
}

class LifecycleHandler {
  constructor(handler) {
    this.handler = handler;
  }

  bind(target = this) {
    this.handler = this.handler.bind(target);
  }

  execute() {
    this.handler();
  }
}

class Lifecycle extends LifecycleHandler {
  static #status = 'LOADED';
  static get status() {
    return this.#status;
  }

  static set status(value) {
    this.#status = value;
  }

  async applyLifecycle(event, ...args) {
    try {
      const listeners = this.#_listeners.listeners(event);
      if (listeners) {
        await Promise.all(listeners.map((listener) => listener(...args)));
      }
    } catch (error) {
      console.error('Lifecycle error:', error);
    }
  }

  static get _listeners() {
    return events;
  }

  static set _listeners(value) {
    this.#_listeners = value;
  }

  static async configure(event, config) {
    const listeners = this._listeners.listeners(event);
    if (listeners) {
      await Promise.all(listeners.map((listener) => listener(config)));
    }
  }

  static get lifecycleMethods() {
    return ['configured', 'loaded', 'shuttingDown'];
  }
}

class NexusCore extends Lifecycle {
  #_status = 'LOADED';
  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
  }

  get eventEmitter() {
    return events;
  }

  async reload() {
    try {
      await this.context.emit('RELOAD');
    } catch (error) {
      console.error('Reload error:', error);
    }
  }

  async applyConfig(config) {
    try {
      await super.applyLifecycle('CONFIGURE', config);
    } catch (error) {
      console.error('CONFIGURE method failed:', error);
    }
  }

  async validateConfig(config) {
    try {
      await Config.validate(config);
    } catch (error) {
      console.error('VALIDATE_CONFIG method failed:', error);
    }
  }

  async load() {
    const startTime = performance.now();
    try {
      console.log('Loading...');
      await new Promise((resolve) => setTimeout(resolve, 1000));
      console.log('Loading complete...');
      this.status = 'LOADING';
      await new Promise((resolve) => setTimeout(resolve, 100));
      console.log(`Loaded in ${performance.now() - startTime}ms`);
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  async start() {
    try {
      const startTime = performance.now();
      await Promise.all(
        Lifecycle.lifecycleMethods().map(async (methodName) => {
          if (this[methodName] instanceof Function) {
            await this[methodName](startTime);
          }
        })
      );
      console.log('Lifecycle started in ' + (performance.now() - startTime) + 'ms');
      this.status = 'STARTED';
    } catch (error) {
      console.error('START method failed:', error);
    }
  }

  async destroy() {
    this.status = 'DESTROYED';
    this.eventEmitter.removeAllListeners();
    this.status = 'LOADED';
  }

  on(event, handler) {
    this.eventEmitter.on(event, handler);
  }

  off(event, listener) {
    this.eventEmitter.removeListener(event, listener);
  }

  emit(event, ...args) {
    return new Promise((resolve, reject) => {
      this.eventEmitter.emit(event, ...args, (err) => {
        if (err) {
          reject(err);
        } else {
          resolve();
        }
      });
    });
  }

  get lifecycle() {
    return this.status;
  }

  async initLoadingDep(event, config) {
    try {
      await this.context.emit(event, config);
    } catch (error) {
      console.error('Init loading dep error:', error);
    }
  }

  async shutdownDependencies(event, config) {
    try {
      await this.context.emit(event, config);
    } catch (error) {
      console.error('Shut down dependencies error:', error);
    }
  }

  async loadingDependenciesComplete(event, config) {
    try {
      await this.context.emit(event, config);
    } catch (error) {
      console.error('Loading dependencies complete error:', error);
    }
  }

  async startLifecycleLifecycle(event, config) {
    try {
      await this.context.emit(event, config);
    } catch (error) {
      console.error('Start lifecycle error:', error);
    }
  }

  get lifecycleListeners() {
    return this.eventEmitter;
  }

  get lifecycleStatus() {
    return this.status;
  }
}

