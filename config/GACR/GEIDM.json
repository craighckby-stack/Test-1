{
  "manifestId": "GEIDM-V3.0",
  "governanceOwner": "GACR_Core",
  "description": "Governance External Interface Definition Manifest (V3.0). Standardized security profiles, operational constraints, and enhanced policy traceability for external access points.",
  "enforcementLayer": "CRoT_Signed_API_Gateway",
  "interfaces": [
    {
      "interfaceId": "I-HIL-T-001",
      "interfaceName": "HIL-T_Recovery_API",
      "interfaceType": "Synchronous_API",
      "governancePolicyId": "GACR-POL-HARM-003",
      "purpose": "Authorization interface for Sovereign Triage/Halt (HARM). High-assurance requirement.",
      "validation": {
        "schemaRequired": true,
        "schemaUri": "/schemas/recovery_authorization_v1.json",
        "inputSanitationEnforcement": true
      },
      "securityProfile": {
        "profileId": "SEC-P-HA-MFA-001",
        "assuranceLevel": "High",
        "primaryMechanism": "MFA_Hardware_Token",
        "secondaryMechanism": "CRoT_Derived_Key",
        "traceProfileId": "TRACE-AUDIT-001"
      },
      "constraints": {
        "access": {
          "rateLimit": {
            "enforced": true,
            "period": "1h",
            "requests": 3,
            "burst": 1
          },
          "allowedIPRanges": []
        },
        "operational": {
          "availabilityTarget": "99.999%",
          "SLO_Target": "200ms"
        }
      }
    },
    {
      "interfaceId": "I-GRTS-002",
      "interfaceName": "GRTS_Telemetry_Data_Sink",
      "interfaceType": "Asynchronous_Stream_Sink",
      "governancePolicyId": "GACR-POL-TELE-012",
      "purpose": "Low-latency streaming target for S7/S8 telemetry and critical audit data.",
      "validation": {
        "schemaRequired": true,
        "schemaUri": "/schemas/telemetry_sink_v2.json",
        "inputSanitationEnforcement": true
      },
      "securityProfile": {
        "profileId": "SEC-P-MA-MTLS-002",
        "assuranceLevel": "Medium",
        "primaryMechanism": "TLS_MTLS_Certificate_Fixed",
        "traceProfileId": "TRACE-STREAM-005"
      },
      "constraints": {
        "access": {
          "rateLimit": {
            "enforced": false
          }
        },
        "operational": {
          "maxLatency_ms": 50,
          "maxPayload_kB": 1024,
          "expectedThroughput_MBps": 50
        }
      }
    }
  ]
}