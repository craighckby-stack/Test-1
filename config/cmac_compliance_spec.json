// nexus.ts
import { defaultConfig } from './config';
import { configSchema } from './config';
import { validateConfig } from './config';
import { Pipeline } from './events';
import { Lifecycle } from './lifecycle';

const nexusCore = {
  get pipeline(): Pipeline {
    if (!this._pipeline) {
      this._pipeline = new Pipeline();
    }
    return this._pipeline;
  },
  set pipeline(value: Pipeline) {
    this._pipeline = value;
  },
  get lifecycle(): Lifecycle {
    if (!this._lifecycle) {
      this._lifecycle = new Lifecycle();
    }
    return this._lifecycle;
  },
  set lifecycle(value: Lifecycle) {
    this._lifecycle = value;
  },
  /**
   * Get the status of NexusCore
   * @returns {string} The status of NexusCore
   */
  get status(): string {
    return this._status;
  },
  /**
   * Set the status of NexusCore
   * @param {string} status - The status of NexusCore
   */
  set status(value: string) {
    this._status = value;
  },
  /**
   * Start the NexusCore pipeline
   */
  start(): void {
    this.pipeline.execute('CONFIGURED');
    this.lifecycle.configured = true;
    console.log('Nexus pipeline started.');
  },
  /**
   * Load the NexusCore pipeline
   * @async
   */
  async load(): Promise<void> {
    try {
      console.log('Loading...');
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log('Loading complete...');
      this.lifecycle.loaded = true;
      this.pipeline.execute('LOADED');
    } catch (e) {
      console.error('Load error:', e);
    }
  },
  /**
   * Shutdown the NexusCore pipeline
   * @async
   */
  async shutdown(): Promise<void> {
    if (!this.lifecycle.shuttingDown) {
      console.log('Shutdown initiated...');
      this.lifecycle.shuttingDown = true;
      this.pipeline.execute('SHUTTING_DOWN');
      console.log('Shutdown complete...');
      this.status = 'SHUTDOWN';
    }
  },
  /**
   * Destroy the NexusCore instance
   */
  destroy(): void {
    this.status = 'DESTROYED';
    this.pipeline = new Pipeline();
    this.lifecycle = new Lifecycle();
  },
  get config(): any {
    return this._config;
  },
  set config(value: any) {
    this._config = value;
    this.validateConfig();
  },
  /**
   * Validate the configuration
   */
  validateConfig(): void {
    const config = this.config;
    const schema = configSchema();
    try {
      const validator = new (jsonschema.Validator)();
      validator.checkSchema(schema);
      validator.validate(config, schema);
      console.log('Configuration validated.');
    } catch (e) {
      console.error('Configuration validation error:', e);
    }
  },
  /**
   * Add an event listener
   * @param {string} event - The event to listen for
   * @param {function} handler - The event handler function
   */
  on(event: string, handler: (event: any) => void): void {
    this.pipeline.on(event, handler);
    this.lifecycle.on(event, handler);
  }
};

