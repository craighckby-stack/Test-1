{
  "description": "GSEP-C State Machine Controller (SMC) Configuration: Defining atomic stage constraints, explicit transition gates, and mandated I/O contracts. (Refactored v94.1)",
  "pipeline_id": "GSEP-C",
  "version": "3.0.0",
  "metadata": {
    "system_criticality": "Tier 1",
    "transition_strategy": "Mandatory Gated Sequencing"
  },
  "artifact_catalog": {
    "A01_BOOT_TOKEN": {
      "description": "System Bootstrap Confirmation Token."
    },
    "A02_CSR": {
      "description": "Certified Signing Request (CSR)."
    },
    "A03_VALIDATION_PASS": {
      "description": "Stage 02 Validation Success Signal."
    },
    "A04_ECVM": {
      "description": "EC Validation Metric."
    },
    "A05_TEMM": {
      "description": "Temporal Metric Map."
    },
    "A06_COMMITMENT_LOCK": {
      "description": "Final P01 Commitment Lock Artifact."
    },
    "A07_RECEIPT": {
      "description": "State Transition Receipt."
    }
  },
  "stages": {
    "S00_INIT": {
      "inputs": [
        {
          "artifact_key": "SYSTEM_BOOTSTRAP_SIGNAL",
          "required": true
        }
      ],
      "actor": "System Host",
      "outputs": [
        {
          "artifact_key": "A01_BOOT_TOKEN"
        }
      ],
      "transitions": {
        "T_SUCCESS": "S01_CRT_GEN",
        "T_FAILURE": "E99_HALT"
      }
    },
    "S01_CRT_GEN": {
      "inputs": [
        {
          "artifact_key": "A01_BOOT_TOKEN",
          "required": true
        }
      ],
      "actor": "CRoT Agent",
      "outputs": [
        {
          "artifact_key": "A02_CSR"
        }
      ],
      "transitions": {
        "T_SUCCESS": "S02_PASS_VALIDATE"
      }
    },
    "S02_PASS_VALIDATE": {
      "inputs": [
        {
          "artifact_key": "A02_CSR",
          "required": true
        }
      ],
      "actor": "Verifier Node",
      "timeout_s": 30,
      "outputs": [
        {
          "artifact_key": "A03_VALIDATION_PASS"
        }
      ],
      "transitions": {
        "T_SUCCESS": "S07_ECVM_CALC",
        "T_VALIDATION_FAIL": "S98_AUDIT_FALLBACK"
      }
    },
    "S07_ECVM_CALC": {
      "inputs": [
        {
          "artifact_key": "A03_VALIDATION_PASS",
          "required": true,
          "note": "Assumes S02 output satisfies prerequisite derived from skipped S03-S06 stages."
        },
        {
          "artifact_key": "A02_CSR",
          "required": true
        }
      ],
      "actor": "EMS",
      "outputs": [
        {
          "artifact_key": "A04_ECVM"
        }
      ],
      "transitions": {
        "T_SUCCESS": "S08_TEMM_CALC"
      }
    },
    "S08_TEMM_CALC": {
      "inputs": [
        {
          "artifact_key": "A04_ECVM",
          "required": true
        }
      ],
      "actor": "EMS",
      "outputs": [
        {
          "artifact_key": "A05_TEMM"
        }
      ],
      "transitions": {
        "T_SUCCESS": "S11_COMMITMENT_LOCK"
      }
    },
    "S11_COMMITMENT_LOCK": {
      "inputs": [
        {
          "artifact_key": "A02_CSR",
          "required": true
        },
        {
          "artifact_key": "A04_ECVM",
          "required": true
        },
        {
          "artifact_key": "A05_TEMM",
          "required": true
        }
      ],
      "actor": "GAX Executor",
      "gating_policy_id": "P-01_ACVD_FINALITY",
      "outputs": [
        {
          "artifact_key": "A06_COMMITMENT_LOCK"
        }
      ],
      "transitions": {
        "T_SUCCESS": "S14_RECEIPT_GEN",
        "T_POLICY_FAIL": "S11_AUDIT_LOG_FALLBACK"
      }
    },
    "S14_RECEIPT_GEN": {
      "inputs": [
        {
          "artifact_key": "A06_COMMITMENT_LOCK",
          "required": true
        }
      ],
      "actor": "Sentinel",
      "outputs": [
        {
          "artifact_key": "A07_RECEIPT"
        }
      ],
      "transitions": {
        "T_SUCCESS": "F99_COMPLETED"
      }
    },
    "E99_HALT": {
      "actor": "System Controller",
      "policy": "Halt and Log Critical Error.",
      "terminal": true
    },
    "F99_COMPLETED": {
      "actor": "System Controller",
      "policy": "Final success state.",
      "terminal": true
    },
    "S98_AUDIT_FALLBACK": {
        "actor": "System Auditor",
        "policy": "Standardized failure path for non-critical validation issues."
    }
  }
}