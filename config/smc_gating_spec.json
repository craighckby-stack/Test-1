{
  "description": "GSEP-C State Machine Controller (SMC) Configuration: Defining atomic stage constraints, explicit transition gates, and mandated I/O contracts.",
  "pipeline_id": "GSEP-C",
  "version": "2.0.0",
  "metadata": {
    "system_criticality": "Tier 1",
    "transition_policy": "Strict Sequential Gating"
  },
  "stages": {
    "S00_INIT": {
      "inputs": ["SYSTEM_BOOTSTRAP_SIGNAL"],
      "actor": "System Host",
      "outputs": [
        {"name": "S00_START_TOKEN", "artifact_id": "GSEP-C-A01"}
      ],
      "transitions": {
        "success": "S01_CRT_GEN",
        "default_failure": "E99_HALT"
      }
    },
    "S01_CRT_GEN": {
      "inputs": ["S00_START_TOKEN"],
      "actor": "CRoT Agent",
      "outputs": [
        {"name": "CSR", "artifact_id": "GSEP-C-A02"}
      ],
      "transitions": {
        "success": "S02_PASS_VALIDATE"
      }
    },
    "S02_PASS_VALIDATE": {
      "inputs": ["CSR"],
      "actor": "Verifier Node",
      "timeout_s": 30,
      "outputs": [
        {"name": "S02_PASS", "artifact_id": "GSEP-C-A03"}
      ],
      "transitions": {
        "success": "S07_ECVM_CALC"
      }
    },
    "S07_ECVM_CALC": {
      "inputs": ["S06_PASS"],
      "actor": "EMS",
      "outputs": [
        {"name": "ECVM", "artifact_id": "GSEP-C-A04"}
      ],
      "transitions": {
        "success": "S08_TEMM_CALC"
      }
    },
    "S08_TEMM_CALC": {
      "inputs": ["ECVM"],
      "actor": "EMS",
      "outputs": [
        {"name": "TEMM", "artifact_id": "GSEP-C-A05"}
      ],
      "transitions": {
        "success": "S11_COMMITMENT_LOCK"
      }
    },
    "S11_COMMITMENT_LOCK": {
      "inputs": ["CSR", "ECVM", "TEMM"],
      "actor": "GAX Executor",
      "gating_rule": "P-01 Finality (ACVD)",
      "outputs": [
        {"name": "P01_COMMITMENT_LOCK", "artifact_id": "GSEP-C-A06"}
      ],
      "transitions": {
        "success": "S14_RECEIPT_GEN",
        "validation_fail": "S11_AUDIT_LOG_FALLBACK"
      }
    },
    "S14_RECEIPT_GEN": {
      "inputs": ["P01_COMMITMENT_LOCK"],
      "actor": "Sentinel",
      "outputs": [
        {"name": "STATE_TRANSITION_RECEIPT", "artifact_id": "GSEP-C-A07"}
      ],
      "transitions": {
        "success": "F99_COMPLETED"
      }
    }
  }
}