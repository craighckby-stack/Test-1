{
  "description": "Standardized configuration governing the Protocol Integrity Manager (PIM) synchronization gates, centralizing failure definitions.",
  "version": "v2.0.0",
  "meta": {
    "standard": "GSEP-C/PIM-Constraint-Standard/v2",
    "gates_total": 4
  },
  "failure_modes": {
    "P_M01": {
      "description": "Operational Budget Violation",
      "severity": "WARNING",
      "action": "Soft Fail, Logging"
    },
    "P_M02": {
      "description": "Integrity State Mismatch (Tampering/Non-Determinism)",
      "severity": "CRITICAL",
      "action": "Hard Block, Rollback"
    },
    "P_R03": {
      "description": "Audit and Immutability Chain Failure",
      "severity": "BLOCKING",
      "action": "System Halt, Diagnostics"
    }
  },
  "gates": {
    "G0_PRE_FLIGHT_LOCK": {
      "stage": "INITIATION",
      "validation_protocol": "GAX_III",
      "required_artifact_ref": "EMSU.EMS_HASH",
      "constraints": [
        {
          "check_name": "IsManifestSealed",
          "fail_mode_id": "P_M02"
        }
      ]
    },
    "G1_BOUNDARY_CHECK": {
      "stage": "EXECUTION",
      "validation_protocol": "GAX_II",
      "required_artifact_ref": "DRO.ECVM_SIGNATURE",
      "constraints": [
        {
          "check_name": "ExecutionTimeUnderBudget",
          "fail_mode_id": "P_M01"
        },
        {
          "check_name": "ACVMThresholdsMet",
          "fail_mode_id": "P_M02"
        }
      ]
    },
    "G2_COMMITMENT_GATE": {
      "stage": "FINALIZATION",
      "validation_protocol": "GAX_I",
      "required_artifact_ref": "AASS.PSI_FINAL_HASH",
      "constraints": [
        {
          "check_name": "ISBImmutabilityVerified",
          "fail_mode_id": "P_M02"
        },
        {
          "check_name": "PsiFinalDeterminismCheck",
          "fail_mode_id": "P_M02"
        }
      ]
    },
    "G3_FINALITY_SEAL": {
      "stage": "AUDIT",
      "validation_protocol": "P_R03_AUDITABILITY",
      "required_artifact_ref": "AASS.STATE_SEAL_CERTIFICATE",
      "constraints": [
        {
          "check_name": "AASS_SignatureValidity",
          "fail_mode_id": "P_R03"
        }
      ]
    }
  }
}