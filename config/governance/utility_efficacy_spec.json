{
  "schema_version": "2.0",
  "description": "Defines critical operational metrics, thresholds, and governance policies for key system utilities across various operational domains.",
  "default_policy_id": "P_001_SYSTEM_SAFEGUARD",
  "operational_domains": {
    "inference_core_api": {
      "context": "Real-time, low-latency decision making.",
      "max_allowed_utilization_percent": 90,
      "utilities": {
        "embedding_generator": {
          "utility_id": "U_EMB_001",
          "criticality_level": "CRITICAL",
          "metrics": [
            {
              "name": "latency_p95_ms",
              "type": "GAUGE",
              "threshold": 45,
              "comparator": "LESS_THAN",
              "failure_policy_id": "P_002_LATENCY_VIOLATION"
            },
            {
              "name": "success_rate_percent",
              "type": "COUNTER",
              "threshold": 99.9,
              "comparator": "GREATER_THAN_EQUAL"
            }
          ],
          "failover": {
            "enabled": true,
            "target_utility_id": "U_EMB_002_SHADOW_CACHE"
          }
        }
      }
    },
    "self_optimization_training": {
      "context": "Asynchronous, high-throughput model refinement.",
      "max_allowed_utilization_percent": 100,
      "utilities": {
        "gradient_descent_planner": {
          "utility_id": "U_GD_001",
          "criticality_level": "HIGH",
          "metrics": [
            {
              "name": "convergence_stability_index",
              "type": "GAUGE",
              "threshold": 0.1,
              "comparator": "LESS_THAN",
              "failure_policy_id": "P_003_TRAINING_INSTABILITY"
            }
          ]
        }
      }
    }
  }
}