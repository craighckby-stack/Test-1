{
  "_metadata": {
    "version": "2.0",
    "last_updated": "2024-06-15T09:30:00Z",
    "description": "Sovereign Asset Configuration Registry (GACR) defines mandatory structural integrity and governance requirements for system assets.",
    "status": "ACTIVE"
  },
  "asset_types": {
    "CAC_Certified_Access_Credential": {
      "id": "CAC",
      "description": "Secure configuration defining Certified Access Credentials.",
      "encoding_standard": "JSON/RFC8259",
      "schema_ref": "governance/schemas/CAC_v1.json",
      "governance_level": "L5_CORE_CRITICAL",
      "required_integrity_checks": {
        "pre_ingress": ["SchemaValidation", "ChecksumSHA512"],
        "post_ingress": ["SignatureTrustChainVerification", "ImmutableHashLock"]
      },
      "mandatory_attributes": [
        {"name": "asset_version", "type": "semver", "validation_regex": "^v\\d+\\.\\d+"},
        {"name": "signing_key_id", "type": "UUID", "security_classification": "PUBLIC"},
        {"name": "checksum_sha512", "type": "hash", "required_for": ["INGRESS", "SYNC"]}
      ]
    },
    "CFTM_Configuration_Flow_Trace_Map": {
      "id": "CFTM",
      "description": "Trace map detailing the flow and provenance of configuration mutations.",
      "encoding_standard": "YAML/1.2",
      "schema_ref": "governance/schemas/CFTM_v1.yaml",
      "governance_level": "L3_OPERATIONAL",
      "required_integrity_checks": {
        "pre_ingress": ["SchemaValidation", "ContentSanitization"],
        "post_ingress": ["PolicyIdReferenceValidation"]
      },
      "mandatory_attributes": [
        {"name": "generation_timestamp", "type": "ISO8601"},
        {"name": "policy_id_reference", "type": "UUID"},
        {"name": "cryptographic_signature", "type": "signature"}
      ]
    }
  },
  "integrity_check_definitions": {
    "ChecksumSHA512": {"module": "Integrity.Hash", "algorithm": "SHA512"},
    "SignatureTrustChainVerification": {"module": "Integrity.Crypto", "method": "PKI_Chain_Verify"},
    "SchemaValidation": {"module": "Integrity.Structural", "method": "JSSchema_Reference_Check"},
    "ImmutableHashLock": {"module": "Integrity.Immutability", "method": "Ledger_Verify"}
  }
}