    "requiredDependencies": ["LogicEngine_v3", "TelemetryAuditor_v9"]
  },
  "rulesets": [
    {
      "ruleId": "EPB-SELF-MOD-001",
      "name": "Mandatory Pre-Evolution Vetting",
      "priority": 90,
      "context": "CODE_EVOLUTION.SELF_MODIFICATION",
      "condition": "cost_estimate_usd > 500 || risk_impact_score > 7.0",
      "action": "HALT_AND_REQUEST_HUMAN_REVIEW",
      "enforcementStrategy": "StrictMutex",
      "requiredAssessment": "RISK_MATRIX_V4"
    },
    {
      "ruleId": "EPB-COST-LIMIT-002",
      "name": "Compute Consumption Cap",
      "priority": 75,
      "context": "RESOURCE_ALLOCATION.COMPUTE",
      "condition": "current_compute_utilization_24h > allocated_budget_max * 0.9",
      "action": "Throttle(factor=0.5, duration=30m)",
      "enforcementStrategy": "AdaptiveRateLimit"
    }
  ]
