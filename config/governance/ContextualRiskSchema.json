{
  "$schema": "https://agi.sovereign/schemas/v94.1/governance/RiskSchema.schema.json",
  "name": "Contextual Risk Assessment Matrix",
  "description": "Defines standard inputs and scoring rules for calculating 'risk_impact_score' used by EPB rules.",
  "version": "4.0",
  "riskProfiles": [
    {
      "contextPath": "CODE_EVOLUTION.SELF_MODIFICATION",
      "inputs": ["dependency_change_count", "scope_of_change_lines", "safety_critical_module_impact"],
      "scoringLogic": {
        "baseScore": 3.0,
        "weights": {
          "dependency_change_count": 0.5,
          "safety_critical_module_impact": 4.0
        },
        "scalingFunction": "Logarithmic"
      },
      "riskThresholds": {
        "low": 3.0,
        "medium": 5.5,
        "high": 7.0
      }
    },
    {
      "contextPath": "EXTERNAL_API_INTEGRATION",
      "inputs": ["data_sensitivity_level", "endpoint_security_score"],
      "scoringLogic": { ... }
    }
  ]
}