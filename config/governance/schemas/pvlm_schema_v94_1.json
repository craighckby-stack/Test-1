{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://governance.v94.1/schemas/pvlm_v94_1.json",
  "title": "Policy Veto Logic Manifest Schema V94.1",
  "description": "Defines the required structure and integrity constraints for the Policy Veto Logic Manifest (PVLM), validated by the PCTM at pre-S0.",
  "type": "object",
  "required": ["version", "axiomatic_rules", "integrity_hash", "policy_type", "timestamp"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^V94\\.1\\.\\d{4}$",
      "description": "Semantic versioning enforced by PCTM."
    },
    "integrity_hash": {
      "type": "string",
      "format": "hex",
      "description": "Cryptographic signature (SHA-256) applied by GAX upon policy commit."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Time of policy finalization."
    },
    "policy_type": {
      "type": "string",
      "const": "PVLM",
      "description": "Manifest type identifier."
    },
    "axiomatic_rules": {
      "type": "array",
      "minItems": 1,
      "description": "List of non-negotiable policy prohibitions that trigger Veto S2 (Â¬S03).",
      "items": {
        "type": "object",
        "required": ["rule_id", "condition", "severity", "active"],
        "properties": {
          "rule_id": {"type": "string", "pattern": "^PVM\\d{3}$"},
          "condition": {"type": "string", "description": "Logic defining the axiomatic violation (e.g., DSL expression)."},
          "severity": {"type": "string", "enum": ["CRITICAL", "TERMINAL"]},
          "active": {"type": "boolean"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}