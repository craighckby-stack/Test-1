{
  "description": "Operational thresholds and required actions for TQM compliance failures based on metrics defined in TQM_Config.",
  "targets": [
    {
      "metric_id": "sys_resource_util",
      "link_gsep_stage": "S6",
      "conditions": [
        {
          "field": "cpu_load_avg_1m",
          "operator": "greater_than",
          "value": 0.95,
          "action": "ALERT_CRITICAL",
          "mitigation_strategy": "EXECUTE_RESOURCE_DOWNGRADE"
        }
      ]
    },
    {
      "metric_id": "behavioral_heuristics",
      "link_gsep_stage": "S6.5",
      "conditions": [
        {
          "field": "model_inference_latency_avg",
          "operator": "greater_than",
          "value": 500.0,
          "action": "HALT_S6_ADVANCEMENT",
          "mitigation_strategy": "TRIGGER_MODEL_ROLLBACK"
        }
      ]
    }
  ]
}