{
  "version": "2.0.0-AGI-TQM",
  "policy_metadata": {
    "last_updated": "$TIMESTAMP",
    "description": "Total Quality Management (TQM) mapping structure for Autonomous Code Evolution. Maps quantitative metric keys to required enforcement actions and governance handlers."
  },
  "quality_gates": {
    "Maintainability": {
      "domains": ["CORE_EVOLUTION", "CODE_SCAFFOLDING"],
      "policies": [
        {
          "id": "AEC-MC-001",
          "metric_key": "metrics/code/cyclomatic_complexity",
          "threshold": 12,
          "mode": "MAX_VIOLATION",
          "enforcement_handler": "EvolutionEngine.QueueRefactorTask",
          "severity": "WARNING",
          "context_scope": ["function", "method"],
          "auto_fixable": true
        },
        {
          "id": "AEC-MC-002",
          "metric_key": "metrics/design/coupling_index",
          "threshold": 0.85,
          "mode": "MAX_VIOLATION",
          "enforcement_handler": "ArchitectureReviewer.FlagHighCoupling",
          "severity": "CRITICAL",
          "context_scope": ["module", "component"],
          "auto_fixable": false
        }
      ]
    },
    "Performance": {
      "domains": ["RUNTIME_CRITICAL"],
      "policies": [
        {
          "id": "AEC-PC-001",
          "metric_key": "metrics/runtime/latency_p95_ms",
          "threshold": 45,
          "mode": "MAX_VIOLATION",
          "enforcement_handler": "PerformanceProfiler.InitiateOptimizationCycle",
          "severity": "IMPERATIVE",
          "context_scope": ["api_endpoint"],
          "auto_fixable": true
        }
      ]
    }
  },
  "default_fallbacks": {
    "unmapped_metric_action": "LogGovernanceError",
    "default_severity": "NOTICE"
  }
}