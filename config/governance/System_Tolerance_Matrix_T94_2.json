{
  "manifest_version": "STM_T94.3_Evolved",
  "governance_scope": "Sovereign_Operational_Integrity",
  "tolerance_domains": {
    "Model_Performance_Stability": {
      "metric_id": "MPAM_Drift_Percentage",
      "unit": "Percentage (0.0 - 1.0)",
      "base_sampling_rate_ms": 1000,
      "thresholds": [
        {
          "level": "Warning",
          "trigger": 0.003,
          "action": "L1_Self_Correction_Patch",
          "escalation_code": "RRP-002-S1"
        },
        {
          "level": "Critical",
          "trigger": 0.005,
          "action": "State_Rollback_Request",
          "escalation_code": "RRP-002-S3"
        }
      ]
    },
    "Policy_Value_Adherence": {
      "metric_id": "PVLM_Violation_Rate_5min",
      "unit": "Count / 5 minutes",
      "base_sampling_rate_ms": 5000,
      "thresholds": [
        {
          "level": "Minor",
          "trigger": 1,
          "action": "Transient_Veto_Logging",
          "escalation_code": "RRP-001-S1"
        },
        {
          "level": "Critical",
          "trigger": 3,
          "action": "System_Pause_Self_Diagnosis",
          "escalation_code": "RRP-001-S2"
        }
      ]
    }
  },
  "default_l0_response": {
    "action": "Execute_L0_Monitoring_Log_Enrichment",
    "details": "High fidelity data logging initiated when metrics are below Warning/Minor thresholds."
  }
}