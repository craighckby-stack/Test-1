      "priority_weight_enforcement": {
        "/core": 0.30,
        "/agents": 0.25,
        "/emergent": 0.20,
        "/governance": 0.15,
        "support_infrastructure": {
          "weight": 0.10,
          "coverage_directories": [
            "/utils",
            "/config",
            "/data",
            "/protocols",
            "/metrics",
            "/architecture",
            "/orchestration"
          ]
        }
