{
  "system_metadata": {
    "aoc_config_version": "V98.1.1",
    "deployment_id": "standard_alpha",
    "active_mode": "SAFETY_DEEP_READONLY"
  },
  
  "operational_modes": {
    "SAFETY_DEEP_READONLY": {
      "state_description": "Highest safety level. Allows metrics logging, disallows all write operations and modifications.",
      "allow_self_modification": false,
      "enforced_risk_floor_multiplier": 1.5 
    },
    "STANDARD_EVOLUTION": {
      "state_description": "Normal operation. Autonomous refactoring allowed within specified budget and simulation constraints.",
      "allow_self_modification": true,
      "enforced_risk_floor_multiplier": 1.0
    }
  },
  
  "risk_management": {
    "dynamic_floor_activation": true,
    "baseline_risk_floor": 0.05,
    "max_allowed_entropy_delta": 0.30, 
    "required_metrics_list": [
      {"metric_key": "latency_p99", "severity": "CRITICAL"},
      {"metric_key": "failure_rate", "severity": "CRITICAL"},
      {"metric_key": "resource_utilization", "severity": "HIGH"}
    ]
  },
  
  "policy_enforcement": {
    "veto_constraints": [
      {
        "id": "C-15.01",
        "name": "Minimum Efficacy Threshold",
        "metric_key": "system_efficacy_auditor.pass_rate",
        "threshold_type": "min_performance",
        "threshold_value": 0.98,
        "action": "VETO_HARD_STOP"
      },
      {
        "id": "C-15.02",
        "name": "Code Entropy Limit",
        "metric_key": "code_entropy_estimate.normalized_value",
        "threshold_type": "max_entropy",
        "threshold_value": 0.75,
        "action": "VETO_REFECTOR_MANDATE"
      }
    ],
    "mandated_quality_checks": {
      "provenance_required": true,
      "min_simulation_pass_rate": 0.9999
    }
  }
}