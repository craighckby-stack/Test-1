{
  "FDLSSpec": {
    "protocol_version": {
      "type": "string",
      "pattern": "^v\d+\.\d+$"
    },
    "workflow": {
      "min_steps": 1,
      "required_roles": ["coordinator", "participant" ]
    }
  },
  "SecurityConstraints": {
    "auth_mechanism": {
      "allowed_values": ["mTLS", "OAuth2", "JWT", "None"]
    }
  },
  "logic_checks": [
    "If FDLSSpec.security_constraints.auth_mechanism is 'None', no WorkflowStep can have requires_security=True"
  ]
}