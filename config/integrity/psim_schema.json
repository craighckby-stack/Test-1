{
  "schema_version": "2.0.0",
  "description": "Schema for the Payload Security and Integrity Module (PSIM). Standardizes cryptographic validation, provenance tracking, and behavioral semantic integrity rules.",
  "integrity_level": "M-02_CRITICAL",
  "hashing": {
    "algorithm": "SHA3-512",
    "key_derivation": {
      "kdf_type": "HKDF_SHA512",
      "salt_entropy_bits": 256
    },
    "required_hash_types": [
      "PAYLOAD",
      "METADATA",
      "EPDP_FINGERPRINT"
    ]
  },
  "provenance": {
    "chain_length_min": 8,
    "chain_validation_mode": "STRICT_LINEAR",
    "linked_managers": [
      "RACM",
      "CEE"
    ],
    "time_drift_tolerance_ms": 1500
  },
  "semantic_analysis": {
    "enabled": true,
    "model_id": "SI_V94_1_P",
    "diff_threshold_max": 0.02,
    "policy_config_ref": "/config/integrity/semantic_anomaly_definitions.json",
    "failure_mode": "FLAG_ADVISORY"
  },
  "policy_enforcement": {
    "whitelist_violation_action": "REJECT_HARDSUSPEND_B",
    "action_levels": {
      "REJECT_HARDSUSPEND_B": "Halt execution and flag primary diagnostic channel.",
      "FLAG_ADVISORY": "Log anomaly and continue processing."
    },
    "default_action": "FLAG_ADVISORY"
  }
}