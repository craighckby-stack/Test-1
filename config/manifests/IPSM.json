{
  "manifest_id": "IPSM_v2_1",
  "schema_version": "1.0.0",
  "metadata": {
    "name": "Intelligent Process Supervision Module",
    "description": "Manages lifecycle, resource allocation, and fault tolerance for subordinate agent processes.",
    "priority_level": 900
  },
  "dependencies": [
    {
      "module_id": "CORE_SCHEDULER",
      "version_constraint": ">=3.5.0"
    },
    {
      "module_id": "GLOBAL_TELEMETRY",
      "version_constraint": "1.x"
    }
  ],
  "runtime_config": {
    "concurrency_limit": 16,
    "resource_profile": "HIGH_AVAILABILITY",
    "scaling_policy": {
      "type": "AUTOSCALE_CPU",
      "threshold_percent": 75,
      "max_instances": 4
    },
    "fault_tolerance": {
      "retry_attempts": 3,
      "backoff_strategy": "EXPONENTIAL_JITTER",
      "max_delay_ms": 30000
    }
  },
  "validation_schema_ref": "schemas/IPSM_State_Schema.json"
}