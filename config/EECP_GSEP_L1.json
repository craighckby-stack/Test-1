class SyntheticSynergyManager {
  #regressionTools: any[];
  #repository: any;

  constructor(kernel) {
    this.#regressionTools = kernel.regressionTools;
    this.#repository = kernel.repository;
  }

  async loadTools(toolNames) {
    try {
      const tools = await this.#repository.fetchTools(toolNames);
      const synergyTools = tools.map((tool) => {
        const toolCode = require(`./tools/${tool.name}.js`);
        return toolCode;
      });
      this.#regressionTools.push(...synergyTools);
      return synergyTools;
    } catch (error) {
      console.error(error);
      return [];
    }
  }
}

