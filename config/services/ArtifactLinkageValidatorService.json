{
  "service_name": "ArtifactLinkageValidator",
  "description": "Defines mandatory linkage rules and checks for artifact promotion between evolutionary stages.",
  "config_version": "v2.0",
  "defaults": {
    "hash_field": "parent_hash",
    "integrity_check_enabled": true,
    "linkage_type": "DIRECT_PARENT"
  },
  "transitions": {
    "L0_Proposal": {
      "target_type": "L1_C-FRAME"
    },
    "L1_C-FRAME": {
      "target_type": "L2_CodeEvolution"
    },
    "L2_CodeEvolution": {
      "target_type": "L3_EvaluationReport"
    },
    "L3_EvaluationReport": {
      "target_type": "L4_DSC"
    },
    "L4_DSC": {
      "target_type": "L5_Commitment",
      "required_checks": ["signature_verification"]
    }
  }
}