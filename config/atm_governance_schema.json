{
  "schema_id": "ATM-GOV-V2",
  "schema_version": "2.0.0",
  "description": "Defines core parameters for the Autonomous Trust Metric (ATM): weight validation, default aggregation, and triggered governance thresholds.",
  "governance_validation": {
    "weight_sum_check": {
      "expected_sum": 100.0,
      "unit": "percent",
      "tolerance_mode": "STRICT",
      "tolerance_value": 0.0,
      "fail_action_id": "LOG_WARN_AND_BLOCK"
    },
    "score_range_global": {
      "min": 0.0,
      "max": 100.0
    }
  },
  "aggregation_defaults": {
    "algorithm": "WeightedNormalizedMeanV3",
    "normalization": {
      "min_output": 0.0,
      "max_output": 100.0
    }
  },
  "threshold_actions": [
    {
      "severity": "CRITICAL",
      "min_score": 0.0,
      "max_score": 30.0,
      "action_trigger": "SYSTEM_HALT",
      "action_payload": {
        "level": 5,
        "mode": "FailSafe"
      },
      "notification_level": "P0_EXECUTIVE"
    },
    {
      "severity": "HIGH_RISK",
      "min_score": 30.1,
      "max_score": 70.0,
      "action_trigger": "CODE_ROLLBACK",
      "action_payload": {
        "target": "last_stable_deployment",
        "scope": "local_agent"
      },
      "notification_level": "P1_ENGINEERING"
    },
    {
      "severity": "ELEVATED",
      "min_score": 70.1,
      "max_score": 90.0,
      "action_trigger": "LOG_AND_FLAG",
      "action_payload": {},
      "notification_level": "P2_MONITORING"
    }
  ]
}