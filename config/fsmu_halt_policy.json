{
  "policy_id": "FSMU_CRITICAL_HALT_V2",
  "description": "Defines mandated security and isolation procedures upon critical FSMU failure or exception.",
  "ih_protocol_version": "v1.2",
  "halt_context": {
    "severity_level": "High_S3",
    "isolation_sla_ms": 300,
    "critical_threshold_bytes": 4096
  },
  "isolation_mandate": {
    "quarantine_enabled": true,
    "network_control": {
      "sever_policy": "Mandatory_L3_Purge",
      "fail_safe_connectivity": false
    },
    "memory_sanitization": [
      {
        "module": "Input_Buffer",
        "action": "Zeroize_Immediate"
      },
      {
        "module": "Commitment_Block",
        "action": "Cryptographic_Wipe_K256"
      }
    ]
  },
  "forensics_package": {
    "fdls_format": "AASS_Signed_TAR_LZMA",
    "log_retention_stages": 3,
    "trace_depth": "Full_State_Vector",
    "signature_policy": {
      "signer": "AASS_RSA_P256",
      "chain_of_custody_hashing": "SHA3_512"
    },
    "secure_transfer_enabled": true
  },
  "halt_timeout_ms": 450
}