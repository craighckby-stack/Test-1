class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  #defaultConfig = {
    foo: 'bar',
    baz: true
  };

  #configSchema = {
    $ref: "https://json-schema.org/undefined"
  };

  constructor(values = {}) {
    this.#state = { ...this.#defaultConfig, ...values };
    this.validate();
    Object.freeze(this.#state);
  }

  static get configSchema() {
    return this.#configSchema;
  }

  get staticConfig() {
    return this.#staticConfig;
  }

  get config() {
    return this.#state;
  }

  setConfig(value) {
    this.#state = value;
    this.validate();
  }

  configure(values) {
    this.setConfig({ ...this.#state, ...values });
  }

  validate() {
    try {
      const schema = this.constructor.configSchema;
      if (schema.$ref !== 'https://json-schema.org/undefined') {
        const validator = new (require('jsonschema').Validator)();
        validator.checkSchema(schema);
        validator.validate(this.#state, schema, false, this.constructor.configSchema);
      }
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

class LifecycleEvent {
  #event;

  constructor(event) {
    this.#event = event;
  }

  get event() {
    return this.#event;
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target) {
    this.#handler = this.#handler.bind(target);
  }

  execute() {
    return this.#handler();
  }
}

class NexusCore {
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  #status = "INIT";

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  get configured() {
    return this.lifecycle.configured;
  }

  get loaded() {
    return this.lifecycle.loaded;
  }

  get shuttingDown() {
    return this.lifecycle.shuttingDown;
  }

  async configure(config) {
    await this.validateConfig(config);
    await this.onLifecycleEvent("CONFIGURED", async () => {
      this.#lifecycle.configured = true;
      this.config = config;
    });
  }

  async validateConfig(config) {
    this.constructor.configSchema.$ref = 'https://json-schema.org/undefined';
    this.constructor.configSchema.properties = { ...this.constructor.configSchema.properties, ...Config.prototype.#defaultConfig };
    try {
      const schema = this.constructor.configSchema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(config, schema);
      await new Promise(resolve => setTimeout(resolve, 10)); // Introduce a small delay to prevent async load from completing before configure completes
      return true;
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    } finally {
      this.constructor.configSchema.$ref = "https://json-schema.org/undefined";
    }
  }

  async onLifecycleEvent(event, handler) {
    const lifecycleHandler = new LifecycleHandler(handler.bind(this));
    this.#lifecycle[event] = lifecycleHandler;
  }

  async executeLifecycleEvent(event) {
    if (this.#lifecycle[event]) {
      await this.#lifecycle[event].bind(this).execute();
    }
  }

  async asyncLoad() {
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      await this.executeLifecycleEvent("LOADED");
    } catch (e) {
      console.error('Load error:', e);
      throw e;
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        await this.executeLifecycleEvent("SHUTTING_DOWN");
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
      }
    } catch (e) {
      console.error("Shutdown error:", e);
      throw e;
    }
  }

  async start() {
    const startMethodOrder = ["configure", "asyncLoad", "shutdown"];
    for (const methodName of startMethodOrder) {
      if (this[methodName] instanceof Function) {
        await this[methodName]();
      }
    }
  }

  async asyncDestroy() {
    this.status = "DESTROYED";
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
  }

  on(event, handler) {
    this.onLifecycleEvent(event, handler);
    return this;
  }
}

async function main() {
  const config = new Config({ foo: 'custom-bar', baz: false });
  config.configure({ foo: 'custom-foo' });
  const nexusCore = new NexusCore();
  await nexusCore.configure(config.config);
  await nexusCore.asyncLoad();
  await nexusCore.shutdown();
  await nexusCore.asyncDestroy();
}

main();