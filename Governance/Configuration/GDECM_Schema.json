class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  #defaultConfig = {
    foo: 'bar',
    baz: true
  };

  static get staticConfig() {
    return this.#staticConfig;
  }

  static get defaultConfig() {
    return this.#defaultConfig;
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
  }

  constructor(config = {}) {
    Object.freeze(this);
    this.#config = new Proxy(this.defaultConfig, {
      set(target, property, value) {
        if (Object.hasOwn(this.configSchema.properties, property)) {
          target[property] = value;
          return true;
        } else {
          return false;
        }
      }
    });
    this.update(config);
  }

  validate() {
    const schema = Config.configSchema;
    const validator = new (require('jsonschema').Validator)();
    validator.checkSchema(schema);
    try {
      validator.validate(this.#config, schema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  get config() {
    this.validate();
    return this.#config;
  }

  update(config) {
    this.#config = { ...this.#config, ...config };
    this.validate();
  }
}

class LifecycleEvent {
  #event;

  constructor(event) {
    this.#event = event;
  }

  get event() {
    return this.#event;
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target = this) {
    this.#handler = this.#handler.bind(target);
  }

  execute() {
    this.#handler();
  }
}

class NexusCore {
  #states = {
    INIT: 'INIT',
    CONFIGURED: 'CONFIGURED',
    LOADED: 'LOADED',
    SHUTDOWN: 'SHUTDOWN',
    DESTROYED: 'DESTROYED'
  };

  #lifecycle = this.#createLifecycleState();

  #status = 'INIT';

  #events = {};

  constructor() {
    Object.freeze(this);
    this.#bindLifecycle();

    this.config = new Config();
  }

  #bindLifecycle() {
    this.onLifecycle = this._generateLifecycleHandler("on");
    this.configure = this._generateLifecycleHandler("configure");
    this.load = this._generateLifecycleHandler("load");
    this.shutdown = this._generateLifecycleHandler("shutdown");
    this.destroy = this._generateLifecycleHandler("destroy");
  }

  _generateLifecycleHandler(methodName) {
    return async function (this: any) {
      const handler = (this: any) => this[methodName]();
      return new LifecycleHandler(handler).bind(this).execute();
    };
  }

  #createLifecycleState() {
    return {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
  }

  get status() {
    return this.#status;
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  get config() {
    return this.#config;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN' || value === 'DESTROYED') {
        lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  async configure(config = {}) {
    await this.validateConfig(config);
    this.#lifecycle = { ...this.#lifecycle, configured: true };
    this.config.update(config);
  }

  async validateConfig(config) {
    const configSchema = Config.configSchema;
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(configSchema);
      validator.validate(config, configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  async load() {
    try {
      await this.configure(this.config.defaultConfig);
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle = { ...this.#lifecycle, loaded: true };
      this.status = 'LOADED';
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle = { ...this.#lifecycle, shuttingDown: true };
        this.status = 'SHUTDOWN';
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async destroy() {
    try {
      this.#lifecycle = this.#createLifecycleState();
      this.status = "DESTROYED";
      console.log("NexusCore instance destroyed.");
    } catch (e) {
      console.error("Destroy error:", e);
    }
  }

  async on(event, handler) {
    try {
      const lifecycleHandler = new LifecycleHandler(handler);
      this.#events[event] = lifecycleHandler;
      await lifecycleHandler.execute();
    } catch (e) {
      console.error("On error:", e);
    }
  }

  async start() {
    const startMethodOrder = ["configure", "load"];
    for (const methodName of startMethodOrder) {
      if (methodName in this && typeof this[methodName] === "function") {
        await this[methodName]();
      }
    }
  }
}