{
  "protocol_id": "VEC/P01",
  "version": "1.0.0",
  "status": "ACTIVE",
  "metadata": {
    "name": "Vector Exchange Protocol",
    "description": "Standardized format for exchanging high-dimensional vectors and associated metadata, optimized for machine learning environments.",
    "maintainer": "Sovereign AGI Core",
    "release_date": "2024-05-30"
  },
  "definitions": {
    "DataEncoding": {
      "type": "string",
      "enum": [
        "float32",
        "float64",
        "int8"
      ],
      "default": "float32"
    },
    "VectorPayload": {
      "type": "object",
      "required": [
        "vector",
        "dimensions",
        "encoding"
      ],
      "properties": {
        "vector": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "description": "The dense vector data."
        },
        "dimensions": {
          "type": "integer",
          "description": "Dimensionality of the vector."
        },
        "encoding": {
          "$ref": "#/definitions/DataEncoding"
        },
        "id": {
          "type": "string",
          "description": "Unique identifier for the vector, mandatory for ingestion."
        },
        "metadata_checksum": {
          "type": "string",
          "description": "SHA256 checksum of attached metadata (if external)."
        }
      }
    },
    "ResponseFrame": {
      "type": "object",
      "required": [
        "status_code",
        "timestamp"
      ],
      "properties": {
        "status_code": {
          "type": "integer",
          "description": "HTTP-like status code (200, 400, 500)."
        },
        "status_message": {
          "type": "string",
          "enum": [
            "OK",
            "MALFORMED_REQUEST",
            "INTERNAL_ERROR",
            "NOT_FOUND"
          ]
        },
        "timestamp": {
          "type": "string",
          "format": "ISO8601"
        },
        "data": {
          "type": "array",
          "description": "Array of requested VectorPayloads or success message."
        },
        "error_detail": {
          "type": "object",
          "description": "Detailed error information on failure."
        }
      }
    }
  },
  "endpoints": {
    "INGEST": {
      "path": "/v1/vec/ingest",
      "method": "POST",
      "description": "Ingests one or more VectorPayloads.",
      "request_schema": {
        "type": "array",
        "items": {
          "$ref": "#/definitions/VectorPayload"
        }
      },
      "response_schema": {
        "$ref": "#/definitions/ResponseFrame"
      }
    },
    "QUERY": {
      "path": "/v1/vec/query",
      "method": "POST",
      "description": "Queries the vector store based on a query vector.",
      "request_schema": {
        "$ref": "#/definitions/VectorPayload"
      },
      "response_schema": {
        "$ref": "#/definitions/ResponseFrame"
      }
    }
  }
}