{
  "$schema": "http://sgs-v97.5/schema/mqm",
  "metadata": {
    "version": "2.0-TIERED",
    "owner": "GAX/MQM_Core"
  },
  "policy_config": {
    "version_tag": "ARES_MQM_V2.0",
    "enforcement_tiers": {
      "CRITICAL_P1": {
        "description": "High business impact models. Fast quarantine, low tolerance.",
        "failure_criteria": {
          "max_consecutive_reruns": 2,
          "window_hrs": 12 
        },
        "thresholds": {
          "s3_storage_latency_pct": 0.10,
          "s4_model_drift_violations": 1 
        }
      },
      "STANDARD_P2": {
        "description": "Default operational models. Standard tolerance.",
        "failure_criteria": {
          "max_consecutive_reruns": 4,
          "window_hrs": 72 
        },
        "thresholds": {
          "s3_storage_latency_pct": 0.20,
          "s4_model_drift_violations": 3
        }
      }
    },
    "default_tier": "STANDARD_P2"
  },
  "quarantined_models": [
    {
      "model_id": "UUID_MODEL_A",
      "entry_timestamp": "ISO8601",
      "enforcement_tier": "CRITICAL_P1",
      "remediation": {
        "exit_criteria": "Certified Model Recalibration",
        "protocol_id": "Model_Remediation_Protocol_V1.1"
      },
      "reason_code": "MPAM_CRITICAL_DRIFT_S04",
      "gsep_failure_count": 4,
      "status": "ACTIVE_QUARANTINE"
    }
  ],
  "certified_remediation_protocols": [
    {
      "protocol_id": "Model_Remediation_Protocol_V1.1",
      "activation_priority": 100,
      "description": "Standard retraining/recalibration sequence based on V97.5 standards."
    }
  ]
}