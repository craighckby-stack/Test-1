class Config {
  static get staticConfig() {
    return {
      VERSION: "1.0.0",
      env: process.env.NODE_ENV || "development"
    };
  }

  constructor(values = {}) {
    this.#setValues(values);
  }

  #setValues(values) {
    Object.freeze(Object.assign(this, values));
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
  }

  validate() {
    try {
      const schema = Config.configSchema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(this, schema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

class LifecycleEvent {
  #event;

  constructor(event) {
    this.#event = event;
  }

  get event() {
    return this.#event;
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target = this) {
    this.#handler = this.#handler.bind(target);
  }

  execute() {
    this.#handler();
  }

  unbind() {
    this.#handler = null;
  }
}

class NexusCore {
  #privateConfig = {};
  #privateLifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };
  #privateStatus = "INIT";
  #configLock = false;

  get config() {
    return this.#privateConfig;
  }

  get status() {
    return this.#privateStatus;
  }

  set status(value) {
    const currentValue = this.#privateStatus;
    const lifecycle = this.#privateLifecycle;
    this.#privateStatus = value;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#privateLifecycle;
  }

  #validateConfig(config) {
    const configSchema = Config.configSchema;
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(configSchema);
      validator.validate(config, configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  configure(config) {
    if (this.#configLock) {
      throw new Error("Config cannot be set while NexusCore instance is in use.");
    }
    this.#privateConfig = config;
    this.#validateConfig(config);
    this.executeLifecycleEvent("CONFIGURED");
    this.#privateLifecycle.configured = true;
    this.#configLock = false;
  }

  async load() {
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#privateLifecycle.loaded = true;
      this.executeLifecycleEvent("LOADED");
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  async shutdown() {
    try {
      if (!this.#privateLifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#privateLifecycle.shuttingDown = true;
        this.executeLifecycleEvent("SHUTTING_DOWN");
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    await this.configure(Config.defaultConfig);
    for (const methodName of startMethodOrder) {
      if (this[methodName] instanceof Function) {
        await this[methodName]();
      }
    }
  }

  async destroy() {
    this.status = "DESTROYED";
    this.#privateLifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
  }

  #executeLifecycleEvent(event) {
    if (this.#privateLifecycle[event]) {
      this.#privateLifecycle[event].bind(this).execute();
    }
  }

  on(event, handler) {
    const lifecycleEvent = new LifecycleEvent(event);
    const lifecycleHandler = new LifecycleHandler(handler);
    this.#privateLifecycle[event] = lifecycleHandler;
    lifecycleHandler.bind(this);
    return lifecycleHandler;
  }

  get on() {
    return (event, handler) => {
      return this.on(event, handler);
    };
  }
}

