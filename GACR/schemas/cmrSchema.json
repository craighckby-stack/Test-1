{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "GACR_CMR_Schema_v1",
  "title": "GACR Configuration and Maturity Register Schema",
  "type": "object",
  "properties": {
    "register_id": {"type": "string", "pattern": "^GACR_CMR_V\\d+\\.\\d+$"},
    "last_updated": {"type": "string", "format": "date-time"},
    "status": {"type": "string", "enum": ["Draft", "Testing", "Stable", "Deprecated"]},
    "system_target_version": {"type": "number", "description": "Target AGI version for compatibility."},
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version", "maturity_level", "integrity_hash"],
        "properties": {
          "name": {"type": "string"},
          "version": {"type": "string", "description": "Semantic Versioning or equivalent."},
          "maturity_level": {"type": "string", "enum": ["Alpha", "Beta", "ProductionReady", "Obsolete"]},
          "dependencies": {"type": "array", "items": {"type": "string"}},
          "integrity_hash": {"type": "string", "pattern": "^[a-f0-9]{16,64}$", "description": "SHA hash of the associated configuration/code artifact."},
          "runtime_environment": {"type": "string"}
        }
      }
    },
    "policy_version": {"type": "string"}
  },
  "required": ["register_id", "last_updated", "modules", "system_target_version"]
}