class Config {
  static get staticConfig() {
    return {
      VERSION: "1.0.0",
      env: "development"
    };
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      },
      required: ['foo', 'baz']
    };
  }

  constructor(values = {}) {
    this.setValues(values);
  }

  setValues(values) {
    Object.assign(this, values);
  }

  validate() {
    try {
      const schema = Config.configSchema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(this, schema);
    } catch (e) {
      throw e;
    }
  }
}

class LifecycleHandler {
  constructor(handler, context) {
    this.handler = handler;
    this.context = context;
    this.bind();
  }

  bind() {
    this.handler = this.handler.bind(this.context);
  }

  execute() {
    this.handler();
  }
}

class Event {
  constructor(event) {
    this.event = event;
    this.handlers = [];
  }

  on(handler) {
    this.handlers.push(handler);
    return this;
  }

  emit() {
    for (const handler of this.handlers) {
      handler.execute();
    }
  }
}

class Lifecycle {
  constructor(configured, loaded, shuttingDown) {
    this.configured = new Event(configured);
    this.loaded = new Event(loaded);
    this.shuttingDown = new Event(shuttingDown);
  }

  isConfigured() {
    return this.configured.handlers.length > 0;
  }

  isLoaded() {
    return this.loaded.handlers.length > 0;
  }

  isShuttingDown() {
    return this.shuttingDown.handlers.length > 0;
  }
}

class NexusCore {
  #lifecycle = new Lifecycle(false, false, false);
  #status = "INIT";
  #config = null;
  #disposed = false;

  get status() {
    return this.#status;
  }

  set status(value) {
    if (this.#disposed) {
      throw new Error('NexusCore instance is disposed');
    }
    this.#status = value;
    const currentValue = this.#status;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      this.#lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  async configure(config) {
    if (this.#disposed) {
      throw new Error('NexusCore instance is disposed');
    }
    this.validateConfig(config);
    this.#config = config;
    this.#lifecycle.configured.emit();
  }

  async validateConfig(config) {
    const schema = Config.configSchema;
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(config, schema);
    } catch (e) {
      throw e;
    }
  }

  async destroy() {
    this.#disposed = true;
    this.#status = "DESTROYED";
    this.#lifecycle = new Lifecycle(false, false, false);
  }

  async _callHandler(methodName) {
    try {
      if (this[methodName] instanceof Function) {
        await this[methodName]();
      }
    } catch (e) {
      console.error(`Error occurred during ${methodName} method call:`, e);
    }
  }

  async start() {
    if (this.#disposed) {
      throw new Error('NexusCore instance is disposed');
    }
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      await this._callHandler(methodName);
    }
  }

  async load() {
    try {
      if (this.#disposed) {
        throw new Error('NexusCore instance is disposed');
      }
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded.emit();
    } catch (e) {
      throw e;
    }
  }

  async shutdown() {
    try {
      if (this.#disposed) {
        throw new Error('NexusCore instance is disposed');
      }
      console.log("Shutdown initiated...");
      this.#lifecycle.shuttingDown.emit();
      this.#lifecycle.shuttingDown = true;
      console.log("Shutdown complete...");
      this.status = "SHUTDOWN";
    } catch (e) {
      throw e;
    }
  }
}

const nexusCore = new NexusCore();
nexusCore.on('CONFIGURED').on(() => {
  console.log('Lifecycle CONFIGURED event emitted');
});
nexusCore.on('DESTROYED').on(() => {
  console.log('NexusCore instance destroyed.');
});
nexusCore.configure(Config.defaultConfig);
nexusCore.start().catch((error) => {
  console.error('Error:', error);
  nexusCore.destroy();
}).finally(() => {
  console.log('NexusCore instance destroyed.');
});


