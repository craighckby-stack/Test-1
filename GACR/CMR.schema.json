class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: "development"
  };

  #defaultConfig = {
    foo: 'bar',
    baz: true
  };

  #configSchema = {
    type: 'object',
    properties: {
      foo: { type: 'string' },
      baz: { type: 'boolean' }
    },
    required: ['foo', 'baz']
  };

  constructor(values = {}) {
    this.setValues(values);
  }

  setValues(values) {
    Object.assign(this, values);
  }

  validate() {
    try {
      const { properties } = Config.#configSchema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(Config.#configSchema);
      validator.validate(this, Config.#configSchema);
    } catch (e) {
      throw e;
    }
  }
}

class LifecycleHandler {
  constructor(handler, context) {
    this.handler = handler;
    this.context = context;
    this.bind();
  }

  bind() {
    this.handler = this.handler.bind(this.context);
  }

  execute() {
    this.handler();
  }
}

class Event {
  constructor(event) {
    this.event = event;
    this.handlers = [];
  }

  on(handler) {
    this.handlers.push(handler);
    return this;
  }

  emit() {
    for (const handler of this.handlers) {
      handler.execute();
    }
  }
}

class Lifecycle {
  #configured = false;
  #loaded = false;
  #shuttingDown = false;

  constructor() {}

  isConfigured() {
    return this.#configured;
  }

  isLoaded() {
    return this.#loaded;
  }

  isShuttingDown() {
    return this.#shuttingDown;
  }

  configure() {
    this.#configured = true;
    return this;
  }

  loaded() {
    this.#loaded = true;
    return this;
  }

  shuttingDown() {
    this.#shuttingDown = true;
    return this;
  }
}

class NexusCore {
  #lifecycle = new Lifecycle();
  #status = "INIT";
  #config = null;
  #disposed = false;

  get status() {
    return this.#status;
  }

  set status(value) {
    if (this.#disposed) {
      throw new Error('NexusCore instance is disposed');
    }
    this.#status = value;
    const currentPosition = this.#status;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
    }
    if (currentPosition === 'INIT' && value !== 'INIT') {
      this.#lifecycle = this.#lifecycle.configure();
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  async configure(config) {
    if (this.#disposed) {
      throw new Error('NexusCore instance is disposed');
    }
    await this.validateConfig(config);
    this.#config = config;
    this.#lifecycle = this.#lifecycle.configure();
  }

  async validateConfig(config) {
    const { properties } = this.#configSchema;
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(this.#configSchema);
      validator.validate(config, this.#configSchema);
    } catch (e) {
      throw e;
    }
  }

  get #configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      },
      required: ['foo', 'baz']
    };
  }

  async destroy() {
    this.#disposed = true;
    this.#status = "DESTROYED";
    this.#lifecycle = new Lifecycle();
  }

  async _callHandler(methodName) {
    try {
      if (this[methodName] instanceof Function) {
        await this[methodName]();
      }
    } catch (e) {
      console.error(`Error occurred during ${methodName} method call:`, e);
    }
  }

  async start() {
    if (this.#disposed) {
      throw new Error('NexusCore instance is disposed');
    }
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      await this._callHandler(methodName);
    }
  }

  async load() {
    try {
      if (this.#disposed) {
        throw new Error('NexusCore instance is disposed');
      }
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle = this.#lifecycle.loaded();
    } catch (e) {
      throw e;
    }
  }

  async shutdown() {
    try {
      if (this.#disposed) {
        throw new Error('NexusCore instance is disposed');
      }
      console.log("Shutdown initiated...");
      this.#lifecycle = this.#lifecycle.shuttingDown();
      console.log("Shutdown complete...");
      this.status = "SHUTDOWN";
    } catch (e) {
      throw e;
    }
  }
}

const nexusCore = new NexusCore();
nexusCore.on('CONFIGURED').on(() => {
  console.log('Lifecycle CONFIGURED event emitted');
});
nexusCore.on('DESTROYED').on(() => {
  console.log('NexusCore instance destroyed.');
});
nexusCore.configure(Config.defaultConfig);
nexusCore.start().catch((error) => {
  console.error('Error:', error);
  nexusCore.destroy();
}).finally(() => {
  console.log('NexusCore instance destroyed.');
});