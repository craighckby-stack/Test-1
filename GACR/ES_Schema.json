class Config {
  static #instance;

  static get instance() {
    if (!Config.#instance) {
      Config.#instance = new Config();
    }
    return Config.#instance;
  }

  static get staticConfig() {
    return {
      VERSION: "1.0.0",
      env: process.env.NODE_ENV || "development"
    };
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
  }

  constructor() {
    this.#initialized = false;
  }

  get initialized() {
    return this.#initialized;
  }

  set initialized(value) {
    this.#initialized = value;
  }

  static async configure(config = Config.defaultConfig) {
    await Config.#instance.validateConfig(config);
    return config;
  }

  async validateConfig(schema = Config.configSchema, config = Config.instance) {
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(config, schema);
      Config.instance.initialized = true;
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

class LifecycleEvent {
  #event;

  constructor(event) {
    this.#event = event;
  }

  get event() {
    return this.#event;
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    this.#handler = handler;
  }

  async execute(context = LifecycleHandler.prototype) {
    await this.#handler(context);
  }

  bind(target) {
    this.#handler = this.#handler.bind(target);
  }

  async handler(context) {
    await this.#handler(context);
  }
}

class NexusCore {
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false,
    shuttingDownPromise: null,
    shuttingDownResolver: null
  };

  #status = "INIT";

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (!isNaN(valueAsNumber = parseInt(value))) {
      switch (valueAsNumber) {
        case 0:
          console.log('NexusCore instance is INIT.');
          break;
        case 1:
          console.log('NexusCore instance is CONFIGURED.');
          lifecycle.configured = true;
          break;
        case 2:
          console.log('NexusCore instance is LOADED.');
          lifecycle.loaded = true;
          break;
        case 3:
          console.log('NexusCore instance is SHUTTING_DOWN.');
          lifecycle.shuttingDown = true;
          break;
        case 4:
          console.log('NexusCore instance is SHUTDOWN.');
          break;
        case 5:
          console.log('NexusCore instance is DESTROYED.');
          break;
        default:
          console.error('Invalid NexusCore instance status:', value);
      }
    } else {
      console.error('Invalid NexusCore instance status:', value);
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  configure(config = Config.defaultConfig) {
    Config.configure(config).then(config => {
      this.executeLifecycleEvent("CONFIGURED", 1);
      this.#lifecycle.configured = true;
      this.config = config;
    });
  }

  async load() {
    if (this.#lifecycle.configured) {
      await this.executeLifecycleEvent("CONFIGURED", 1);
    }
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      this.executeLifecycleEvent("LOADED", 2);
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  async shutdown() {
    if (!this.#lifecycle.shuttingDown) {
      console.log("Shutdown initiated...");
      this.#lifecycle.shuttingDown = true;
      this.#lifecycle.shuttingDownPromise = new Promise((resolve) => {
        this.#lifecycle.shuttingDownResolver = resolve;
      });
      await this.executeLifecycleEvent("SHUTTING_DOWN", 3);
      this.#lifecycle.shuttingDownPromise.then(() => {
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
      }).catch((e) => console.error('Shutdown error:', e));
    }
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      if (this[methodName] instanceof Function) {
        await this[methodName]();
      }
    }
  }

  async destroy() {
    this.status = "DESTROYED";
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false,
      shuttingDownPromise: null,
      shuttingDownResolver: null
    };
  }

  async on(event, handler) {
    this.executeLifecycleEvent("CONFIGURED", 1);
    const lifecycle = this.#lifecycle;
    const lifecycleEvent = new LifecycleEvent(event);
    const lifecycleHandler = new LifecycleHandler(handler);
    this.executeLifecycleEvent(event, lifecycleHandler);
  }

  async executeLifecycleEvent(event, handler, priority = this.#lifecycle.eventPriority[event] || 0) {
    if (this.#lifecycle[event]) {
      const lifecycleHandler = this.#lifecycle[event];
      const context = this.#lifecycle.handlerContext[event] || this;
      lifecycleHandler.bind(context);
      lifecycleHandler.handler = async (context) => {
        try {
          await handler(context);
        } catch (e) {
          console.error(`Lifecycle event handler error: ${event}`, e);
        }
      };
      await this.executeLifecycleEvent("SHUTTING_DOWN", "end", 3);
      await lifecycleHandler.handler(context);
      lifecycleHandler.handler = null;
      this.#lifecycle.handlerContext[event] = null;
    }
    return priority;
  }
}

Object.defineProperty(NexusCore.prototype, "on", {
  value: function (event, handler) {
    return this.executeLifecycleEvent(event, handler);
  },
  writable: true,
  configurable: true,
  enumerable: false,
});

NexusCore.prototype.#lifecycle.eventPriority = {
  CONFIGURED: 1,
  LOADED: 2,
  SHUTTING_DOWN: 3,
};

NexusCore.prototype.#lifecycle.handlerContext = {};

const nexusCore = new NexusCore();
nexusCore.on('DESTROYED', async () => {
  console.log("NexusCore instance destroyed.");
});
NexusCore.configure();
nexusCore.start();
nexusCore.load();
nexusCore.shutdown();
nexusCore.destroy();