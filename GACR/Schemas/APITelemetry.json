class Config {
  #configSchema;
  #defaultConfig;
  #staticConfig;
  #instanceConfig;

  static get instance() {
    const instance = new Config();
    instance.config = Config.getInstanceConfig();
    return instance;
  }

  constructor() {
    this.config = Config.getInstanceConfig();
  }

  static getInstanceConfig() {
    return this.#instanceConfig ??= this.#createStaticConfig();
  }

  static createStaticConfig() {
    return {
      VERSION: "1.0.0",
      env: process.env.NODE_ENV || "development"
    };
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
  }

  setValues(values) {
    Object.assign(this.config, values);
  }

  validate() {
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(Config.configSchema);
      validator.validate(this.config, validator.compile(Config.configSchema));
    } catch (e) {
      throw e;
    }
  }
}

class LifecycleEvent {
  constructor(event, handler) {
    this.event = event;
    this.handler = handler;
  }
}

class LifecycleHandler {
  constructor(handler, target = this) {
    this.handler = handler;
    this.target = target;
  }

  async execute() {
    await this.handler(this.target);
  }
}

class NexusCore {
  #status = "INIT";
  #lifecycleEvents = new Map();
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };
  #config = null;

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  on(event, handler) {
    this.#lifecycleEvents.set(event, new LifecycleHandler(handler, this));
    return {
      destroy: async () => {
        this.#lifecycleEvents.delete(event);
      }
    };
  }

  get on() {
    return (event, handler) => this.on(event, handler);
  }

  async configure(config) {
    await this.validateConfig(config);
    this.#lifecycle.configured = true;
    this.#config = config;
    this.#status = "CONFIGURED";
    this.emit("CONFIGURED");
    await this.executeLifecycleEvent("CONFIGURED");
  }

  async load() {
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      this.#status = "LOADED";
      this.emit("LOADED");
      await this.executeLifecycleEvent("LOADED");
    } catch (e) {
      console.error('Load error:', e);
      throw e;
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        this.#status = "SHUTTING_DOWN";
        await this.executeLifecycleEvent("SHUTTING_DOWN");
        console.log("Shutdown complete...");
        this.#status = "SHUTDOWN";
        this.emit("SHUTDOWN");
        await this.executeLifecycleEvent("SHUTDOWN");
      }
    } catch (e) {
      console.error("Shutdown error:", e);
      throw e;
    }
  }

  async start() {
    const startMethodOrder = [
      "configure",
      "load"
    ];
    if (typeof this.shutdown === "function") {
      startMethodOrder.unshift('shutdown');
    }
    for (const methodName of startMethodOrder) {
      if (typeof this[methodName] === "function") {
        await this[methodName](this.#config);
      }
    }
  }

  destroy() {
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
    this.#status = "DESTROYED";
    this.emit("DESTROYED");
    this.#config = null;
    this.#lifecycleEvents.forEach((handlers, _) => handlers.forEach(handler => handler.target.destroy()));
  }

  async executeLifecycleEvent(event) {
    const handlers = this.#lifecycleEvents.get(event);
    if (handlers) {
      await Promise.all(Array.from(handlers).map(handler => handler.execute()));
    }
  }

  emit(event) {
    const handlers = this.#lifecycleEvents.get(event);
    if (handlers) {
      handlers.forEach(handler => handler.target.destroy());
    }
  }

  async validateConfig(config) {
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(Config.configSchema);
      validator.validate(config, validator.compile(Config.configSchema));
    } catch (e) {
      throw e;
    }
    this.setValues(config);
    this.validate();
  }

  static get lifecycleEvents() {
    return [
      "CONFIGURED",
      "LOADED",
      "SHUTDOWN",
      "DESTROYED",
      "SHUTTING_DOWN"
    ];
  }
}

NexusCore.prototype.addEventListener = async (event, handler) => {
  this.on(event, handler);
};

NexusCore.prototype.removeEventListener = async (event, handler) => {
  if (this.#lifecycleEvents.get(event)) {
    const currentIndex = this.#lifecycleEvents.get(event)?.index?.indexOf(handler);
    if (currentIndex !== -1) {
      this.#lifecycleEvents.get(event)?.index.splice(currentIndex, 1);
    }
  }
};

const nexusCore = new NexusCore();
nexusCore.addEventListener('DESTROYED', async () => {
  console.log("NexusCore instance destroyed.");
});
try {
  await nexusCore.start(Config.instance.defaultConfig);
} catch (e) {
  console.error(e);
}