class Config {
  #staticConfig;
  #defaultConfig;
  #schema;

  static get instance() {
    return new Config();
  }

  static #createStaticConfig() {
    return {
      VERSION: "1.0.0",
      env: process.env.NODE_ENV || "development"
    };
  }

  constructor() {}

  get defaultConfig() {
    if (this.#defaultConfig) return this.#defaultConfig;
    this.#defaultConfig = this.constructor.defaultConfig;
    return this.#defaultConfig;
  }

  get staticConfig() {
    if (this.#staticConfig) return this.#staticConfig;
    this.#staticConfig = this.constructor.#createStaticConfig();
    return this.#staticConfig;
  }

  get configSchema() {
    if (this.#schema) return this.#schema;
    this.#schema = this.constructor.configSchema;
    return this.#schema;
  }

  setValues(values) {
    Object.assign(this, values);
  }

  validate() {
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(this.constructor.configSchema());
      validator.validate(this, validator.compile(this.constructor.configSchema()));
    } catch (e) {
      throw e;
    }
  }

  static configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
  }

  static defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }
}

class LifecycleEvent {
  constructor(event, handler) {
    this.event = event;
    this.handler = handler;
  }
}

class LifecycleHandler {
  constructor(handler, target = this) {
    this.handler = handler;
    this.target = target;
  }

  async execute() {
    await this.handler(this.target);
  }
}

class NexusCore {
  #status = "INIT";
  #lifecycleEvents = new Map();
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  on(event, handler) {
    this.#lifecycleEvents.set(event, new LifecycleHandler(handler, this));
    return {
      destroy: async () => {
        this.#lifecycleEvents.delete(event);
      }
    };
  }

  get on() {
    return (event, handler) => this.on(event, handler);
  }

  configure(config) {
    this.validateConfig(config);
    this.#lifecycle.configured = true;
    this.config = config;
    this.#status = "CONFIGURED";
    this.emit("CONFIGURED");
  }

  async load() {
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      this.#status = "LOADED";
      this.emit("LOADED");
    } catch (e) {
      console.error('Load error:', e);
      throw e;
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        this.#status = "SHUTTING_DOWN";
        await this.executeLifecycleEvent("SHUTTING_DOWN");
        console.log("Shutdown complete...");
        this.#status = "SHUTDOWN";
        this.emit("SHUTDOWN");
      }
    } catch (e) {
      console.error("Shutdown error:", e);
      throw e;
    }
  }

  async start() {
    const startMethodOrder = [
      "configure",
      "load"
    ];
    if (typeof this.shutdown === "function") {
      startMethodOrder.unshift('shutdown');
    }
    for (const methodName of startMethodOrder) {
      if (typeof this[methodName] === "function") {
        await this[methodName](this.config);
      }
    }
  }

  destroy() {
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
    this.#status = "DESTROYED";
    this.emit("DESTROYED");
  }

  async executeLifecycleEvent(event) {
    const handler = this.#lifecycleEvents.get(event);
    if (handler) {
      await handler.execute();
    }
  }

  emit(event) {
    const handlers = this.#lifecycleEvents.get(event);
    if (handlers) {
      handlers.forEach(handler => handler.target.destroy());
    }
  }

  static get lifecycleEvents() {
    return [
      "CONFIGURED",
      "LOADED",
      "SHUTDOWN",
      "DESTROYED",
      "SHUTTING_DOWN"
    ];
  }
}

NexusCore.prototype.addEventListener = async (event, handler) => {
  this.on(event, handler);
};

NexusCore.prototype.removeEventListener = async (event, handler) => {
  const handlerList = this.on(event);
  const currentIndex = handlerList.index?.indexOf(handler);
  if (currentIndex !== -1) {
    handlerList.index.splice(currentIndex, 1);
  } else {
    handlerList.remove?.();
  }
};

const nexusCore = new NexusCore();
nexusCore.addEventListener('DESTROYED', async () => {
  console.log("NexusCore instance destroyed.");
});
try {
  nexusCore.configure(Config.instance.defaultConfig);
  await nexusCore.start();
  await nexusCore.load();
  await nexusCore.destroy();
} catch (e) {
  console.error(e);
}