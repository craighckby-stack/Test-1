class Config {
  #staticConfig;
  #defaultConfig;
  #schema;

  static get instance() {
    return new Config();
  }

  static #createStaticConfig() {
    return {
      VERSION: "1.0.0",
      env: process.env.NODE_ENV || "development"
    };
  }

  constructor() {
    this.#staticConfig = Config.#createStaticConfig();
    this.#defaultConfig = Config.defaultConfig;
    this.#schema = Config.configSchema;
  }

  get defaultConfig() {
    return this.#defaultConfig;
  }

  get staticConfig() {
    return this.#staticConfig;
  }

  get configSchema() {
    return this.#schema;
  }

  setValues(values) {
    Object.assign(this, values);
  }

  validate() {
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(this.#schema);
      validator.validate(this, this.#schema);
    } catch (e) {
      throw e;
    }
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
  }
}

class LifecycleEvent {
  constructor(event, handler) {
    this.event = event;
    this.handler = handler;
  }
}

class LifecycleHandler {
  constructor(handler, target = this) {
    this.handler = handler;
    this.target = target;
  }

  async execute() {
    await this.handler(this.target);
  }
}

class NexusCore {
  #status = "INIT";
  #lifecycleEvents = new Map();
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  on(event, handler) {
    this.#lifecycleEvents.set(event, new LifecycleHandler(handler, this));
  }

  get on() {
    return (event, handler) => this.on(event, handler);
  }

  configure(config) {
    this.validateConfig(config);
    this.#lifecycle.configured = true;
    this.config = config;
    this.#status = "CONFIGURED";
  }

  validateConfig(config) {
    try {
      const schema = Config.instance.configSchema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(config, schema);
    } catch (e) {
      throw e;
    }
  }

  async load() {
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      this.#status = "LOADED";
    } catch (e) {
      console.error('Load error:', e);
      throw e;
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        this.#status = "SHUTTING_DOWN";
        await this.executeLifecycleEvent("SHUTTING_DOWN");
        console.log("Shutdown complete...");
        this.#status = "SHUTDOWN";
      }
    } catch (e) {
      console.error("Shutdown error:", e);
      throw e;
    }
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      if (typeof this[methodName] === "function") {
        await this[methodName]();
      }
    }
  }

  async destroy() {
    try {
      this.#status = "DESTROYED";
      this.#lifecycle = {
        configured: false,
        loaded: false,
        shuttingDown: false
      };
    } catch (e) {
      console.error(e);
    }
  }

  async executeLifecycleEvent(event) {
    const handler = this.#lifecycleEvents.get(event);
    if (handler) {
      await handler.execute();
    }
  }

  async shutdownComplete() {
    if (!this.#lifecycle.shuttingDown) {
      throw new Error("Shutdown already completed.");
    }
    this.#lifecycle.shuttingDown = false;
    this.#status = "SHUTDOWN";
    await this.executeLifecycleEvent("SHUTDOWN");
  }
}

const nexusCore = new NexusCore();
nexusCore.on('DESTROYED', async () => {
  console.log("NexusCore instance destroyed.");
});
try {
  nexusCore.configure(Config.instance.defaultConfig);
  await nexusCore.start();
  await nexusCore.load();
  await nexusCore.shutdown();
  await nexusCore.shutdownComplete(); // Additional lifecycle event for shutdown completion
  await nexusCore.destroy();
} catch (e) {
  console.error(e);
}