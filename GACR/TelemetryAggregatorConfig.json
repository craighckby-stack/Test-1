class Config {
  #config;

  constructor(values = {}) {
    this.#config = values;
  }

  setValues(values) {
    Object.assign(this.#config, values);
  }

  get config() {
    return this.#config;
  }

  get defaultConfig() {
    return {
      foo: 'bar',
      baz: true,
    };
  }

  get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' },
      },
    };
  }

  async validate() {
    try {
      const {validate, error} = new (require('jsonschema').Validator)();
      const schema = this.configSchema;
      const result = await validate(this.config, schema);
      return result;
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

class EventBinder {
  #event;
  #handler;
  #context;

  constructor(event, handler, context = {}) {
    this.#event = event;
    this.#handler = handler;
    this.#context = context;
  }

  bind(handler) {
    this.#handler = handler;
  }

  get event() {
    return this.#event;
  }

  get handler() {
    return this.#handler;
  }

  get context() {
    return this.#context;
  }
}

class LifecycleManager {
  #events = new Map();
  #binding = new Map();

  async bindLifecycleEventHandler(event, handler) {
    const existing = this.#events.get(event);
    if (existing) {
      existing.bind(handler);
    } else {
      const eventBinder = new EventBinder(event, handler, {});
      this.#events.set(event, eventBinder);
      this.#binding.set(event, eventBinder);
    }
  }

  async executeLifecycleEvent(event, context = {}) {
    const binder = this.#events.get(event);
    if (binder) {
      await binder.handler(context);
    }
  }
}

class ConfigurationManager {
  #config;
  #initialized = false;

  constructor(config = {}) {
    this.#config = config;
    this.#initialized = false;
  }

  get config() {
    return this.#config;
  }

  set values(values) {
    Object.assign(this.#config, values);
    this.#initialized = true;
  }

  isInitialized() {
    return this.#initialized;
  }

  async validate() {
    try {
      const config = this.config;
      const schema = {
        type: 'object',
        properties: {
          foo: { type: 'string' },
          baz: { type: 'boolean' },
        },
      };
      const {validate, error} = new (require('jsonschema').Validator)();
      const result = await validate(config, schema);
      if (result) {
        throw new Error('Invalid configuration');
      }
    } catch (e) {
      console.error(e);
      throw e;
    }
  }
}

class NexusCore {
  #status = 'INIT';
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false,
    shuttingDownContext: {},
  };
  #configManager;
  #eventManager;
  #loaded = false;

  constructor() {
    this.#configManager = new ConfigurationManager();
    this.#eventManager = new LifecycleManager();
  }

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        this.#lifecycle.shuttingDown = false;
      }
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  set lifecycle(value) {
    Object.assign(this.#lifecycle, value);
  }

  get loaded() {
    return this._loaded;
  }

  set loaded(value) {
    this.#loaded = value;
  }

  async configure(config) {
    await this.#configManager.validate();
    this.#configManager.values = config;
    this.#lifecycle.configured = true;
    this.#loaded = true;
    await this.#eventManager.executeLifecycleEvent('CONFIGURED');
  }

  async start() {
    this.status = 'RUNNING';
    try {
      console.log('Configuration initialized...');
      await this.configure({
        foo: 'bar',
        baz: true,
      });
      console.log('Configuration validated...');
      await this.#eventManager.bindLifecycleEventHandler('CONFIGURED', () => {
        console.log('Configuration loaded...');
      });
      console.log('Lifecycle events bound...');
    } catch (e) {
      console.error(e);
    }
  }

  async load() {
    try {
      console.log('Loading...');
      // Simulate a 1-second timeout
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log('Loading complete...');
      this.#lifecycle.loaded = true;
      // Trigger lifecycle event
      await this.#eventManager.executeLifecycleEvent('LOADED');
    } catch (e) {
      console.error(e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log('Shutdown initiated...');
        this.#lifecycle.shuttingDown = true;
        await this.#eventManager.executeLifecycleEvent('SHUTTING_DOWN');
        console.log('Shutdown complete...');
        this.status = 'SHUTDOWN';
      }
    } catch (e) {
      console.error(e);
    }
  }

  async destroy() {
    this.status = 'DESTROYED';
    this.#lifecycle.configured = false;
    this.#lifecycle.loaded = false;
    this.#lifecycle.shuttingDown = false;
    this.#loaded = false;
    this.#configManager = null;
    this.#eventManager = null;
  }

  async on(event, handler = () => {}) {
    await this.#eventManager.bindLifecycleEventHandler(event, handler);
  }

  async execute(event) {
    await this.#eventManager.executeLifecycleEvent(event);
  }

  async getLifecycleStatus() {
    return {
      configured: this.#lifecycle.configured,
      loaded: this.#lifecycle.loaded,
      shuttingDown: this.#lifecycle.shuttingDown,
    };
  }

  async getLoadedStatus() {
    return this.#loaded;
  }

  async initializeLifeCycle() {
    this.#lifecycle.configured = false;
    this.#lifecycle.loaded = false;
    this.#lifecycle.shuttingDown = false;
  }
}

const nexusCore = new NexusCore();
(async () => {
  try {
    await nexusCore.on('DESTROYED', async () => {
      console.log('NexusCore instance destroyed.');
    });
    await nexusCore.start();
    await nexusCore.load();
    await nexusCore.shutdown();
    await nexusCore.destroy();
  } catch (e) {
    console.error(e);
  }
})();