Here is the enhanced code using advanced NexusCore patterns, lifecycle management (configure, load, shutdown), and robust encapsulation.


// Private configuration class with validation and loading capabilities.
class Config {
  #config;

  get loaded() {
    return this.#config?.loaded ?? false;
  }

  get defaultConfig() {
    return {
      foo: 'bar',
      baz: true,
    };
  }

  get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' },
      },
    };
  }

  get config() {
    return this.#config ?? this.defaultConfig;
  }

  setValues(values) {
    Object.assign(this.#config, values);
  }

  async validate() {
    try {
      const schema = this.configSchema;
      const { validate, error } = new (require('jsonschema').Validator)();
      const result = await validate(this.config, schema);
      if (result.valid) {
        throw new Error('Invalid configuration');
      }
      return result;
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

// Private event binder class that handles lifecycle events.
class EventBinder {
  #event;
  #handler;
  #context;

  constructor(event, handler, context = {}) {
    this.#event = event;
    this.#handler = handler;
    this.#context = context;
  }

  bind(handler) {
    this.#handler = handler;
  }

  get event() {
    return this.#event;
  }

  get handler() {
    return this.#handler;
  }

  get context() {
    return this.#context;
  }

  async executeHandler(context = {}) {
    this.handler(context);
  }
}

// Private lifecycle manager class that manages lifecycle events.
class LifecycleManager {
  #events = new Map();
  #bindings = new Map();
  #status = 'INIT';

  get status() {
    return this.#status;
  }

  get events() {
    return this.#events;
  }

  get bindings() {
    return this.#bindings;
  }

  /**
   * Binds a new event handler or updates the existing one.
   *
   * @param {string} event
   * @param {Function} handler
   */
  async bindLifecycleEventHandler(event, handler) {
    const existing = this.#events.get(event);
    if (existing) {
      existing.bind(handler);
      this.#bindings.set(event, existing);
    } else {
      const eventBinder = new EventBinder(event, handler, {});
      this.#events.set(event, eventBinder);
      this.#bindings.set(event, eventBinder);
    }
  }

  async executeLifecycleEvent(event, context = {}) {
    const binder = this.#events.get(event);
    if (binder) {
      return binder.executeHandler(context);
    }
  }

  async unbindLifecycleEventHandler(event) {
    this.#bindings.delete(event);
    this.#events.delete(event);
  }

  async init(status) {
    this.#status = status;
  }
}

/**
 * Private configuration manager class that manages configuration loading and validation.
 */
class ConfigurationManager {
  #config;
  #initialized;

  constructor(values = {}) {
    this.#config = values;
    this.#initialized = false;
  }

  get config() {
    return this.#config;
  }

  set values(values) {
    Object.assign(this.#config, values);
    this.#initialized = true;
  }

  get initialized() {
    return this.#initialized;
  }

  async validate() {
    return await this.config.validate();
  }
}

/**
 * NexusCore class that manages the lifecycle events and provides methods for configuration, loading, and shutdown.
 */
class NexusCore {
  #configManager;
  #lifecycleManager;
  #loaded;

  constructor() {
    this.#configManager = new ConfigurationManager();
    this.#lifecycleManager = new LifecycleManager();
    this.#loaded = false;
  }

  get status() {
    return this.#lifecycleManager.status;
  }

  async configure(config) {
    try {
      await this.#configManager.validate();
      this.#configManager.values = config;
      await this.#lifecycleManager.init('CONFIGURED');
    } catch (e) {
      console.error(e);
      throw e;
    }
  }

  async start() {
    try {
      console.log('Configuration initialized...');
      await this.configure({
        foo: 'bar',
        baz: true,
      });
      console.log('Configuration validated...');
      await this.#lifecycleManager.unbindLifecycleEventHandler('CONFIGURED');
    } catch (e) {
      console.error(e);
    }
  }

  async load() {
    try {
      console.log('Loading...');
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log('Loading complete...');
      await this.#lifecycleManager.init('LOADED');
      this.#loaded = true;
    } catch (e) {
      console.error(e);
    }
  }

  async shutdown() {
    try {
      console.log('Shutdown initiated...');
      if (!this.#lifecycleManager.events.has('SHUTTING_DOWN')) {
        await this.#lifecycleManager.init('SHUTTING_DOWN');
        console.log('Shutdown complete...');
      }
    } catch (e) {
      console.error(e);
    }
  }

  async destroy() {
    this.#configManager = null;
    this.#lifecycleManager = null;
  }

  async on(event, handler = () => {}) {
    await this.#lifecycleManager.bindLifecycleEventHandler(event, handler);
  }

  async execute(event) {
    await this.#lifecycleManager.executeLifecycleEvent(event);
  }

  async getLifecycleStatus() {
    return {
      configured: await this.#lifecycleManager.executeLifecycleEvent('CONFIGURED'),
      loaded: this.#loaded,
      shuttingDown: await this.#lifecycleManager.executeLifecycleEvent('SHUTTING_DOWN'),
    };
  }

  async getLoadedStatus() {
    return this.#loaded;
  }
}

(async () => {
  try {
    const nexusCore = new NexusCore();
    await nexusCore.on('DESTROYED', async () => {
      console.log('NexusCore instance destroyed.');
    });
    await nexusCore.start();
    await nexusCore.load();
    await nexusCore.shutdown();
    await nexusCore.destroy();
  } catch (e) {
    console.error(e);
  }
})();

