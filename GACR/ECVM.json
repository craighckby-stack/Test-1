class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  static get staticConfig() {
    return this.#staticConfig;
  }

  #defaultConfig = {
    foo: 'bar',
    baz: true
  };

  static get defaultConfig() {
    return this.#defaultConfig;
  }

  #configSchema = {
    type: 'object',
    properties: {
      foo: { type: 'string' },
      baz: { type: 'boolean' }
    }
  };

  static get configSchema() {
    return this.#configSchema;
  }

  #config;

  constructor(values = {}) {
    this.#config = new SafeAssign(values, Config.defaultConfig);
    this.validate();
  }

  get config() {
    return this.#config;
  }

  get configCopy() {
    return this.config.copy();
  }

  set config(values) {
    this.#config = new SafeAssign(values, Config.defaultConfig);
    this.validate();
  }

  validate() {
    try {
      const schema = this.constructor.configSchema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(this.configCopy, schema);
    } catch (e) {
      throw e;
    }
  }
}

class LifecycleEvent extends Error {
  constructor(event, message = '') {
    super(message);
    this.name = event;
    this.event = event;
  }
}

class LifecycleHandler {
  #handler;
  #target;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target = this) {
    this.#target = target;
    this.#handler = this.#handler.bind(target);
    return this;
  }

  async execute() {
    try {
      return await this.#handler(this.#target);
    } catch (e) {
      throw new LifecycleEvent('EXECUTION_ERROR', e.message);
    }
  }
}

class SafeAssign {
  constructor(target, values = {}) {
    this.target = target;
    this.values = values;
  }

  copy() {
    const copy = { ...this.target };
    return new SafeAssign(copy, this.values);
  }

  setValues(values) {
    Object.assign(this.target, this.values, values);
  }
}

class NexusCore {
  #status = "INIT";

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      this.#lifecycle.configured = true;
    }
  }

  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  get lifecycle() {
    return this.#lifecycle;
  }

  #lifecycleEvents = {};

  #config;

  get config() {
    return this.#config;
  }

  get configCopy() {
    return this.#config.copy();
  }

  set config(values) {
    this.#config = new SafeAssign(values, Object.assign({}, this.#config, Config.defaultConfig));
  }

  async onLifecycleEvent(event, handler) {
    try {
      await handler(this);
      this.#lifecycleEvents[event] = await new LifecycleHandler(handler).execute();
    } catch (e) {
      throw e;
    }
  }

  on(event, handler) {
    return async () => {
      this.#lifecycleEvents[event] = await this.onLifecycleEvent(event, handler);
    };
  }

  get lifecycleEvents() {
    return this.#lifecycleEvents;
  }

  get configure() {
    return async (config) => {
      try {
        this.validateConfig(config);
        await this.onLifecycleEvent("CONFIGURED", () => this.config = config);
        this.#lifecycle.configured = true;
      } catch (e) {
        console.error(e.message);
        throw e;
      }
    };
  }

  validateConfig(config) {
    const configSchema = Config.configSchema;
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(configSchema);
      validator.validate(config, configSchema);
    } catch (e) {
      throw e;
    }
  }

  async configure(config) {
    await this.configure(config);
  }

  async load() {
    try {
      await this.onLifecycleEvent("CONFIGURED", () => console.log("Loading..."));
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      await this.onLifecycleEvent("LOADED", () => console.log("Load complete..."));
    } catch (e) {
      console.error(e.message);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        await this.onLifecycleEvent("SHUTTING_DOWN", () => {
          console.log("Shutdown complete...");
          this.status = "SHUTDOWN";
        });
      }
    } catch (e) {
      throw e;
    }
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      if (this[methodName] instanceof Function) {
        await this[methodName];
      }
    }
  }

  async destroy() {
    this.status = "DESTROYED";
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
  }
}

const nexusCore = new NexusCore();
nexusCore.on('DESTROYED', async () => {
  console.log("NexusCore instance destroyed.");
});
nexusCore.configure(Config.defaultConfig);
await nexusCore.start();
await nexusCore.load();
await nexusCore.shutdown();
await nexusCore.destroy();


Please note that ES6 code requires the 'async/await' syntax to be executed in an 'async' environment, as it involves returning promises from functions.