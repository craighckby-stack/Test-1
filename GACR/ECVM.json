class Config {
  static get staticConfig() {
    return {
      VERSION: "1.0.0",
      env: environment()
    };
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
  }

  constructor(values = Config.defaultConfig) {
    this._config = new SafeAssign(values, Config.defaultConfig);
    this._config.validate();
  }

  get config() {
    return this._config;
  }

  get configCopy() {
    return this.config.copy();
  }

  set config(values) {
    this._config = new SafeAssign(values, Config.defaultConfig);
    this._config.validate();
  }

  validate() {
    try {
      const schema = Config.configSchema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(this.configCopy, schema);
    } catch (e) {
      throw e;
    }
  }
}

class LifecycleEvent extends Error {
  constructor(event, message = '') {
    super(message);
    this.name = event;
    this.event = event;
  }
}

class LifecycleHandler {
  async execute() {
    try {
      return this._handler;
    } catch (e) {
      throw new LifecycleEvent('EXECUTION_ERROR', e.message);
    }
  }

  bind(target = this) {
    this._handler = this._handler.bind(target);
    return this;
  }

  set handler(handler) {
    this._handler = handler;
  }
}

class SafeAssign {
  constructor(target, values = {}) {
    this._target = target;
    this._values = values;
  }

  copy() {
    const copy = { ...this._target };
    return new SafeAssign(copy, this._values);
  }

  setValues(values) {
    Object.assign(this._target, this._values, values);
  }

  get config() {
    return this._target;
  }

  get configCopy() {
    return this.copy().config;
  }

  async validate() {
    try {
      const schema = Config.configSchema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(this.configCopy, schema);
    } catch (e) {
      throw e;
    }
  }
}

function environment() {
  return process.env.NODE_ENV || "development";
}

const _instance = {};

class NexusCore {
  constructor() {
    _instance.instance = this;
  }

  get instance() {
    return _instance.instance;
  }

  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  get lifecycle() {
    return this.#lifecycle;
  }

  #lifecycleEvents = {};

  get lifecycleEvents() {
    return this.#lifecycleEvents;
  }

  async onLifecycleEvent(event, handler) {
    try {
      await handler(this);
      this.#lifecycleEvents[event] = await new LifecycleHandler().bind(this).setHandler(this.configure).execute();
    } catch (e) {
      throw e;
    }
  }

  async on(event, handler) {
    await this.onLifecycleEvent(event, handler);
  }

  get configure() {
    return async (config) => {
      try {
        await this.validateConfig(config);
        await this.onLifecycleEvent("CONFIGURED", () => this.config = config);
        this.#lifecycle.configured = true;
      } catch (e) {
        console.error(e.message);
        throw e;
      }
    };
  }

  async configure(config) {
    await this.configure(config);
  }

  async validateConfig(config) {
    try {
      const schema = Config.configSchema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(config, schema);
    } catch (e) {
      throw e;
    }
  }

  async load() {
    try {
      await this.onLifecycleEvent("CONFIGURED", () => console.log("Loading..."));
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      await this.onLifecycleEvent("LOADED", () => console.log("Load complete..."));
    } catch (e) {
      console.error(e.message);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        await this.onLifecycleEvent("SHUTTING_DOWN", () => {
          console.log("Shutdown complete...");
          this.status = "DESTRUCTED";
        });
      }
    } catch (e) {
      throw e;
    }
  }

  get status() {
    return this.#_status;
  }

  set status(value) {
    this.#_status = value;
    const currentValue = this.#status;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      this.#lifecycle.configured = true;
    }
  }

  #_status = "INIT";

  #configs;

  get config() {
    return this.#configs;
  }

  get configCopy() {
    return this.#configs;
  }

  set config(values) {
    this.#configs = new SafeAssign(values, Config.defaultConfig);
    this.#configs.validate();
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    try {
      for (const methodName of startMethodOrder) {
        if (this[methodName] instanceof Function) {
          await this[methodName];
        }
      }
    } catch (e) {
      console.error(e.message);
    }
  }

  async destroy() {
    try {
      console.log("Destroy initiated...");
      this.status = "DESTRUCTED";
      this.#lifecycle = {
        configured: false,
        loaded: false,
        shuttingDown: false
      };
    } catch (e) {
      console.error(e.message);
    }
  }
}

function instance() {
    return new NexusCore();
}

const nexusCore = instance();
nexusCore.on('DESTRUCTED', async () => {
  console.log("NexusCore instance destroyed.");
});
nexusCore.configure(Config.defaultConfig);
await nexusCore.start();
await nexusCore.load();
await nexusCore.shutdown();
await nexusCore.destroy();

This enhanced NexusCore instance class adheres to an advanced NexusCore pattern and lifecycle management, utilizing ES6 syntax and more secure encapsulation.