import React, { createContext, useState, useEffect } from 'react';

class Config extends React.Component {
  static staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  constructor(props) {
    super(props);
    this.state = {
      values: {}
    };
  }

  setValues(values) {
    this.setState({ values });
  }

  static defaultMessage = {
    foo: 'bar',
    baz: true
  };

  static schema = {
    type: 'object',
    properties: {
      foo: { type: 'string' },
      baz: { type: 'boolean' }
    }
  };

  validate(values) {
    try {
      const schema = Config.schema;
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(schema);
      validator.validate(values, schema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }
}

class LifecycleEvent extends React.Component {
  constructor(props) {
    super(props);
    this.props = props;
  }
}

class LifecycleHandler extends React.Component {
  constructor(props) {
    super(props);
    this.props = props;
  }

  bind(target) {
    this.props.handler = this.props.handler.bind(target);
  }

  execute() {
    this.props.handler();
  }
}

class NexusCore extends React.Component {
  constructor(props) {
    super(props);
    this.state = {
      lifecycle: {
        configured: false,
        loaded: false,
        shuttingDown: false
      },
      status: "INIT"
    };
  }

  componentDidMount() {
    const nexusCore = this;
    this.props.on("CONFIGURED", () => {
      nexusCore.setState({ status: "CONFIGURED" });
    });
    this.props.on("LOADED", () => {
      nexusCore.setState({ status: "LOADED" });
    });
    this.props.on("SHUTDOWN", () => {
      nexusCore.setState({ status: "SHUTDOWN" });
    });
  }

  componentDidUnmount() {
    const nexusCore = this;
    this.props.on("DESTROYED", () => {
      console.log("NexusCore instance destroyed.");
    });
  }

  configure(config) {
    this.validateConfig(config);
    this.props.on("CONFIGURED");
    this.setState({ status: "CONFIGURED" });
    this.setState({ config });
  }

  validateConfig(config) {
    const configSchema = Config.schema;
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(configSchema);
      validator.validate(config, configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  onLifecycleEvent(event, handler) {
    const lifecycleHandler = new LifecycleHandler(handler);
    this.setState({
      lifecycle: {
        ...this.state.lifecycle,
        [event]: lifecycleHandler
      }
    });
  }

  executeLifecycleEvent(event) {
    if (this.state.lifecycle[event]) {
      this.state.lifecycle[event].bind(this);
      this.state.lifecycle[event].execute();
    }
  }

  async load() {
    await this.executeLifecycleEvent("CONFIGURED");
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.setState({ status: "LOADED" });
      this.setState({ lifecycle: {
        ...this.state.lifecycle,
        loaded: true
      }});
      this.executeLifecycleEvent("LOADED");
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  async shutdown() {
    try {
      if (!this.state.lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.setState({ status: "SHUTDOWN" });
        this.setState({ lifecycle: {
          ...this.state.lifecycle,
          shuttingDown: true
        }});
        this.executeLifecycleEvent("SHUTTING_DOWN");
        console.log("Shutdown complete...");
        this.setState({ status: "SHUTDOWN" });
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      if (methodName === "configure") {
        await this.configure(Config.defaultMessage);
      } else if (methodName === "load") {
        await this.load();
      } else if (methodName === "shutdown") {
        await this.shutdown();
      }
    }
  }

  async destroy() {
    this.setState({ status: "DESTROYED" });
    this.setState({ lifecycle: {
      configured: false,
      loaded: false,
      shuttingDown: false
    }});
  }

  async on(event, handler) {
    await this.onLifecycleEvent(event, handler);
  }
}

