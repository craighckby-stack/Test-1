{
  "manifest_version": "2.0.0",
  "gate_id": "S4.5",
  "metadata": {
    "owner_agent": "SGS",
    "certification_protocol": "ECVP",
    "description": "Validation constraints for critical service access Gate S4.5."
  },
  "validation_settings": {
    "attestation_period": "continuous",
    "default_failure_action": "RRP",
    "grace_period_seconds": 15
  },
  "constraints": [
    {
      "id": "CVA-201",
      "type": "slo_latency",
      "scope": "external_api",
      "configuration": {
        "target_endpoint_pattern": "^/critical/",
        "max_latency_ms": 50
      }
    },
    {
      "id": "CVA-305",
      "type": "data_freshness",
      "scope": "data_registry",
      "configuration": {
        "source_registry": "DTEM/CoreCache",
        "max_staleness_seconds": 300
      }
    },
    {
      "id": "CVA-412",
      "type": "resource_availability",
      "scope": "system_resources",
      "configuration": {
        "required_resources": [
          {"type": "GPU_T4", "count": 1},
          {"type": "CPU_Vcores", "count": 4}
        ],
        "minimum_availability_percent": 95
      }
    }
  ]
}