{
  "mapping_version": "2.0",
  "default_tier_id": "DEFAULT_P3",
  "tier_definitions": {
    "CRITICAL_P1": {
      "priority_level": 1,
      "description": "High-impact, core financial calculation services. 99.99% availability required.",
      "sla_target_ms": 50,
      "redundancy_level": "GeoRedundant"
    },
    "STANDARD_P2": {
      "priority_level": 2,
      "description": "Standard production services. 99.9% availability.",
      "sla_target_ms": 200,
      "redundancy_level": "RegionalActivePassive"
    },
    "DEFAULT_P3": {
      "priority_level": 3,
      "description": "Utility or low-impact services. 99.5% availability.",
      "sla_target_ms": 500,
      "redundancy_level": "SingleRegion"
    }
  },
  "assignment_rules": [
    {
      "rule_id": "R001_CoreFinancial",
      "assign_tier_id": "CRITICAL_P1",
      "criteria": {
        "match_type": "exact_id",
        "values": ["UUID_CORE_SERVICE_X"]
      },
      "rationale": "Explicitly defined core engine model UUIDs."
    },
    {
      "rule_id": "R002_StandardProd",
      "assign_tier_id": "STANDARD_P2",
      "criteria": {
        "match_type": "tag_match",
        "tags": [
          {"key": "environment", "operator": "equals", "value": "production"},
          {"key": "system_sensitivity", "operator": "not_equals", "value": "low"}
        ]
      },
      "rationale": "Default rule for all production models unless explicitly low-impact or critical."
    }
  ]
}