class Config {
  static #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development",
  };

  static #defaultConfig = {
    foo: "bar",
    baz: true,
  };

  static #configSchema = {
    type: "object",
    properties: {
      foo: { type: "string", description: "Foo value" },
      baz: { type: "boolean", description: "Baz value" },
    },
  };

  static async #validate(values) {
    const configSchema = this.#configSchema;
    try {
      const validator = new (require("jsonschema").Validator)();
      validator.checkSchema(configSchema);
      validator.validate(values, configSchema);
    } catch (error) {
      console.error("Config validation error:", error);
      throw error;
    }
  }

  constructor(values = {}) {
    this.#validate(values).catch((error) => {
      console.error("Config validation error:", error);
      throw error;
    });
    Object.assign(this, values);
  }

  get staticConfig() {
    return this.#staticConfig;
  }

  get defaultConfig() {
    return this.#defaultConfig;
  }

  get configSchema() {
    return this.#configSchema;
  }
}

class LifecycleEvent {
  #payload;
  event;

  constructor(event, payload) {
    this.event = event;
    this.#payload = payload;
  }

  get payload() {
    return this.#payload;
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    if (typeof handler !== "function") {
      throw new Error("Handler must be a function");
    }

    this.#handler = handler;
  }

  bind(target = this) {
    this.#handler = this.#handler.bind(target);
  }

  execute() {
    this.#handler();
  }
}

class NexusCore {
  #lifecycle = {
    on: new LifecycleHandler(async () => {
      await this.configure();
      await this.load();
    }),
    shutdown: new LifecycleHandler(() => {
      this.#shutdown();
    }),
    DESTROYED: new LifecycleHandler(() => {
      console.log("NexusCore instance destroyed.");
    }),
    configure: new LifecycleHandler(() => {
      this.#setupLifecycle();
      this.#status = "CONFIGURED";
    }),
  };
  #config;
  #status = "INIT";

  get status() {
    return this.#status;
  }

  set status(value) {
    const currentStatus = this.#status;
    if (value !== "INIT") {
      console.log(`NexusCore instance is ${value}.`);
      if (value === "DESTROYED") {
        this.#lifecycle = {
          on: void 0,
          shutdown: void 0,
          DESTROYED: void 0,
          configure: void 0,
        };
      } else if (value === "SHUTDOWN") {
        this.#setupLifecycle();
      }
    }
    if (currentStatus === "INIT" && value !== "INIT") {
      this.#status = value;
    }
  }

  get config() {
    return this.#config;
  }

  set config(value) {
    this.#config = value;
  }

  static async configure(config = {}) {
    const instance = new NexusCore();
    instance.config = new Config();
    await instance.#configure(config);
    return instance;
  }

  async #setupLifecycle() {
    const config = this.config;
    config.constructor(this.lifecycle["configure"].payload);
    await this.configureLifecycle("configure", this.lifecycle["configure"].payload);
  }

  async #configure(config = {}) {
    this.lifecycle.configure.bind(this).execute();
    const lifecycle = this.lifecycle;
    this.#validate(config);
    this.#status = "CONFIGURED";
  }

  async #validate(values) {
    return this.config.constructor(values);
  }

  async #load() {
    console.log("Loading...");
    await new Promise((resolve) => setTimeout(resolve, 1000));
    console.log("Loading complete...");
    this.#status = "LOADED";
  }

  async configureLifecycle(event, handler) {
    this.lifecycle[event] = new LifecycleHandler(handler);
  }

  async shutdown() {
    this.#shutdown();
    this.#status = "SHUTDOWN";
  }

  async #shutdown() {
    this.lifecycle.shutdown && this.lifecycle.shutdown.bind(this).execute();
  }

  async startLifecycle() {
    if (!this.lifecycle.on) {
      await this.configureLifecycle("on", async () => {
        await this.configure();
        await this.load();
      });
    }
    if (this.lifecycle.shutdown) {
      await this.shutdownLifecycle();
    }
    this.#status = "RUNNING";
  }

  async shutdownLifecycle() {
    await this.configureLifecycle("shutdown", async () => {
      await this.shutdown();
    });
    this.#status = "SHUTDOWN";
  }

  async destroyLifecycle() {
    const lifecycle = this.lifecycle;
    this.#status = "DESTROYED";
    lifecycle["DESTROYED"].bind(this).execute();
    this.#lifecycle = {
      on: void 0,
      shutdown: void 0,
      DESTROYED: void 0,
      configure: void 0,
    };
  }

  async start() {
    await this.startLifecycle();
  }

  async destroy() {
    await this.destroyLifecycle();
  }

  async executeLifecycleEvent(event) {
    const handler = this.lifecycle[event];
    if (handler) {
      handler.bind(this).execute();
    }
  }
}

async function main() {
  try {
    const nexusCore = await NexusCore.configure();
    await nexusCore.start().catch((error) => {
      console.error("Failed to start NexusCore:", error);
      return nexusCore.destroy();
    });
  } catch (error) {
    console.error("Main failed:", error);
  }
}

main();