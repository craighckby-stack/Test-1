class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development",
  };

  #defaultConfig = {
    foo: "bar",
    baz: true,
  };

  #configSchema = {
    type: "object",
    properties: {
      foo: { type: "string", description: "Foo value" },
      baz: { type: "boolean", description: "Baz value" },
    },
  };

  /**
   * Set the initial values for the Config instance.
   * @param {Object} values
   */
  constructor(values = {}) {
    this.#setValues(values);
  }

  #setValues(values) {
    Object.assign(this, values);
  }

  get staticConfig() {
    return this.#staticConfig;
  }

  get defaultConfig() {
    return this.#defaultConfig;
  }

  get configSchema() {
    return this.#configSchema;
  }

  /**
   * Validate the configuration against the defined schema.
   * @throws {Error} If the configuration is invalid.
   */
  validate() {
    try {
      const validator = new (require("jsonschema").Validator)();
      validator.checkSchema(this.#configSchema);
      validator.validate(this, this.#configSchema);
    } catch (error) {
      console.error("Config validation error:", error);
      throw error;
    }
  }
}

class LifecycleEvent {
  #payload;

  /**
   * Create a new lifecycle event instance.
   * @param {string} event
   * @param {*} payload
   */
  constructor(event, payload) {
    this.#payload = payload;
    this.event = event;
  }

  get payload() {
    return this.#payload;
  }
}

class LifecycleHandler {
  #handler;

  /**
   * Create a new lifecycle handler instance.
   * @param {function} handler
   */
  constructor(handler) {
    if (typeof handler !== "function") {
      throw new Error("Handler must be a function");
    }

    this.#handler = handler;
  }

  bind(target = this) {
    this.#handler = this.#handler.bind(target);
  }

  execute() {
    this.#handler();
  }
}

class NexusCore {
  #lifecycle = {};

  #status = "INIT";

  get status() {
    return this.#status;
  }

  set status(value) {
    const currentStatus = this.#status;
    if (value !== "INIT") {
      console.log(`NexusCore instance is ${value}.`);
      if (value === "DESTROYED") {
        this.#lifecycle = {};
      } else if (value === "SHUTDOWN") {
        delete this.#lifecycle.on;
      }
    }
    if (currentStatus === "INIT" && value !== "INIT") {
      this.#status = value;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  /**
   * Configure the NexusCore instance.
   * @param {Object} config
   * @param {Config} [config.schema]
   * @param {Object} [config.values]
   * @returns {Promise<NexusCore>}
   */
  async configure(config = {}) {
    const configSchema = config.schema || new Config().configSchema;
    await new Config().validate();
    if (config.values) {
      new Config().validate();
      Object.assign(new Config(config.values), configSchema);
      Object.assign(this, config.values);
    }
    return this.on("DESTROYED", () => {
      console.log("NexusCore instance destroyed.");
    });
  }

  /**
   * Load the NexusCore instance.
   * @returns {Promise<NexusCore>}
   */
  async load() {
    try {
      console.log("Loading...");
      await new Promise((resolve) => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#status = "LOADED";
      return this;
    } catch (error) {
      throw error;
    }
  }

  /**
   * Shutdown the NexusCore instance.
   */
  async shutdown() {
    try {
      if (!this.lifecycle.shutdown) {
        console.log("Shutdown initiated...");
        delete this.lifecycle.shutdown;
        return this.#status = "SHUTDOWN";
      }
    } catch (error) {
      console.error("Shutdown error:", error);
      throw error;
    }
  }

  /**
   * Start the NexusCore instance.
   */
  async start() {
    if (!this.lifecycle.on) {
      await this.configure().then(() => this.load());
    }
    if (this.lifecycle.shutdown) {
      await this.shutdown();
    }
  }

  /**
   * Destroy the NexusCore instance.
   */
  async destroy() {
    try {
      this.#status = "DESTROYED";
      await this.lifecycle["DESTROYED"].execute();
      this.#lifecycle = {};
    } catch (e) {
      console.error("Destroy error:", e);
    }
  }

  /**
   * Attach a lifecycle event handler.
   * @param {string} event
   * @param {function} handler
   */
  on(event, handler) {
    const lifecycleHandler = new LifecycleHandler(handler);
    this.lifecycle[event] = lifecycleHandler;
  }

  /**
   * Execute a lifecycle event.
   * @param {string} event
   */
  async executeLifecycleEvent(event) {
    const handler = this.lifecycle[event];
    if (handler) {
      handler.bind(this).execute();
    }
  }
}

const nexusCore = new NexusCore();
nexusCore.configure();
nexusCore.start();
nexusCore.load().then(() => {
  return nexusCore.shutdown().then(() => {
    return nexusCore.destroy();
  });
}).catch((error) => {
  console.error("Load error:", error);
  nexusCore.destroy();
});