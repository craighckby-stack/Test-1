class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  get staticConfig() {
    return { ...this.#staticConfig };
  }

  #defaultConfig = {
    foo: 'bar',
    baz: true
  };

  get defaultConfig() {
    return { ...this.#defaultConfig };
  }

  #configSchema = {
    type: "object",
    properties: {
      foo: { type: "string" },
      baz: { type: "boolean" }
    }
  };

  get configSchema() {
    return { ...this.#configSchema };
  }

  validateConfig(config) {
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(this.configSchema);
      validator.validate(config, this.configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  constructor(values = null) {
    if (values) this.#validateConfig(values);
    this.#config = values ? { ...this.staticConfig, ...this.defaultConfig, ...values } : { ...this.staticConfig, ...this.defaultConfig };
  }

  get config() {
    return this.#config;
  }
}

class LifecycleEvent {
  constructor(event, handler) {
    this.event = event;
    this.handler = handler;
  }
}

class LifecycleHandler {
  constructor(event, handler) {
    this.event = event;
    this.handler = handler;
    this.binded = false;
  }

  bind(target = this) {
    if (!this.binded) {
      this.handler = this.handler.bind(target);
      this.binded = true;
    }
  }

  execute() {
    this.handler();
  }
}

class LifecycleManager {
  constructor() {
    this.handlers = {};
    this.lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false,
      destroyed: false
    };
    this.status = "INIT";
  }

  configure(lifecycleHandler) {
    this.validateConfig(lifecycleHandler.config);
    Object.assign(this.lifecycle, { configured: true, destroyed: false });
    this.status = "CONFIGURED";
    this.lifecycle.eventHandlers[this.LIFECYCLE_CONFIGURED] = lifecycleHandler;
  }

  validateConfig(config) {
    const configSchema = Config.configSchema;
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(configSchema);
      validator.validate(config, configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  onLifecycleEvent(event, handler) {
    const lifecycleHandler = new LifecycleHandler(event, handler);
    this.lifecycle.eventHandlers[event] = lifecycleHandler;
  }

  get on() {
    return (event, handler) => {
      const lifecycleEvent = new LifecycleEvent(event, handler);
      this.onLifecycleEvent(event, handler);
    };
  }

  executeLifecycleEvent(event) {
    if (this.lifecycle.eventHandlers[event]) {
      this.lifecycle.eventHandlers[event].bind(this).execute();
    }
  }

  load() {
    if (!this.lifecycle.loaded && !this.lifecycle.destroyed) {
      this.executeLifecycleEvent(this.LIFECYCLE_CONFIGURED);
      return new Promise(resolve => setTimeout(resolve, 1000)).then(() => {
        this.lifecycle.loaded = true;
        this.executeLifecycleEvent(this.LIFECYCLE_LOADED);
      }).catch(e => console.error('Load error:', e));
    }
  }

  shutdown() {
    if (!this.lifecycle.shuttingDown && !this.lifecycle.destroyed) {
      this.lifecycle.shuttingDown = true;
      this.lifecycle.destroyed = false;
      this.executeLifecycleEvent(this.LIFECYCLE_SHUTTING_DOWN);
      return new Promise(resolve => setTimeout(resolve, 1000)).then(() => {
        this.status = this.LIFECYCLE_SHUTDOWN;
      }).catch(e => console.error('Shutdown error:', e));
    }
  }

  start() {
    const startMethodOrder = [
      "configure",
      "load",
      this.LIFECYCLE_SHUTDOWN,
      "shutdown",
    ];
    return Promise.all(startMethodOrder.map(methodName => this[methodName]()));
  }

  destroy() {
    this.status = this.LIFECYCLE_DESTROYED;
    this.lifecycle.destroyed = true;
  }
}

const nexusCore = new LifecycleManager();
nexusCore.on(NexusCore.LIFECYCLE_DESTROYED, () => {
  console.log("NexusCore instance destroyed.");
});
nexusCore.configure(Config.defaultConfig);
nexusCore.start();
nexusCore.load();
nexusCore.shutdown();
nexusCore.destroy();

class NexusCore extends LifecycleManager {
  get LIFECYCLE_CONFIGURED() {
    return "CONFIGURED";
  }

  get LIFECYCLE_LOADED() {
    return "LOADED";
  }

  get LIFECYCLE_SHUTTING_DOWN() {
    return "SHUTTING_DOWN";
  }

  get LIFECYCLE_SHUTDOWN() {
    return "SHUTDOWN";
  }

  get LIFECYCLE_DESTROYED() {
    return "DESTROYED";
  }
}