class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  get staticConfig() {
    return { ...this.#staticConfig };
  }

  #defaultConfig = {
    foo: 'bar',
    baz: true
  };

  get defaultConfig() {
    return { ...this.#defaultConfig };
  }

  #configSchema = {
    type: "object",
    properties: {
      foo: { type: "string" },
      baz: { type: "boolean" }
    }
  };

  get configSchema() {
    return { ...this.#configSchema };
  }

  validateConfig(config) {
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(this.configSchema);
      validator.validate(config, this.configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  constructor(values = null) {
    if (values) this.#validateConfig(values);
    this.#config = values ? { ...this.staticConfig, ...this.defaultConfig, ...values } : { ...this.staticConfig, ...this.defaultConfig };
  }

  get config() {
    return this.#config;
  }
}

class LifecycleEvent {
  constructor(event, handler) {
    this.event = event;
    this.handler = handler;
  }
}

class LifecycleHandler {
  constructor(event, handler) {
    this.event = event;
    this.handler = handler;
    this.binded = false;
  }

  bind(target = this) {
    if (!this.binded) {
      this.handler = this.handler.bind(target);
      this.binded = true;
    }
  }

  execute() {
    this.handler();
  }
}

class LifecycleManager {
  constructor() {
    this.handlers = {};
    this.lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false,
      destroyed: false
    };
    this.status = "INIT";
  }

  configure(config) {
    this.validateConfig(config);
    this.setLifecycleStatus("CONFIGURED", "CONFIGURING");
    if (typeof config === "function") {
      const validatedConfig = new Config(config()).config;
      this.setLifecycleStatus("CONFIGURED", "CONFIGURED");
      return { validatedConfig };
    } else {
      this.setLifecycleStatus("CONFIGURED", "CONFIGURED");
      return { config };
    }
  }

  validateConfig(config) {
    const configSchema = new Config().configSchema;
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(configSchema);
      validator.validate(config, configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  onLifecycleEvent(event, handler) {
    const lifecycleHandler = new LifecycleHandler(event, handler);
    this.lifecycle.eventHandlers[event] = lifecycleHandler;
    return lifecycleHandler;
  }

  get on() {
    return (event, handler) => {
      const lifecycleEvent = new LifecycleEvent(event, handler);
      this.onLifecycleEvent(event, handler);
      return lifecycleEvent;
    };
  }

  executeLifecycleEvent(event) {
    if (this.lifecycle.eventHandlers[event]) {
      this.lifecycle.eventHandlers[event].bind(this).execute();
    }
  }

  load() {
    this.setLifecycleStatus("LOADED", "LOADING");
    if (!this.lifecycle.destroyed) {
      this.executeLifecycleEvent(this.LIFECYCLE_CONFIGURED);
      return new Promise(resolve => setTimeout(resolve, 1000)).then(() => {
        this.setLifecycleStatus("LOADED", "LOADED");
        this.executeLifecycleEvent(this.LIFECYCLE_LOADED);
      }).catch(e => console.error('Load error:', e));
    }
  }

  shutdown() {
    this.setLifecycleStatus("SHUTDOWN", "SHUTTING_DOWN");
    if (!this.lifecycle.destroyed) {
      this.lifecycle.shuttingDown = true;
      this.lifecycle.destroyed = false;
      this.executeLifecycleEvent(this.LIFECYCLE_SHUTTING_DOWN);
      return new Promise(resolve => setTimeout(resolve, 1000)).then(() => {
        this.setLifecycleStatus("SHUTDOWN", "SHUTDOWN");
        this.status = this.LIFECYCLE_SHUTDOWN;
      }).catch(e => console.error('Shutdown error:', e));
    }
  }

  destroy() {
    this.setLifecycleStatus("DESTROYED", "DESTROYED");
    this.lifecycle.destroyed = true;
    this.status = this.LIFECYCLE_DESTROYED;
  }

  setLifecycleStatus(from, to) {
    const statuses = {
      [this.LIFECYCLE_CONFIGURED]: "CONFIGURED",
      [this.LIFECYCLE_LOADED]: "LOADED",
      [this.LIFECYCLE_SHUTTING_DOWN]: "SHUTDOWN",
      [this.LIFECYCLE	DestroyED]: "DESTROYED"
    };
    const fromStatus = statuses[from];
    const toStatus = statuses[to];
    this.lifecycle[fromStatus] = false;
    this.lifecycle[toStatus] = true;
  }
}

class NexusCore extends LifecycleManager {
  constructor() {
    super();
  }

  get LIFECYCLE_CONFIGURED() {
    return "CONFIGURED";
  }

  get LIFECYCLE_LOADED() {
    return "LOADED";
  }

  get LIFECYCLE_SHUTTING_DOWN() {
    return "SHUTDOWN";
  }

  get LIFECYCLE_SHUTDOWN() {
    return "DESTROYED";
  }

  get LIFECYCLE_DESTROYED() {
    return "DESTROYED";
  }

  get status() {
    return super.status;
  }

  get lifecycle() {
    return super.lifecycle;
  }

  get handlers() {
    return super.handlers;
  }
}

const nexusCore = new NexusCore();
const lifecycleHandler1 = nexusCore.on(NexusCore.LIFECYCLE_DESTROYED, () => {
  console.log("NexusCore instance destroyed.");
});
const lifecycleHandler2 = nexusCore.on(NexusCore.LIFECYCLE_LOADED, () => {
  console.log("NexusCore instance loaded.");
});
nexusCore.configure(Config.defaultConfig);
const validatedConfig = new Config(Config.defaultConfig).config;
const loadResult = nexusCore.configure(() => validatedConfig);
const loadPromise = nexusCore.load();
const shutdownPromise = nexusCore.shutdown();
loadPromise.then(() => console.log("NexusCore loaded")).catch(e => console.error("NexusCore load error:", e));
shutdownPromise.then(() => {
  console.log("NexusCore shutdown");
  nexusCore.destroy();
}).catch(e => console.error("NexusCore shutdown error:", e));