class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  get staticConfig() {
    return { ...this.#staticConfig };
  }

  #defaultConfig = {
    foo: 'bar',
    baz: true
  };

  get defaultConfig() {
    return { ...this.#defaultConfig };
  }

  #configSchema = {
    type: "object",
    properties: {
      foo: { type: "string" },
      baz: { type: "boolean" }
    }
  };

  get configSchema() {
    return { ...this.#configSchema };
  }

  validateConfig(config) {
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(this.configSchema);
      validator.validate(config, this.configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  constructor(values = null) {
    if (values) this.#validateConfig(values);
    this.#config = {
      ...this.staticConfig,
      ...this.defaultConfig,
      ...values
    };
  }

  get config() {
    return this.#config;
  }

  destroy() {
    delete this.#config;
  }
}

class LifecycleEvent {
  constructor(event, handler) {
    this.event = event;
    this.handler = handler;
  }
}

class LifecycleHandler {
  constructor(event, handler) {
    this.event = event;
    this.handler = handler;
    this.binded = false;
  }

  bind(target = this) {
    if (!this.binded) {
      this.handler = this.handler.bind(target);
      this.binded = true;
    }
  }

  execute() {
    this.handler();
  }

  destroy() {
    delete this.handler;
  }
}

class LifecycleManager {
  #config;
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false,
    destroyed: false
  };
  #status = "INIT";
  #handlers = {};

  constructor() {
    this.#config = null;
  }

  async configure(config) {
    await this.#validateConfig(config);
    this.#setLifecycleStatus("CONFIGURED", "CONFIGURING");
    if (typeof config === "function") {
      const validatedConfig = new Config(config()).config;
      this.#config = validatedConfig;
      this.#setLifecycleStatus("CONFIGURED", "CONFIGURED");
      return { validatedConfig };
    } else {
      this.#config = config;
      this.#setLifecycleStatus("CONFIGURED", "CONFIGURED");
      return { config };
    }
  }

  async #validateConfig(config) {
    const configSchema = new Config().configSchema;
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(configSchema);
      validator.validate(config, configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  on(event, handler) {
    const lifecycleHandler = new LifecycleHandler(event, handler);
    this.#handlers[event] = lifecycleHandler;
    return lifecycleHandler;
  }

  executeLifecycleEvent(event) {
    if (this.#handlers[event]) {
      this.#handlers[event].bind(this).execute();
    }
  }

  async load() {
    this.#setLifecycleStatus("LOADED", "LOADING");
    if (!this.#lifecycle.destroyed) {
      this.executeLifecycleEvent(LifecycleManager.LIFECYCLE_CONFIGURED);
      await new Promise(resolve => setTimeout(resolve, 1000));
      this.#setLifecycleStatus("LOADED", "LOADED");
      this.executeLifecycleEvent(LifecycleManager.LIFECYCLE_LOADED);
    }
  }

  async shutdown() {
    this.#setLifecycleStatus("SHUTDOWN", "SHUTTING_DOWN");
    if (!this.#lifecycle.destroyed) {
      this.#lifecycle.shuttingDown = true;
      this.#handlers[LifecycleManager.LIFECYCLE_SHUTTING_DOWN].destroy();
      this.#lifecycle.destroyed = false;
      await new Promise(resolve => setTimeout(resolve, 1000));
      this.#setLifecycleStatus("SHUTDOWN", "SHUTDOWN");
      this.#lifecycle.shuttingDown = false;
      this.#status = LifecycleManager.LIFECYCLE_SHUTDOWN;
    }
  }

  destroy() {
    this.#setLifecycleStatus("DESTROYED", "DESTROYED");
    this.#lifecycle.destroyed = true;
    this.#status = LifecycleManager.LIFECYCLE_DESTROYED;
  }

  #setLifecycleStatus(from, to) {
    const statuses = {
      [LifecycleManager.LIFECYCLE_CONFIGURED]: "CONFIGURED",
      [LifecycleManager.LIFECYCLE_LOADED]: "LOADED",
      [LifecycleManager.LIFECYCLE_SHUTTING_DOWN]: "SHUTDOWN",
      [LifecycleManager.LIFECYCLE_DESTROYED]: "DESTROYED"
    };
    const fromStatus = statuses[from];
    const toStatus = statuses[to];
    this.#lifecycle[fromStatus] = false;
    this.#lifecycle[toStatus] = true;
  }
}

LifecycleManager.LIFECYCLE_CONFIGURED = "CONFIGURED";
LifecycleManager.LIFECYCLE_LOADED = "LOADED";
LifecycleManager.LIFECYCLE_SHUTTING_DOWN = "SHUTDOWN";
LifecycleManager.LIFECYCLE_DESTROYED = "DESTROYED";

class NexusCore extends LifecycleManager {
  get status() {
    return this.#status;
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  get handlers() {
    return this.#handlers;
  }
}

const nexusCore = new NexusCore();

const lifecycleHandler1 = nexusCore.on(LifecycleManager.LIFECYCLE_DESTROYED, () => {
  console.log("NexusCore instance destroyed.");
});

const lifecycleHandler2 = nexusCore.on(LifecycleManager.LIFECYCLE_LOADED, () => {
  console.log("NexusCore instance loaded.");
});

nexusCore.configure(Config.defaultConfig);

const validatedConfig = new Config(Config.defaultConfig).config;

const loadPromise = nexusCore.load();
loadPromise.then(() => console.log("NexusCore loaded"));

nexusCore.shutdown().then(() => {
  console.log("NexusCore shutdown");
  nexusCore.destroy();
}).catch(e => console.error("NexusCore shutdown error:", e));


