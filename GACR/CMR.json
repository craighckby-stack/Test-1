class ConfigManagement {
  #configSchema;

  validate(config = {}) {
    try {
      const validator = new (require("jsonschema").Validator)();
      validator.checkSchema(this.#configSchema);
      validator.validate(config, this.#configSchema);
    } catch (e) {
      console.error("Config validation error:", e);
      throw e;
    }
  }

  getConfigSchema() {
    return {
      type: "object",
      properties: {
        VERSION: { type: "string", default: "1.0.0" },
        env: { type: "string", enum: ["development", "production", "test"] },
        foo: { type: "string" },
        baz: { type: "boolean", default: false },
      },
    };
  }

  getConfigValues(config = {}) {
    this.validate(config);
    return {
      ...this.getDefaultConfig(),
      ...config,
    };
  }

  getDefaultConfig() {
    return {
      env: process.env.NODE_ENV || "development",
      foo: "bar",
      baz: true,
    };
  }

  get foo() {
    return this.getConfigValues().foo;
  }

  get baz() {
    return this.getConfigValues().baz;
  }
}

class LifecycleEvent {
  static EVENTS = {
    CONFIGURE: "CONFIGURE",
    LOAD: "LOAD",
    SHUTDOWN: "SHUTDOWN",
    DESTROY: "DESTROY",
  };

  #event;
  #target;
  #handler;

  static getEventName(event) {
    return LifecycleEvent.EVENTS[event];
  }

  static isValidEvent(event) {
    return Object.values(LifecycleEvent.EVENTS).includes(event);
  }

  constructor(event, target) {
    if (!LifecycleEvent.isValidEvent(event)) {
      throw new Error(`Invalid lifecycle event: ${event}`);
    }

    this.#event = event;
    this.#target = target;
  }

  get event() {
    return this.#event;
  }

  get target() {
    return this.#target;
  }

  get handler() {
    return this.#handler;
  }

  setHandler(handler) {
    this.#handler = handler;
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target) {
    this.#handler = this.#handler.bind(target);
  }

  get handler() {
    return this.#handler;
  }
}

class NexusCore {
  #status;
  #lifecycle;
  #config;
  #configManagement;

  constructor() {
    this.#status = "INIT";
    this.#lifecycle = {
      [LifecycleEvent.EVENTS.CONFIGURE]: new LifecycleHandler(() => console.log("NexusCore instance configured.")),
      [LifecycleEvent.EVENTS.LOAD]: new LifecycleHandler(() => console.log("NexusCore instance loaded.")),
      [LifecycleEvent.EVENTS.SHUTDOWN]: new LifecycleHandler(() => console.log("NexusCore instance shutting down.")),
      [LifecycleEvent.EVENTS.DESTROY]: new LifecycleHandler(() => console.log("NexusCore instance destroyed.")),
    };
    this.#configManagement = new ConfigManagement();
    this.#config = this.#configManagement.getDefaultConfig();
  }

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  get config() {
    return this.#config;
  }

  async configure(config = {}) {
    try {
      const configValues = this.#configManagement.getConfigValues(config);
      this.#config = configValues;
      this.#lifecycle[LifecycleEvent.EVENTS.CONFIGURE] = new LifecycleEvent(LifecycleEvent.EVENTS.CONFIGURE, this);
      this.#configManagement.validate({ ...this.#config });
      this.executeLifecycleEvent(LifecycleEvent.EVENTS.CONFIGURE);
    } catch (e) {
      console.error("Configure error:", e);
    }
  }

  async load() {
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle[LifecycleEvent.EVENTS.LOAD] = new LifecycleEvent(LifecycleEvent.EVENTS.LOAD, this);
      this.executeLifecycleEvent(LifecycleEvent.EVENTS.LOAD);
    } catch (e) {
      console.error("Load error:", e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle[LifecycleEvent.EVENTS.SHUTDOWN]) {
        console.log("Shutdown initiated...");
        this.#lifecycle[LifecycleEvent.EVENTS.SHUTDOWN] = new LifecycleEvent(LifecycleEvent.EVENTS.SHUTDOWN, this);
        this.executeLifecycleEvent(LifecycleEvent.EVENTS.SHUTDOWN);
        await new Promise(resolve => setTimeout(resolve, 1000));
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
      } else if (this.status === "SHUTDOWN") {
        console.log("NexusCore instance is already shutting down.");
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async destroy() {
    try {
      this.status = "DESTROYED";
      this.#lifecycle[LifecycleEvent.EVENTS.DESTROY] = new LifecycleEvent(LifecycleEvent.EVENTS.DESTROY, this);
      this.#lifecycle = {};
      this.#config = null;
    } catch (e) {
      console.error("Destroy error:", e);
    }
  }

  async start() {
    await this.configure();
    await this.load();
    await new Promise(resolve => setTimeout(resolve, 100));
    await this.shutdown();
  }

  on(event, handler) {
    const lifecycleEvent = new LifecycleEvent(event, this);
    this.onLifecycleEvent(event, lifecycleEvent);
    lifecycleEvent.setHandler(handler);
  }

  onLifecycleEvent(event, lifecycleEvent) {
    const handler = this.#lifecycle[event];
    if (handler instanceof LifecycleHandler) {
      handler.setHandler(lifecycleEvent.handler);
    } else if (typeof handler === "function") {
      this.#lifecycle[event] = new LifecycleHandler(handler);
    } else {
      this.#lifecycle[event] = lifecycleEvent;
    }
  }

  executeLifecycleEvent(event) {
    if (this.#lifecycle[event]) {
      this.#lifecycle[event].handler();
    }
  }

  get foo() {
    return this.#config.foo;
  }

  get baz() {
    return this.#config.baz;
  }
}

const nexusCore = new NexusCore();
nexusCore.on("DESTROYED", () => {
  console.log("NexusCore instance destroyed.");
});
nexusCore.configure({
  VERSION: "1.0.0",
  env: "development",
});
nexusCore.start();
nexusCore.shutdown();
nexusCore.destroy();