class ConfigManagement {
  #configSchema;

  async configure(config = {}) {
    try {
      return { ...this.getDefaultConfig(), ...this.validateConfig(config) };
    } catch (e) {
      console.error("Config validation error:", e);
      throw e;
    }
  }

  async validateConfig(config = {}) {
    const { validate } = require("jsonschema");
    const error = validate(config, await this.getConfigSchema());
    if (!error) return config;
    throw error;
  }

  async getConfigSchema() {
    return {
      type: "object",
      properties: {
        VERSION: { type: "string", default: "1.0.0" },
        env: {
          type: "string",
          enum: ["development", "production", "test"],
        },
        foo: { type: "string" },
        baz: { type: "boolean", default: false },
      },
    };
  }

  async getDefaultConfig() {
    return {
      env: process.env.NODE_ENV || "development",
      foo: "bar",
      baz: true,
    };
  }
}

class LifecycleEvent {
  static EVENTS = {
    CONFIGURE: "CONFIGURE",
    LOAD: "LOAD",
    SHUTDOWN: "SHUTDOWN",
    DESTROY: "DESTROY",
  };

  #event;
  #target;
  #handler;

  static getEventName(event) {
    return LifecycleEvent.EVENTS[event];
  }

  static isValidEvent(event) {
    return Object.values(LifecycleEvent.EVENTS).includes(event);
  }

  constructor(event, target) {
    if (!LifecycleEvent.isValidEvent(event)) {
      throw new Error(`Invalid lifecycle event: ${event}`);
    }

    this.#event = event;
    this.#target = target;
  }

  get event() {
    return this.#event;
  }

  get target() {
    return this.#target;
  }

  get handler() {
    return this.#handler;
  }

  setHandler(handler) {
    this.#handler = handler;
  }
}

class LifecycleHandler {
  #handler;
  #target;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target) {
    this.#handler = this.#handler.bind(target);
    this.#target = target;
  }

  run() {
    return this.#handler();
  }

  get handler() {
    return this.#handler;
  }
}

abstract class Configuration {
  constructor(config) {
    this.config = config;
  }

  get env() {
    return this.config.env;
  }

  get foo() {
    return this.config.foo;
  }

  get baz() {
    return this.config.baz;
  }
}

abstract class Lifecycle {
  async initialize() {}
}

class Configured extends Configuration {
  constructor(config) {
    super(config);
  }
}

class Loaded extends Configuration implements Lifecycle {
  async initialize() {
    console.log("Lifecycle event loaded.");
  }
}

class Shutdowning extends Configuration {
  async finalize() {
    console.log("Lifecycle event shutting down.");
  }
}

class Destroying extends Configuration implements Lifecycle {
  async destroy() {
    console.log("Lifecycle event destroyed.");
  }
}

class NexusCore {
  #status;
  #lifecycle;
  #config;
  #configManagement;

  constructor() {
    this.#status = "INIT";
    this.#configManagement = new ConfigManagement();
    this.#lifecycle = {
      [LifecycleEvent.EVENTS.CONFIGURE]: new LifecycleHandler(async () => {
        const config = await this.configure();
        return new Configured(config);
      }),
      [LifecycleEvent.EVENTS.LOAD]: new LifecycleHandler(async (target) => new Loaded()),
      [LifecycleEvent.EVENTS.SHUTDOWN]: new LifecycleHandler(async (target) => new Shutdowning()),
      [LifecycleEvent.EVENTS.DESTROY]: new LifecycleHandler(async (target) => new Destroying()),
    };
    this.#config = await this.#lifecycle[LifecycleEvent.EVENTS.CONFIGURE].run();
  }

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
  }

  async configure(config = {}) {
    try {
      const configValues = await this.#configManagement.configure({ ...config });
      this.#config = new Configured(configValues);
      this.#lifecycle[LifecycleEvent.EVENTS.CONFIGURE].handler = async (target) => {
        const config = await target.configure();
        return new Configured(config);
      };
      await this.#configManagement.validateConfig(this.#config.config);
      await this.executeLifecycleEvent(LifecycleEvent.EVENTS.CONFIGURE);
    } catch (e) {
      console.error("Configure error:", e);
    }
  }

  async load() {
    try {
      const loaded = await this.executeLifecycleEvent(LifecycleEvent.EVENTS.LOAD);
      await loaded.initialize();
    } catch (e) {
      console.error("Load error:", e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle[LifecycleEvent.EVENTS.SHUTDOWN]) {
        this.#lifecycle[LifecycleEvent.EVENTS.SHUTDOWN] = true;
        const shutdowning = this.#lifecycle[LifecycleEvent.EVENTS.SHUTDOWN];
        if (shutdowning instanceof LifecycleHandler) {
          await shutdowning.handler(new NexusCore());
          await this.#config.finalize();
        }
      } else if (this.status === "SHUTDOWN") {
        console.log("NexusCore instance is already shutting down.");
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async destroy() {
    try {
      this.status = "DESTROYED";
      const destroying = await this.executeLifecycleEvent(LifecycleEvent.EVENTS.DESTROY);
      await destroying.destroy();
    } catch (e) {
      console.error("Destroy error:", e);
    }
  }

  async start() {
    await this.configure();
    await this.load();
    await new Promise(resolve => setTimeout(resolve, 100));
    await this.shutdown();
  }

  on(event, handler) {
    const lifecycleEvent = new LifecycleEvent(event, this);
    this.onLifecycleEvent(event, lifecycleEvent);
    lifecycleEvent.setHandler(handler);
  }

  onLifecycleEvent(event, lifecycleEvent) {
    const handler = this.#lifecycle[event];
    if (handler instanceof LifecycleHandler) {
      handler.bind(lifecycleEvent.target);
    } else if (typeof handler === "function") {
      this.#lifecycle[event] = new LifecycleHandler(handler);
    } else {
      this.#lifecycle[event] = lifecycleEvent;
    }
  }

  async executeLifecycleEvent(event) {
    if (this.#lifecycle[event]) {
      try {
        const result = await this.#lifecycle[event].handler(new NexusCore());
        if (result instanceof Lifecycle && typeof result.initialize === "function") {
          await result.initialize();
        }
        return result;
      } catch (error) {
        console.error("Lifecycle event error:", error);
      }
    }
  }
}

