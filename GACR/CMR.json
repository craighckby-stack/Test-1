class ConfigManagement {
  #configSchema;

  async configure(config = {}) {
    this.validate(config);
    return { ...this.getDefaultConfig(), ...config };
  }

  async validate(config = {}) {
    try {
      const validator = new (require("jsonschema").Validator)();
      validator.checkSchema(this.#configSchema);
      validator.validate(config, this.#configSchema);
    } catch (e) {
      console.error("Config validation error:", e);
      throw e;
    }
  }

  async getConfigSchema() {
    return {
      type: "object",
      properties: {
        VERSION: { type: "string", default: "1.0.0" },
        env: { type: "string", enum: ["development", "production", "test"] },
        foo: { type: "string" },
        baz: { type: "boolean", default: false },
      },
    };
  }

  async getDefaultConfig() {
    return {
      env: process.env.NODE_ENV || "development",
      foo: "bar",
      baz: true,
    };
  }
}

class LifecycleEvent {
  static EVENTS = {
    CONFIGURE: "CONFIGURE",
    LOAD: "LOAD",
    SHUTDOWN: "SHUTDOWN",
    DESTROY: "DESTROY",
  };

  #event;
  #target;
  #handler;

  static getEventName(event) {
    return LifecycleEvent.EVENTS[event];
  }

  static isValidEvent(event) {
    return Object.values(LifecycleEvent.EVENTS).includes(event);
  }

  constructor(event, target) {
    if (!LifecycleEvent.isValidEvent(event)) {
      throw new Error(`Invalid lifecycle event: ${event}`);
    }

    this.#event = event;
    this.#target = target;
  }

  get event() {
    return this.#event;
  }

  get target() {
    return this.#target;
  }

  get handler() {
    return this.#handler;
  }

  setHandler(handler) {
    this.#handler = handler;
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target) {
    this.#handler = this.#handler.bind(target);
  }

  get handler() {
    return this.#handler;
  }
}

class Configured {
  constructor(config) {
    this.config = config;
  }

  get env() {
    return this.config.env;
  }

  get foo() {
    return this.config.foo;
  }

  get baz() {
    return this.config.baz;
  }
}

class Loaded {
  async initialize() {
    console.log("Lifecycle event loaded.");
  }
}

class Shutdowning {
  async finalize() {
    console.log("Lifecycle event shutting down.");
  }
}

class Destroying {
  async destroy() {
    console.log("Lifecycle event destroyed.");
  }
}

class NexusCore {
  #status;
  #lifecycle;
  #config;
  #configManagement;

  constructor() {
    this.#status = "INIT";
    this.#configManagement = new ConfigManagement();
    this.#lifecycle = {
      [LifecycleEvent.EVENTS.CONFIGURE]: new LifecycleHandler(this.configure.bind(this)),
      [LifecycleEvent.EVENTS.LOAD]: new LifecycleHandler((target) => new Loaded()),
      [LifecycleEvent.EVENTS.SHUTDOWN]: new LifecycleHandler((target) => new Shutdowning()),
      [LifecycleEvent.EVENTS.DESTROY]: new LifecycleHandler((target) => new Destroying()),
    };
    this.#config = new Configured(this.#configManagement.getDefaultConfig());
  }

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
  }

  async configure(config = {}) {
    try {
      const configValues = this.#configManagement.configure({ ...config });
      this.#config = new Configured(configValues);
      this.#lifecycle[LifecycleEvent.EVENTS.CONFIGURE].handler(this.#config);
      await this.#configManagement.validate({ ...configValues });
      await this.executeLifecycleEvent(LifecycleEvent.EVENTS.CONFIGURE);
    } catch (e) {
      console.error("Configure error:", e);
    }
  }

  async load() {
    try {
      const loaded = await this.executeLifecycleEvent(LifecycleEvent.EVENTS.LOAD);
      await loaded.initialize();
    } catch (e) {
      console.error("Load error:", e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle[LifecycleEvent.EVENTS.SHUTDOWN]) {
        this.#lifecycle[LifecycleEvent.EVENTS.SHUTDOWN] = true;
        const shutdowning = this.#lifecycle[LifecycleEvent.EVENTS.SHUTDOWN];
        if (shutdowning instanceof LifecycleHandler) {
          await shutdowning.handler(this.#config);
        }
      } else if (this.status === "SHUTDOWN") {
        console.log("NexusCore instance is already shutting down.");
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async destroy() {
    try {
      this.status = "DESTROYED";
      const destroying = await this.executeLifecycleEvent(LifecycleEvent.EVENTS.DESTROY);
      await destroying.destroy();
    } catch (e) {
      console.error("Destroy error:", e);
    }
  }

  async start() {
    await this.configure();
    await this.load();
    await new Promise(resolve => setTimeout(resolve, 100));
    await this.shutdown();
  }

  on(event, handler) {
    const lifecycleEvent = new LifecycleEvent(event, this);
    this.onLifecycleEvent(event, lifecycleEvent);
    lifecycleEvent.setHandler(handler);
  }

  onLifecycleEvent(event, lifecycleEvent) {
    const handler = this.#lifecycle[event];
    if (handler instanceof LifecycleHandler) {
      handler.bind(lifecycleEvent.target);
    } else if (typeof handler === "function") {
      this.#lifecycle[event] = new LifecycleHandler(handler);
    } else {
      this.#lifecycle[event] = lifecycleEvent;
    }
  }

  async executeLifecycleEvent(event) {
    if (this.#lifecycle[event]) {
      try {
        let result = await (this.#lifecycle[event] instanceof LifecycleHandler ? this.#lifecycle[event].handler() : this.#lifecycle[event].run());
        if (typeof result === "object" && result instanceof Configured) {
          if (this.#lifecycle[event] === this.#lifecycle[LifecycleEvent.EVENTS.LOAD]) {
            result = result;
          } else if (this.#lifecycle[event] === this.#lifecycle[LifecycleEvent.EVENTS.SHUTDOWN]) {
            return result;
          }
        }
        return result;
      } catch (error) {
        console.error("Lifecycle event error:", error);
      }
    }
  }
}

const nexusCore = new NexusCore();
nexusCore.on("DESTROYED", async () => {
  console.log("NexusCore instance destroyed.");
});
nexusCore.configure({
  VERSION: "1.0.0",
  env: "development",
});
nexusCore.start();
nexusCore.shutdown();
nexusCore.destroy();