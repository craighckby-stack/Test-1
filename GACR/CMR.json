class Config {
  #values;
  #defaultConfig;
  #configSchema;

  constructor(values = {}) {
    this.#values = new Map(this.toPairs(values));
    this.#defaultConfig = this.#getDefaultConfig();
    this.#configSchema = this.#getConfigSchema();
  }

  setValues(values = {}) {
    this.#values = new Map(this.toPairs(values));
  }

  toPairs(obj) {
    return Object.entries(obj);
  }

  #getDefaultConfig() {
    return {
      VERSION: "1.0.0",
      env: process.env.NODE_ENV || "development",
      foo: "bar",
      baz: true,
    };
  }

  #getConfigSchema() {
    return {
      type: "object",
      properties: {
        VERSION: { type: "string" },
        env: { type: "string" },
        foo: { type: "string" },
        baz: { type: "boolean" },
      },
    };
  }

  validate() {
    try {
      const validator = new (require("jsonschema").Validator)();
      validator.checkSchema(this.#configSchema);
      validator.validate(this.#values, this.#configSchema);
    } catch (e) {
      console.error("Config validation error:", e);
      throw e;
    }
  }

  get values() {
    return this.#values;
  }

  get defaultConfig() {
    return this.#defaultConfig;
  }

  get configSchema() {
    return this.#configSchema;
  }

  getFoo() {
    return this.#values.get("foo");
  }

  getBaz() {
    return this.#values.get("baz");
  }
}

class LifecycleEvent {
  #event;
  #target;
  #handler;

  constructor(event, target) {
    this.#event = event;
    this.#target = target;
  }

  get event() {
    return this.#event;
  }

  get target() {
    return this.#target;
  }

  get handler() {
    return this.#handler;
  }

  setHandler(handler) {
    this.#handler = handler;
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target) {
    this.#handler = this.#handler.bind(target);
  }

  get handler() {
    return this.#handler;
  }
}

class NexusCore {
  #status;
  #lifecycle;
  #config;

  constructor() {
    this.#status = "INIT";
    this.#lifecycle = {
      CONFIGURED: new LifecycleHandler(() => console.log("NexusCore instance configured.")),
      LOADED: new LifecycleHandler(() => console.log("NexusCore instance loaded.")),
      SHUTTING_DOWN: new LifecycleHandler(() => console.log("NexusCore instance shutting down.")),
      DESTROYED: new LifecycleHandler(() => console.log("NexusCore instance destroyed.")),
    };
    this.#config = new Config();
  }

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  get config() {
    return this.#config;
  }

  validateConfig(config = new Config()) {
    try {
      const validator = new (require("jsonschema").Validator)();
      const configSchema = this.getConfigSchemaForValidation();
      validator.checkSchema(configSchema);
      validator.validate({
        VERSION: "1.0.0",
        env: process.env.NODE_ENV || "development",
        ...config.values,
      }, configSchema);
    } catch (e) {
      console.error("Config validation error:", e);
      throw e;
    }
  }

  getConfigSchemaForValidation() {
    return {
      type: "object",
      properties: {
        VERSION: { type: "string" },
        env: { type: "string" },
      },
    };
  }

  configure(config = new Config()) {
    this.validateConfig(config);
    config.validate();
    this.#config.setValues(config.defaultConfig);
    this.#config.values = new Map(Object.entries({
      ...this.#config.values,
      ...this.getConfigSchemaForValidation(),
      ...config.values,
    }));
    this.#config.validate();
    this.#lifecycle.CONFIGURED = new LifecycleEvent("CONFIGURED", this);
  }

  on(event, handler) {
    const lifecycleEvent = new LifecycleEvent(event, this);
    this.onLifecycleEvent(event, lifecycleEvent);
    lifecycleEvent.setHandler(handler);
  }

  onLifecycleEvent(event, lifecycleEvent) {
    const handler = this.#lifecycle[event];
    if (handler instanceof LifecycleHandler) {
      handler.setHandler(lifecycleEvent.handler);
    } else if (handler instanceof Function) {
      this.#lifecycle[event] = new LifecycleHandler(handler);
    } else {
      this.#lifecycle[event] = lifecycleEvent;
    }
  }

  executeLifecycleEvent(event) {
    if (this.#lifecycle[event]) {
      this.#lifecycle[event].handler();
    }
  }

  async load() {
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.LOADED = new LifecycleEvent("LOADED", this);
      this.executeLifecycleEvent("LOADED");
    } catch (e) {
      console.error("Load error:", e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.SUTTING_DOWN) {
        console.log("Shutdown initiated...");
        this.#lifecycle.SUTTING_DOWN = new LifecycleEvent("SHUTTING_DOWN", this);
        this.executeLifecycleEvent("SHUTTING_DOWN");
        await new Promise(resolve => setTimeout(resolve, 1000));
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
      } else if (this.status === "SHUTDOWN") {
        console.log("NexusCore instance is already shutting down.");
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async destroy() {
    try {
      this.status = "DESTROYED";
      this.#lifecycle.DESTROYED = new LifecycleEvent("DESTROYED", this);
      this.#lifecycle = {};
      this.#config = null;
    } catch (e) {
      console.error("Destroy error:", e);
    }
  }

  async start() {
    await this.configure();
    await this.load();
    await new Promise(resolve => setTimeout(resolve, 100));
    await this.shutdown();
  }
}

const nexusCore = new NexusCore();
nexusCore.on("DESTROYED", () => {
  console.log("NexusCore instance destroyed.");
});
nexusCore.configure({
  VERSION: "1.0.0",
  env: process.env.NODE_ENV || "development",
});
nexusCore.start();
nexusCore.shutdown();
nexusCore.destroy();