{
  "schema_version": "VSEC_V1.1",
  "description": "Violation Severity and Enforcement Configuration (Structured Response Matrix). Defines required tiered remediation actions (Response Sequences) upon Constraint Violations (VSEC). Read by SGS to determine mandatory response protocols, supporting action templating and progressive enforcement.",
  "enforcement_templates": {
    "LOG_ONLY": [
      {
        "type": "LOGGING",
        "parameters": {
          "level": "WARN",
          "retention_days": 7
        }
      }
    ],
    "ISOLATE_GRACEFUL": [
      {
        "type": "ISOLATION",
        "parameters": {
          "mode": "NETWORK_SOFT",
          "duration_sec": 300
        }
      },
      {
        "type": "TERMINATE",
        "parameters": {
          "mode": "GRACEFUL"
        }
      }
    ],
    "SECURE_HALT": [
      {
        "type": "ISOLATION",
        "parameters": {
          "mode": "SYSTEM_HARD",
          "level": 4
        }
      },
      {
        "type": "NOTIFY",
        "parameters": {
          "target": "SGS_CORE",
          "priority": "HIGH"
        }
      },
      {
        "type": "TERMINATE",
        "parameters": {
          "mode": "IMMEDIATE"
        }
      }
    ]
  },
  "violation_types": {
    "RESOURCE_EXHAUSTION": {
      "severity_level": "HIGH",
      "trigger_binding": [
        "SGS_AGENT",
        "GAX_AGENT"
      ],
      "response_sequence": [
        {
          "type": "THROTTLE",
          "parameters": {
            "rate_limit_pct": 50,
            "targets": "TRIGGERED_AGENTS"
          }
        },
        {
          "type": "FALLBACK_ACTION",
          "template": "ISOLATE_GRACEFUL"
        }
      ]
    },
    "INTEGRITY_CHECK_FAILURE": {
      "severity_level": "CATASTROPHIC",
      "response_sequence": [
        {
          "type": "ISOLATION",
          "parameters": {
            "mode": "HARDWARE_LEVEL",
            "quarantine_level": 5
          }
        },
        {
          "type": "TERMINATE",
          "parameters": {
            "mode": "IMMEDIATE"
          }
        },
        {
          "type": "NOTIFY",
          "parameters": {
            "target": "GLOBAL_AUDIT",
            "priority": "EMERGENCY",
            "flags": [
              "AUDIT_LOCK"
            ]
          }
        }
      ]
    },
    "UNAUTHORIZED_SYSCALL": {
      "severity_level": "CRITICAL",
      "response_sequence": [
        {
          "type": "KERNEL_TRAP",
          "parameters": {
            "signal": "SIGTERM_CRIT",
            "reason_code": 901
          }
        },
        {
          "type": "FALLBACK_ACTION",
          "template": "SECURE_HALT"
        }
      ]
    },
    "NETWORK_POLICY_BREACH": {
      "severity_level": "HIGH",
      "response_sequence": [
        {
          "type": "ISOLATION",
          "parameters": {
            "mode": "NETWORK_SOFT"
          }
        },
        {
          "type": "FALLBACK_ACTION",
          "template": "LOG_ONLY"
        }
      ]
    }
  }
}