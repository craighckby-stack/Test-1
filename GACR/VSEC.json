{
  "schema_version": "VSEC_V1.2",
  "description": "Violation Severity and Enforcement Configuration (Structured Response Matrix). Defines required tiered remediation actions (Response Sequences) upon Constraint Violations (VSEC). Implements SEQUENCE_INJECTION and prioritization for living runtime governance.",
  "enforcement_templates": {
    "LOG_ONLY": [
      {
        "type": "LOGGING",
        "parameters": {
          "level": "WARN",
          "retention_days": 7
        },
        "priority": 10
      }
    ],
    "ISOLATE_GRACEFUL": [
      {
        "type": "ISOLATION",
        "parameters": {
          "mode": "NETWORK_SOFT",
          "duration_sec": 300
        },
        "priority": 5
      },
      {
        "type": "TERMINATE",
        "parameters": {
          "mode": "GRACEFUL"
        },
        "priority": 6
      }
    ],
    "SECURE_HALT": [
      {
        "type": "ISOLATION",
        "parameters": {
          "mode": "SYSTEM_HARD",
          "level": 4
        },
        "priority": 1
      },
      {
        "type": "NOTIFY",
        "parameters": {
          "target": "SGS_CORE",
          "priority": "HIGH"
        },
        "priority": 2
      },
      {
        "type": "TERMINATE",
        "parameters": {
          "mode": "IMMEDIATE"
        },
        "priority": 3
      }
    ]
  },
  "violation_types": {
    "RESOURCE_EXHAUSTION": {
      "severity_level": "HIGH",
      "trigger_binding": [
        "SGS_AGENT",
        "GAX_AGENT"
      ],
      "adaptive_thresholds": {
        "escalate_to": "CRITICAL",
        "trigger_count": 3,
        "timeframe_sec": 60
      },
      "response_sequence": [
        {
          "type": "THROTTLE",
          "parameters": {
            "rate_limit_pct": 50,
            "targets": "TRIGGERED_AGENTS"
          },
          "priority": 7
        },
        {
          "type": "TEMPLATE_INJECTION",
          "template": "ISOLATE_GRACEFUL"
        }
      ]
    },
    "INTEGRITY_CHECK_FAILURE": {
      "severity_level": "CATASTROPHIC",
      "response_sequence": [
        {
          "type": "ISOLATION",
          "parameters": {
            "mode": "HARDWARE_LEVEL",
            "quarantine_level": 5
          },
          "priority": 1
        },
        {
          "type": "TERMINATE",
          "parameters": {
            "mode": "IMMEDIATE"
          },
          "priority": 2
        },
        {
          "type": "NOTIFY",
          "parameters": {
            "target": "GLOBAL_AUDIT",
            "priority": "EMERGENCY",
            "flags": [
              "AUDIT_LOCK"
            ]
          },
          "priority": 3
        }
      ]
    },
    "UNAUTHORIZED_SYSCALL": {
      "severity_level": "CRITICAL",
      "response_sequence": [
        {
          "type": "KERNEL_TRAP",
          "parameters": {
            "signal": "SIGTERM_CRIT",
            "reason_code": 901
          },
          "priority": 1
        },
        {
          "type": "TEMPLATE_INJECTION",
          "template": "SECURE_HALT"
        }
      ]
    },
    "NETWORK_POLICY_BREACH": {
      "severity_level": "HIGH",
      "response_sequence": [
        {
          "type": "ISOLATION",
          "parameters": {
            "mode": "NETWORK_SOFT"
          },
          "priority": 4
        },
        {
          "type": "TEMPLATE_INJECTION",
          "template": "LOG_ONLY"
        }
      ]
    },
    "KERNEL_SCHEMA_TAMPERING": {
      "severity_level": "CATASTROPHIC",
      "description": "Violation of core manifest structure or unauthorized self-modification attempts; critical for Living Runtime integrity.",
      "response_sequence": [
        {
          "type": "AUDIT_LOCK",
          "parameters": {
            "scope": "SYSTEM_WIDE",
            "duration_sec": 120
          },
          "priority": 1
        },
        {
          "type": "MEMORY_DUMP",
          "parameters": {
            "target": "PERSISTENT_STORE",
            "compression": "LZ4"
          },
          "priority": 2
        },
        {
          "type": "TEMPLATE_INJECTION",
          "template": "SECURE_HALT"
        }
      ]
    }
  }
}