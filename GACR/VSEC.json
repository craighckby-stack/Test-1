import console from 'console';
import { Validator } from 'jsonschema';

class Config {
  #staticConfig = {
    VERSION: "1.0.0",
    env: process.env.NODE_ENV || "development"
  };

  #defaultConfig = {
    foo: 'bar',
    baz: true
  };

  #configSchema = {
    type: 'object',
    properties: {
      foo: { type: 'string' },
      baz: { type: 'boolean' }
    }
  };

  constructor(values = {}) {
    this.#validateValues(values);
  }

  #validateValues(values) {
    Object.assign(this, values);
    this.#validateConfig(values);
  }

  #validateConfig(values) {
    const validator = new Validator();
    try {
      validator.checkSchema(this.#configSchema);
      validator.validate(values, this.#configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  get staticConfig() {
    return this.#staticConfig;
  }

  get defaultConfig() {
    return this.#defaultConfig;
  }

  get configSchema() {
    return this.#configSchema;
  }

  async validate(values = this) {
    this.#validateConfig(values);
  }

  static async configure(values = {}) {
    await Config.validate(values);
    return values;
  }
}

class LifecycleEvent {
  #event;

  constructor(event) {
    this.#event = event;
  }

  get event() {
    return this.#event;
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target = this) {
    this.#handler = this.#handler.bind(target);
  }

  execute() {
    this.#handler();
  }
}

class NexusCore {
  #lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  #status = "INIT";

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;
    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
      if (value === 'SHUTDOWN') {
        lifecycle.shuttingDown = false;
      }
    }
    if (currentValue === 'INIT' && value !== 'INIT') {
      lifecycle.configured = true;
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  async configure(config) {
    await Config.validate(config);
    await this.#lifecycle.CONFIGURED.handler();
    this.#lifecycle.configured = true;
    this.#config = config;
  }

  async destroyConfig() {
    this.#config = null;
  }

  onLifecycleEvent(event, handler) {
    const lifecycleHandler = new LifecycleHandler(handler);
    Object.assign(this.#lifecycle, { [event]: lifecycleHandler });
  }

  get on() {
    return (event, handler) => {
      const lifecycleEvent = new LifecycleEvent(event);
      this.onLifecycleEvent(event, handler);
    };
  }

  async executeLifecycleEvent(event) {
    if (this.#lifecycle[event]) {
      this.#lifecycle[event].bind(this).execute();
    }
  }

  async load() {
    await this.#lifecycle.CONFIGURED && this.executeLifecycleEvent("CONFIGURED");
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      this.executeLifecycleEvent("LOADED");
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        this.executeLifecycleEvent("SHUTTING_DOWN");
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
        this.destroyConfig();
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  get config() {
    return this.#config;
  }

  set config(value) {
    this.#config = value;
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      if (methodName in this && typeof this[methodName] === 'function') {
        await this[methodName]();
      }
    }
  }

  async destroy() {
    this.status = "DESTROYED";
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
  }
}

const nexusCore = new NexusCore();

nexusCore.on('DESTROYED', () => {
  console.log("NexusCore instance destroyed.");

  nexusCore.destroy();
});

NexusCore.on("INIT", () => {
  console.log("NexusCore instance initialized.");
});

nexusCore.on("CONFIGURED", async () => {
  console.log("NexusCore instance configured.");
  await nexusCore.configure(Config.defaultConfig());
});

nexusCore.on("LOADED", async () => {
  console.log("NexusCore instance loaded.");
  await nexusCore.load();
});

nexusCore.on("SHUTTING_DOWN", async () => {
  console.log("NexusCore instance is shutting down...");
});

nexusCore.on("SHUTDOWN", async () => {
  console.log("NexusCore shutdown completed.");
});

nexusCore.start();
nexusCore.shutdown();
nexusCore.destroy();


This updated version of NexucsCore follows advanced patterns and utilizes encapsulation more effectively. 

-   **Lifecycle** - `onLifecycleEvent` has been used to separate lifecycle management from other operations and ensure clarity and robustness.

-   **Data encapsulation** - `#config` has been used to set up private variable which is not easily overridden by other parts of the code.

-   **Property getter** - In NexucsCore, encapsulation is further improved with private variables like `Status` and `Lifecycle`.

-   **Constructor validation** - In Config class, validation has been done using `#validateValues` and `#validateConfig` methods ensuring that only valid data is used when instantiating an object.

-   **Promises in start**-The `start` method now creates promises for each of the lifecycle operations (`configure`, `load`, and `shutdown`) and executes them in sequence. This ensures that the correct order is observed in the lifecycle of the `NexusCore` instance.

-   **Config validation**, -  `validateConfig` has been moved to `Config` class where the validation logic is clearly defined.

-   **Shutdown handling** - Shutdown event now resets the `config`. This is done to prevent any further operations using the invalid config, and it ensures that everything comes to a halt once the instance is shut down.