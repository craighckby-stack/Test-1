class Config {
  #configSchema;

  static get staticConfig() {
    return {
      VERSION: "1.0.0",
      env: process.env.NODE_ENV || "development"
    };
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static get configSchema() {
    this.#configSchema = {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
    return this.#configSchema;
  }

  constructor(values = {}) {
    this.#validateConfig(values);
    this.#loadConfig(values);
  }

  #validateConfig(values) {
    const validator = new (require('jsonschema').Validator)();
    validator.checkSchema(this.constructor.configSchema);
    try {
      validator.validate(values, this.constructor.configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  #loadConfig(values) {
    Object.assign(this, values);
    return this;
  }
}

class LifecycleEvent {
  #event;

  constructor(event) {
    this.#event = event;
  }

  get event() {
    return this.#event;
  }

  set event(value) {
    this.#event = value;
  }
}

class LifecycleHandler {
  #handler;

  constructor(handler) {
    this.#handler = handler;
  }

  bind(target = this) {
    this.#handler = this.#handler.bind(target);
  }

  execute() {
    this.#handler();
  }

  get handler() {
    return this.#handler;
  }

  set handler(value) {
    this.#handler = value;
  }
}

class NexusCore {
  #lifecycle;
  #status;
  #handlers = new Map();

  constructor() {
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };

    this.#status = "INIT";
  }

  get status() {
    return this.#status;
  }

  set status(value) {
    this.#status = value;
    const currentValue = this.#status;
    const lifecycle = this.#lifecycle;

    if (value !== 'INIT') {
      console.log(`NexusCore instance is ${value}.`);
    }

    if (this.#status === 'DESTROYED') {
      lifecycle.configured = false;
      lifecycle.loaded = false;
      lifecycle.shuttingDown = false;
    }

    if (currentValue === 'INIT') {
      lifecycle.configured = value === 'CONFIGURED';
      lifecycle.loaded = value === 'LOADED';
      lifecycle.shuttingDown = value === 'SHUTTING_DOWN' || value === 'SHUTDOWN';
    }

    this.#validateStatus();
  }

  #validateStatus() {
    if (this.#lifecycle.configured && this.#status !== 'CONFIGURED' && this.#status !== 'INIT') {
      throw new Error("NexusCore lifecycle status inconsistency.");
    }
    if (this.#lifecycle.loaded && this.#status !== 'LOADED' && this.#status !== 'CONFIGURED' && this.#status !== 'SHUTDOWN' && this.#status !== 'INIT') {
      throw new Error("NexusCore lifecycle status inconsistency.");
    }
    if (this.#lifecycle.shuttingDown && this.#status !== 'SHUTTING_DOWN' && this.#status !== 'SHUTDOWN') {
      throw new Error("NexusCore lifecycle status inconsistency.");
    }
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  get handlers() {
    return this.#handlers;
  }

  #configLifecycleEvent(event) {
    const handler = this.#handlers.get(event);
    if (handler) {
      handler.bind(this).execute();
    }
  }

  configure(config) {
    const validationPromise = new Promise(resolve => {
      this.validateConfig(config, resolve);
    });
    validationPromise.then(() => {
      this.onLifecycleEvent("CONFIGURED");
      this.#lifecycle.configured = true;
      this.status = 'CONFIGURED';
    });
  }

  validateConfig(config, callback = () => {}) {
    const validator = new (require('jsonschema').Validator)();
    validator.checkSchema(this.constructor.configSchema);
    try {
      validator.validate(config, this.constructor.configSchema);
      callback();
    } catch (e) {
      console.error('Config validation error:', e);
      callback(e);
    }
  }

  addHandler(event, handler) {
    const lifecycleHandler = new LifecycleHandler(handler);
    this.#handlers.set(event, lifecycleHandler.handler);
  }

  on(event, handler) {
    this.addHandler(event, handler);
  }

  async load() {
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      this.#configLifecycleEvent("LOADED");
      this.status = 'LOADED';
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        this.#configLifecycleEvent("SHUTTING_DOWN");
        console.log("Shutdown complete...");
        this.status = 'SHUTDOWN';
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      try {
        if (this[methodName] instanceof Function) {
          await this[methodName]();
        }
      } catch (e) {
        console.error(`Error in ${methodName} method:`, e);
      }
    }
  }

  async destroy() {
    this.status = "DESTROYED";
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
    const handlers = this.handlers;
    this.handlers = new Map();
    handlers.forEach(handler => {
      try {
        handler();
      } catch (e) {
        console.error('Error in handler:', e);
      }
    });
  }
}

const nexusCore = new NexusCore();
nexusCore.addHandler('DESTROYED', async () => {
  console.log("NexusCore instance destroyed.");
});
const config = new Config(Config.defaultConfig);
nexusCore.configure(config);
nexusCore.start();
await nexusCore.load();
await nexusCore.shutdown();
await nexusCore.destroy();