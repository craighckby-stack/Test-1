// core/lifecycle-event.js
class LifecycleEvent {
  static EVENTS = {
    CONFIGURED: "configured",
    LOADED: "loaded",
    SHUTTING_DOWN: "shutting_down",
    SHUTDOWN: "shutdown",
    DESTROYED: "destroyed"
  };

  constructor(event) {
    if (!Object.values(LifecycleEvent.EVENTS).includes(event)) {
      throw new Error('Invalid lifecycle event.');
    }
    this.event = event;
  }
}

// config/config.js
class Config {
  constructor() {
    this.#loader = new ConfigLoader();
    this.#schema = new ConfigSchema();
    this.#validator = new JsonSchemaValidator();
  }

  async configure(values = {}) {
    try {
      await this.#validator.validate(values, this.#schema.jsonSchema);
      this.#loader.loadConfig(values);
    } catch (e) {
      console.error("Config validation error:", e);
      throw e;
    }
  }

  get loadConfig() {
    return this.#loader.loadConfig.bind(this.#loader, this.value);
  }

  #schema = new ConfigSchema();
  get configSchema() {
    return this.#schema.jsonSchema;
  }

  #validator = new JsonSchemaValidator();
  #loader;

  #value = {};
  get value() {
    return this.#value;
  }

  constructor(values = {}) {
    Reflect.apply(this.#loader.loadConfig, this.#loader, [values]);
  }
}

class ConfigSchema {
  constructor() {
    this.jsonSchema = {
      type: "object",
      properties: {
        foo: { type: "string" },
        baz: { type: "boolean" }
      }
    };
  }
}

class JsonSchemaValidator {
  constructor() {
    this.#validator = new Validator();
    this.#validator.addSchema(require('jsonschema').validate);
  }

  #validator;

  async validate(config, jsonSchema) {
    try {
      await this.#validator.validate(config, jsonSchema);
    } catch (e) {
      console.error("Config validation error:", e);
      throw e;
    }
  }
}

class ConfigLoader {
  loadConfig(values) {
    this.#value = Object.assign({}, values);
  }

  get #value = {};
}

// core/lifecycle-handler.js
class LifecycleHandler {
  constructor(handler) {
    this.handler = handler;
  }

  bind(target = this) {
    this.handler = this.handler.bind(target);
  }

  execute() {
    this.handler();
  }
}

// core/nexus-core.js
class NexusCore {
  #status;
  get status() {
    return this.#status;
  }

  set status(value) {
    const oldValue = this.#status;
    this.#status = value;
    this.#statusHandler(value, oldValue);
  }

  #lifecycle;
  get lifecycle() {
    return this.#lifecycle;
  }

  #handlers = new Map();
  get handlers() {
    return this.#handlers;
  }

  #configure() {
    this.#lifecycle = {
      configured: true,
      loaded: false,
      shuttingDown: false
    };
    this.status = "CONFIGURED";
  }

  #isValidConfiguration() {
    const lifecycle = this.#lifecycle;
    return lifecycle.configured && !lifecycle.loaded && !lifecycle.shuttingDown;
  }

  async configure(config) {
    try {
      await config.configure();
    } catch (e) {
      console.error("Config error:", e);
    }
    this.#configure();
    if (this.#isValidConfiguration()) {
      const configEvent = new LifecycleEvent(LifecycleEvent.EVENTS.CONFIGURED);
      this.#fireEvent(configEvent);
    } else {
      console.error("Invalid configuration state.");
    }
  }

  #verifyLifecycleState(event) {
    this._lifecycleVerification(event);
  }

  _lifecycleVerification(event) {
    if (event === LifecycleEvent.EVENTS.CONFIGURED && !this.#lifecycle.configured) {
      throw new Error("Invalid lifecycle state.");
    }
    if (
      event === LifecycleEvent.EVENTS.LOADED &&
      (!this.#lifecycle.configured || !this.#lifecycle.loaded)
    ) {
      throw new Error("Invalid lifecycle state.");
    }
    if (
      event === LifecycleEvent.EVENTS.SHUTTING_DOWN &&
      !(this.#lifecycle.configured && !this.#lifecycle.loaded && !this.#lifecycle.shuttingDown)
    ) {
      throw new Error("Invalid lifecycle state.");
    }
    if (
      event === LifecycleEvent.EVENTS.SHUTDOWN &&
      (!this.#lifecycle.shuttingDown || !this.#lifecycle.loaded)
    ) {
      throw new Error("Invalid lifecycle state.");
    }
  }

  #isRegisteredHandler(event) {
    return this.#handlers.has(event);
  }

  #fireEvent(event) {
    this.#verifyLifecycleState(event);
    const registeredHandler = this.#handlers.get(event);
    if (registeredHandler !== undefined) {
      registeredHandler.bind().execute();
    }
  }

  addHandler(event, handler) {
    if (Object.values(LifecycleEvent.EVENTS).includes(event)) {
      const lifecycleHandler = new LifecycleHandler(handler);
      if (!this.#isRegisteredHandler(event)) {
        this.#handlers.set(event, lifecycleHandler);
      } else {
        const existingHandler = this.#handlers.get(event);
        existingHandler.handler = lifecycleHandler.handler;
      }
    } else {
      console.error("Invalid event.");
    }
  }

  async load() {
    try {
      console.log("Loading...");
      await new Promise((resolve) => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      const loadedEvent = new LifecycleEvent(LifecycleEvent.EVENTS.LOADED);
      this.#fireEvent(loadedEvent);
      this.status = "LOADED";
    } catch (e) {
      console.error("Load error:", e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        const shuttingDownEvent = new LifecycleEvent(LifecycleEvent.EVENTS.SHUTTING_DOWN);
        this.#fireEvent(shuttingDownEvent);
        await new Promise((resolve) => setTimeout(resolve, 1000));
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async destroy() {
    this.status = "DESTROYED";
    this.#handlers = new Map();
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false,
    };
    const handlers = this.#handlers;
    if (this.status === "DESTROYED") {
      console.log("NexusCore instance destroyed.");
    } else {
      console.log("Deleting lifecycle object before destroying instance.");
    }
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      try {
        await this[methodName]();
      } catch (e) {
        console.error(`NexusCore Error: ${e}`);
      }
    }
  }

  #statusHandler(newValue, oldValue) {
    console.log(
      `NexusCore Status Changed: ${newValue} [Previous: ${oldValue}]`
    );
  }
}

// nexus-core.js

// Example usage:
const nexusCore = new NexusCore();
const lifecycleHandler = async () => {
  console.log("Lifecycle handler executed.");
};

nexusCore.addHandler("DESTROYED", lifecycleHandler);

const config = new Config({
  foo: "bar",
  baz: true,
});

await nexusCore.configure(config);
await nexusCore.start();
await nexusCore.load();
await nexusCore.shutdown();
await nexusCore.destroy();