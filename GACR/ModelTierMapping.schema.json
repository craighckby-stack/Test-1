class Config {
  static get staticConfig() {
    return {
      VERSION: "1.0.0",
      env: process.env.NODE_ENV || "development"
    };
  }

  static get defaultConfig() {
    return {
      foo: 'bar',
      baz: true
    };
  }

  static get configSchema() {
    return {
      type: 'object',
      properties: {
        foo: { type: 'string' },
        baz: { type: 'boolean' }
      }
    };
  }

  constructor(values = {}) {
    this.#validateConfig(values);
    this.#loadConfig(values);
  }

  #validateConfig(values) {
    const validator = new (require('jsonschema').Validator)();
    validator.checkSchema(this.constructor.configSchema);
    try {
      validator.validate(values, this.constructor.configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  #loadConfig(values) {
    for (const key in values) {
      if (Object.prototype.hasOwnProperty.call(values, key)) {
        this[key] = values[key];
      }
    }
  }

  get config() {
    return Config.configSchema;
  }
}

class LifecycleEvent {
  static EVENTS = {
    CONFIGURED: "configured",
    LOADED: "loaded",
    SHUTTING_DOWN: "shutting_down",
    SHUTDOWN: "shutdown",
    DESTROYED: "destroyed"
  };

  constructor(event) {
    if (event !== LifecycleEvent.EVENTS.CONFIGURED
      && event !== LifecycleEvent.EVENTS.LOADED
      && event !== LifecycleEvent.EVENTS.SHUTTING_DOWN
      && event !== LifecycleEvent.EVENTS.SHUTDOWN
      && event !== LifecycleEvent.EVENTS.DESTROYED) {
      throw new Error('Invalid lifecycle event.');
    }
    this.event = event;
  }
}

class LifecycleHandler {
  constructor(handler) {
    this.handler = handler;
  }

  execute() {
    this.handler();
  }

  bind(target = this) {
    this.handler = this.handler.bind(target);
  }
}

class NexusCore {
  #lifecycle;
  #status;
  #handlers = new Map();

  get status() {
    return this.#status;
  }

  set status(value) {
    const currentValue = this.#status;
    this.#status = value;
    this.#statusHandler(value, currentValue);
  }

  get lifecycle() {
    return this.#lifecycle;
  }

  get handlers() {
    return this.#handlers;
  }

  #configure() {
    this.#lifecycle = {
      configured: true,
      loaded: false,
      shuttingDown: false
    };
    this.#status = "CONFIGURED";
  }

  #isValidConfiguration() {
    const configured = this.#lifecycle.configured;
    const loaded = this.#lifecycle.loaded;
    const shuttingDown = this.#lifecycle.shuttingDown;
    return configured && !loaded && !shuttingDown;
  }

  async configure(config) {
    const validationPromise = new Promise(resolve => {
      this.validateConfig(config, resolve);
    });
    await validationPromise;
    this.#configure();
    if (this.#isValidConfiguration()) {
      const configEvent = new LifecycleEvent(LifecycleEvent.EVENTS.CONFIGURED);
      this.#fireEvent(configEvent);
    } else {
      console.error('Invalid configuration state.');
    }
  }

  #verifyLifecycleState(event) {
    const lifecycle = this.#lifecycle;
    if (event === LifecycleEvent.EVENTS.CONFIGURED && !lifecycle.configured) {
      throw new Error('Invalid lifecycle state');
    }
    if (event === LifecycleEvent.EVENTS.LOADED && (!lifecycle.configured || lifecycle.loaded)) {
      throw new Error('Invalid lifecycle state');
    }
    if (event === LifecycleEvent.EVENTS.SHUTTING_DOWN
      && !(lifecycle.configured && !lifecycle.loaded && !lifecycle.shuttingDown)) {
      throw new Error('Invalid lifecycle state');
    }
    if (event === LifecycleEvent.EVENTS.SHUTDOWN && (!lifecycle.shuttingDown || lifecycle.loaded)) {
      throw new Error('Invalid lifecycle state');
    }
  }

  #isRegisteredHandler(event) {
    return this.handlers.has(event);
  }

  #fireEvent(event) {
    this.verifyLifecycleState(event);
    const registeredHandler = this.handlers.get(event);
    if (registeredHandler !== undefined) {
      registeredHandler.bind().execute();
    }
  }

  addHandler(event, handler) {
    if (LifecycleEvent.EVENTS[event] === undefined) {
      console.error('Invalid event.');
    }
    const lifecycleHandler = new LifecycleHandler(handler);
    if (!this.#isRegisteredHandler(event)) {
      this.handlers.set(event, lifecycleHandler);
    } else {
      const existingHandler = this.handlers.get(event);
      existingHandler.handler = lifecycleHandler.handler;
    }
  }

  async load() {
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      this.#lifecycle.loaded = true;
      const loadedEvent = new LifecycleEvent(LifecycleEvent.EVENTS.LOADED);
      this.#fireEvent(loadedEvent);
      this.status = 'LOADED';
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  async shutdown() {
    try {
      if (!this.#lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        this.#lifecycle.shuttingDown = true;
        const shuttingDownEvent = new LifecycleEvent(LifecycleEvent.EVENTS.SHUTTING_DOWN);
        this.#fireEvent(shuttingDownEvent);
        await new Promise(resolve => setTimeout(resolve, 1000));
        console.log("Shutdown complete...");
        this.status = 'SHUTDOWN';
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async destroy() {
    this.status = "DESTROYED";
    this.#handlers = new Map();
    this.#lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
    const handlers = this.handlers;
    handlers.forEach(handler => {
      try {
        handler.execute();
      } catch (e) {
        console.error('Error in handler:', e);
      }
    });
    this.#statusHandler("DESTROYED");
  }

  #statusHandler(newValue, oldValue) {
    this.#status = newValue;
    if (newValue === "DESTROYED") {
      console.log("NexusCore instance destroyed.");
    }
  }

  async start() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      if (this[methodName] instanceof Function) {
        await this[methodName]();
      }
    }
  }

  async validateConfig(config, callback = () => {}) {
    const validator = new (require('jsonschema').Validator)();
    try {
      validator.validate(config, Config.configSchema);
      callback();
    } catch (e) {
      console.error('Config validation error:', e);
      callback(e);
    }
  }
}

const nexusCore = new NexusCore();
nexusCore.addHandler('DESTROYED', async () => {
  console.log("NexusCore instance destroyed.");
});
const config = new Config(Config.defaultConfig);
nexusCore.configure(config);
nexusCore.start();
await nexusCore.load();
await nexusCore.shutdown();
await nexusCore.destroy();