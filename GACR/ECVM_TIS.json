class Config {
  static _instance;

  static get instance() {
    if (!Config._instance) {
      Config._instance = new Config();
    }
    return Config._instance;
  }

  static _configSchema;

  static _constructorConfig;
  static _defaultConfig;

  constructor(values = Config._defaultConfig) {
    if (Config._instance) {
      throw new Error("Config instance already exists.");
    }

    this.constructorConfig = {
      ...Config._constructorConfig,
      ...values
    };

    Config._validateConfig(this.constructorConfig);
  }

  static get configSchema() {
    return Config._configSchema;
  }

  static get constructorConfig() {
    return Config._constructorConfig;
  }

  static get defaultConfig() {
    return Config._defaultConfig;
  }

  static async createConfig(values = Config._defaultConfig) {
    if (values) {
      Config._validateConfig(values);
      Config._instance = new Config(values);
    }
  }

  static _validateConfig(config) {
    try {
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(Config._configSchema);
      validator.validate(config, Config._configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  get config() {
    return this.constructorConfig;
  }

  set config(value) {
    this.constructorConfig = value;
  }
}

class LifecycleEvent {
  constructor(event) {
    this.#event = event;
  }

  get event() {
    return this.#event;
  }
}

class LifecycleHandler {
  constructor(handler) {
    this.#handler = handler;
  }

  bind(target = this) {
    this.#handler = this.#handler.bind(target);
  }

  execute(target = this) {
    return this.#handler.bind(target)();
  }
}

class ComponentLifecycleHandler {
  constructor(component, event) {
    this.#component = component;
    this.#handler = new LifecycleHandler(() => {
      const handlers = this.#component.lifecycle();
      const matchingHandler = handlers.find(handler => handler.event === event);
      if (matchingHandler) return matchingHandler.bind(this.#component).execute();
      if (handlers.some(handler => handler.event === 'ANY')) return handlers.find(handler => handler.event === 'ANY').bind(this.#component).execute();
    });
  }

  execute() {
    return this.#handler.execute();
  }
}

class NexusCoreLifecycleEvent {
  constructor(event, lifecycle, component) {
    this.#event = event;
    this.#lifecycle = lifecycle;
    this.#component = component;
  }

  async execute() {
    await this.#lifecycle.on(`${this.#event}.HOOK`).beforeHook(this.#event);
    await this.#component.lifecycle().find(handler => handler.event === this.#event).beforeHook(this.#event);
    await this.#lifecycle.on(`${this.#event}.HOOK`).afterHook(this.#event);
    await this.#component.lifecycle().find(handler => handler.event === this.#event).afterHook(this.#event);
  }
}

class NexusCore {
  static _instance;

  static _config;

  static _lifecycle = {
    configured: false,
    loaded: false,
    shuttingDown: false
  };

  static _status = "INIT";

  get instance() {
    if (!NexusCore._instance) {
      NexusCore._instance = new NexusCore();
    }
    return NexusCore._instance;
  }

  get config() {
    return NexusCore._config;
  }

  set config(value) {
    NexusCore._config = value;
  }

  get lifecycle() {
    return NexusCore._lifecycle;
  }

  get status() {
    return NexusCore._status;
  }

  set status(value) {
    NexusCore._status = value;
  }

  async configure() {
    await this._validateConfig();
    const event = new LifecycleEvent("CONFIGURED");
    await this.on("CONFIGURED", () => {
      this.config = await Config.createConfig(NexusCore._config);
      await this.executeLifecycleEvent(event);
    });
  }

  async _validateConfig() {
    try {
      if (!NexusCore._config) {
        throw new Error("No config provided.");
      }
      const validator = new (require('jsonschema').Validator)();
      validator.checkSchema(Config.configSchema);
      validator.validate(NexusCore._config, Config.configSchema);
    } catch (e) {
      console.error('Config validation error:', e);
      throw e;
    }
  }

  async load() {
    await this.configure();
    try {
      console.log("Loading...");
      await new Promise(resolve => setTimeout(resolve, 1000));
      console.log("Loading complete...");
      NexusCore._lifecycle.loaded = true;
      await this.executeLifecycleEvent("LOADED");
    } catch (e) {
      console.error('Load error:', e);
    }
  }

  async shutdown() {
    try {
      if (!NexusCore._lifecycle.shuttingDown) {
        console.log("Shutdown initiated...");
        NexusCore._lifecycle.shuttingDown = true;
        await this.executeLifecycleEvent("SHUTTING_DOWN");
        console.log("Shutdown complete...");
        this.status = "SHUTDOWN";
      }
    } catch (e) {
      console.error("Shutdown error:", e);
    }
  }

  async run() {
    const startMethodOrder = ["configure", "load", "shutdown"];
    for (const methodName of startMethodOrder) {
      if (this[methodName] instanceof Function) {
        await this[methodName]();
      }
    }
    this.status = "RUNNING";
  }

  async stop() {
    this.status = "STOPPED";
  }

  async destroy() {
    this.status = "DESTROYED";
    NexusCore._lifecycle = {
      configured: false,
      loaded: false,
      shuttingDown: false
    };
  }

  static async create() {
    NexusCore._config = {};
    NexusCore._instance = new NexusCore();
    return NexusCore._instance;
  }

  on(event, handler) {
    return new LifecycleHandler(handler);
  }

  async executeLifecycleEvent(event, lifecycle = this.lifecycle, component = this) {
    const eventHandler = this.on(event, () => {
      if (component.lifecycle().find(handler => handler.event === event)) {
        return component.lifecycle().find(handler => handler.event === event).execute();
      }
      if (lifecycle.some(handler => handler.event === event)) {
        return lifecycle.find(handler => handler.event === event).execute();
      }
    });
    await eventHandler.beforeHook(event);
    await eventHandler.afterHook(event);
  }
}


Config._configSchema = {
  type: 'object',
  properties: {
    foo: { type: 'string' },
    baz: { type: 'boolean' }
  }
};
Config._defaultConfig = {
  foo: 'bar',
  baz: true
};
Config._constructorConfig = {
  VERSION: "1.0.0",
  env: process.env.NODE_ENV || "development"
};

(async () => {
  const nexusCore = await NexusCore.create();
  nexusCore.configure();
  await nexusCore.run();
  await nexusCore.load();
  await nexusCore.shutdown();
  await nexusCore.destroy();
})();
export { Config, NexusCore };