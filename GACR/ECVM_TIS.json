{
  "manifest_version": "2.0.1",
  "config_id": "ECVM_TIS",
  "metadata": {
    "gate_id": "S4.5",
    "description": "Normalized definition of mandatory telemetry input sources (TIS) for ECVM validation checks, aligned with AGI self-monitoring protocols."
  },
  "telemetry_inputs": [
    {
      "source_id": "API_PERF",
      "source_name": "API_Performance_Monitor",
      "status": "ACTIVE",
      "priority_level": "CRITICAL",
      "data_path": "metrics.latency.ms",
      "required_by": [
        "CVA-201"
      ],
      "kernel_impact_area": [
        "Logic",
        "Navigation"
      ],
      "schema_ref": "GACR/Schemas/APITelemetry.json",
      "retrieval_config": {
        "protocol": "HTTP/2_PULL",
        "schedule": {
          "type": "INTERVAL",
          "interval_ms": 500
        },
        "timeout_ms": 150
      }
    },
    {
      "source_id": "DTEM_CACHE",
      "source_name": "DTEM_Cache_Status",
      "status": "ACTIVE",
      "priority_level": "HIGH",
      "data_path": "cache_status.last_update_ts",
      "required_by": [
        "CVA-305"
      ],
      "kernel_impact_area": [
        "Memory"
      ],
      "schema_ref": "GACR/Schemas/DTEMCacheStatus.json",
      "retrieval_config": {
        "protocol": "IPC_MOCK",
        "schedule": {
          "type": "FIXED_RATE",
          "rate_seconds": 30
        },
        "timeout_ms": 100
      }
    },
    {
      "source_id": "RESOURCE_ALLOC",
      "source_name": "Resource_Allocator_Feed",
      "status": "ACTIVE",
      "priority_level": "CRITICAL",
      "data_path": "resource_pool.utilization_summary",
      "required_by": [
        "CVA-412"
      ],
      "kernel_impact_area": [
        "Logic",
        "Emergent"
      ],
      "schema_ref": "GACR/Schemas/ResourceTelemetry.json",
      "retrieval_config": {
        "protocol": "GRPC_BI_STREAM",
        "schedule": {
          "type": "EVENT_DRIVEN",
          "debounce_ms": 100
        },
        "timeout_ms": 500
      }
    },
    {
      "source_id": "AGI_CORE_STATUS",
      "source_name": "AGI_Kernel_Self_Monitor",
      "status": "ACTIVE",
      "priority_level": "CRITICAL",
      "data_path": "kernel.ecm.utilization_rate",
      "required_by": [
        "AGI-SELF-001",
        "META-LEARN-005"
      ],
      "kernel_impact_area": [
        "Emergent",
        "Memory"
      ],
      "schema_ref": "core/schemas/AGIStatusTelemetry.json",
      "retrieval_config": {
        "protocol": "IPC_DIRECT_READ",
        "schedule": {
          "type": "INTERVAL",
          "interval_ms": 100
        },
        "timeout_ms": 50
      }
    }
  ]
}