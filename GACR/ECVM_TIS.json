};

(async () => {
  const nx = await NexusCore.create();
  nx.configure();
  await nx.run();
  await nx.load();
  await nx.shutdown();
  await nx.destroy();
})();
class LifecycleHook {
  constructor(handler) {
    this.handler = handler;
  }

  async before(lifecycle, component) {}
  async after(lifecycle, component) {}
}

