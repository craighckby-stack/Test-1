{
  "protocol_version": "v2.0",
  "state_machine_id": "C3P_SM_COORD_001",
  "initial_state": "I_AWAITING_GEP",
  "states": [
    {
      "id": "I_AWAITING_GEP",
      "description": "Coordinator initialized, awaiting initial GEP payload from GCO.",
      "transitions": [
        {"to": "II_PRE_VALIDATION", "on_event": "EVENT_GEP_RECEIVED"}
      ]
    },
    {
      "id": "II_PRE_VALIDATION",
      "description": "Validating GCO signature, Nonce, and retrieving current CIL tip.",
      "transitions": [
        {"to": "III_CONSENSUS_REQUESTED", "on_success": "EVENT_TIP_SYNCED"},
        {"to": "E_INITIATION_FAIL", "on_failure": "ERROR_INVALID_SIGNATURE"}
      ],
      "timeout_ms": 5000
    },
    {
      "id": "III_CONSENSUS_REQUESTED",
      "description": "Proposed block data sent to AICV cluster. Awaiting C3P_PROOF.",
      "transitions": [
        {"to": "IV_PROOF_RECEIVED", "on_event": "EVENT_PROOF_COMPLETE"},
        {"to": "E_CONSENSUS_TIMEOUT", "on_failure": "ERROR_AICV_TIMEOUT"}
      ],
      "timeout_ms": 30000
    },
    {
      "id": "IV_PROOF_RECEIVED",
      "description": "C3P_PROOF received and being validated. Preparing atomic write to CIL.",
      "transitions": [
        {"to": "V_COMMIT_SUCCESS", "on_success": "EVENT_LEDGER_ACK"},
        {"to": "E_COMMIT_FAIL_FORK", "on_failure": "ERROR_CIL_FORK_REJECTED"}
      ],
      "timeout_ms": 10000
    },
    {
      "id": "V_COMMIT_SUCCESS",
      "type": "TERMINAL",
      "description": "Block successfully committed. Final synchronization broadcast initiated."
    },
    {
      "id": "E_INITIATION_FAIL",
      "type": "ERROR",
      "description": "GEP initiation failure (e.g., signature rejection, invalid schema)."
    },
    {
      "id": "E_CONSENSUS_TIMEOUT",
      "type": "ERROR",
      "description": "AICV consensus timeout or insufficient node quorum achieved."
    },
    {
      "id": "E_COMMIT_FAIL_FORK",
      "type": "ERROR",
      "description": "CIL rejected commit due to chain tip mismatch (fork detected) or storage failure."
    }
  ]
}