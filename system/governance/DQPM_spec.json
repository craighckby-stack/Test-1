{
  "specVersion": "1.1.0",
  "name": "Sovereign_DQPM_Specification",
  "description": "Mandatory Quality, Performance, and Measurement baselines for all internal AGI modules, optimized for v94.1 architecture.",
  "dataQuality": {
    "integrityScoreThreshold": 0.9995,
    "freshnessToleranceMs": 45000,
    "schemaValidationMode": "Strict_On_Ingress",
    "anomalyDetectionProfile": "Z-Score_4.0_Adaptive"
  },
  "performanceMetrics": {
    "coreLatencyMs": {
      "P50": 4,
      "P99": 12,
      "criticalFailureThreshold": 25
    },
    "throughputPerSecond": {
      "targetMinimum": 7500,
      "alertThreshold": 6000
    },
    "evolutionAccuracy": {
      "minimumAcceptableGain": 0.002,
      "resetIfStalledEpochs": 8,
      "metric_id": "KLDivergence_v3"
    }
  },
  "measurementProtocol": {
    "logging": {
      "level": "CRITICAL_PATH_L3",
      "format": "JSON_SCHEMA_v2",
      "retentionDays": 240
    },
    "audit": {
      "frequency": "hourly",
      "failureCriteria": "Any two consecutive breaches of coreLatencyMs P99, or one breach of criticalFailureThreshold.",
      "correctionStrategy": "Auto_Throttle_L1"
    }
  },
  "complianceTargets": {
    "SLO_Availability": 0.9999,
    "DQP_EnforcementLevel": "Mandatory_L5"
  }
}