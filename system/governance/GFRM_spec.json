{
  "metadata": {
    "spec_name": "Governance_Fidelity_Risk_Monitoring_Specification",
    "version": "2.0-v94.1",
    "last_revised": "2024-05-15T12:00:00Z",
    "description": "Definitive policy document separating declarative governance specifications from execution configurations."
  },
  "governance": {
    "policy_layer": "Tier-1 Operational Compliance",
    "enforcement_hooks": [
      {
        "trigger": "FidelityBreach",
        "severity_min": "High",
        "action": "ActivateSandboxing",
        "target_module": "System_Resource_Controller"
      },
      {
        "trigger": "RiskExposureExceedance",
        "severity_min": "Medium",
        "action": "ThrottleSelfAllocation",
        "target_module": "Autonomy_Scheduler"
      }
    ],
    "incident_classification": {
      "severity_levels": ["Low", "Medium", "High", "Critical"]
    }
  },
  "fidelity_engine": {
    "metrics_definition": [
      {
        "id": "AHR_CORE_001",
        "name": "Absolute_Heuristic_Reliability",
        "base_threshold": 0.995,
        "weight": 1.0,
        "adaptation_policy_ref": "POLICY_EMA_K1"
      },
      {
        "id": "USS_AUX_002",
        "name": "Unintentional_Side_Effect_Score",
        "base_threshold": 0.001,
        "weight": 1.2,
        "adaptation_policy_ref": "POLICY_CVM_T3"
      }
    ],
    "sampling_protocol": {
      "mode": "Adaptive",
      "base_interval_ms": 2000,
      "dynamic_factor_source": "RiskExposureIndex"
    }
  },
  "risk_management": {
    "default_tolerance": "Acceptable_MinorDeviation",
    "contextual_risk_modifiers": [
      {
        "context_tag": "PRODUCTION_CRITICAL_PATH",
        "modifier_key": "RISK_LOCKDOWN_FACTOR",
        "factor": 0.1
      }
    ],
    "failure_quantification": {
      "max_critical_incidents_p99": 3,
      "reset_period_hours": 24
    }
  },
  "monitoring": {
    "reporting_format": "JSON_SCHEMA_V4_COMPRESSED",
    "push_endpoint": "http://telemetry.sovereign.local/v1/metrics",
    "heartbeat_interval_ms": 10000
  }
}