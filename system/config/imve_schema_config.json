{
  "IMVE_VERSION": "V1.0",
  "metric_schema_requirements": [
    {
      "id": "S-01_Efficacy_Trust",
      "required_sources": ["ATM", "PSR", "ADA"],
      "schema": "EfficacyProjection.json",
      "constraints": {
        "data_type": "float",
        "range": [0.0, 1.0],
        "normalization_routine": "Z-score_v2"
      }
    },
    {
      "id": "S-02_Risk_Synthesis",
      "required_sources": ["MCRA", "RACM"],
      "schema": "RiskSynthesis.json",
      "constraints": {
        "data_type": "float",
        "range": [0.0, 1.0],
        "aggregation_method": "WeightedAverage_v1"
      }
    },
    {
      "id": "S-03_Compliance_Veto",
      "required_sources": ["RSAM", "CIL", "SBC"],
      "schema": "ComplianceState.json",
      "constraints": {
        "data_type": "boolean",
        "value_check": ["TRUE", "FALSE"]
      }
    }
  ],
  "pre_l4_validation_check": true
}