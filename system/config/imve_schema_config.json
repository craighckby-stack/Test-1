{
  "metadata": {
    "version": "V2.0",
    "description": "Integrated Metric Validation Engine (IMVE) Schema Configuration defining requirements and standardized processing pipelines for core operational metrics."
  },
  "metric_definitions": [
    {
      "metric_id": "S-01_Efficacy_Trust",
      "schema_ref": "EfficacyProjection.json",
      "required_input_sources": ["ATM", "PSR", "ADA"],
      "constraints": {
        "data_type": "float",
        "value_logic": {
          "range": [0.0, 1.0],
          "exclusive_max": false
        },
        "processing_pipeline": {
          "type": "Normalization",
          "routine": "Z_SCORE_V2"
        }
      }
    },
    {
      "metric_id": "S-02_Risk_Synthesis",
      "schema_ref": "RiskSynthesis.json",
      "required_input_sources": ["MCRA", "RACM"],
      "constraints": {
        "data_type": "float",
        "value_logic": {
          "range": [0.0, 1.0],
          "exclusive_max": false
        },
        "processing_pipeline": {
          "type": "Aggregation",
          "routine": "WEIGHTED_AVERAGE_V1"
        }
      }
    },
    {
      "metric_id": "S-03_Compliance_Veto",
      "schema_ref": "ComplianceState.json",
      "required_input_sources": ["RSAM", "CIL", "SBC"],
      "constraints": {
        "data_type": "boolean",
        "value_logic": {
          "allowed_values": [true, false],
          "strict_check": true
        },
        "processing_pipeline": null
      }
    }
  ],
  "engine_configuration": {
    "pre_l4_validation_check": true,
    "source_availability_check_level": "CRITICAL",
    "fail_mode_default": "VETO"
  }
}