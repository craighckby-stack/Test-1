{
  "policyDomain": "MultiPurposeAccessManagement",
  "domainId": "MPAM-GACR",
  "version": "2.1.0",
  "schemaHash": "SHA256:c2d7e0f81a4b5d92e6f37c0a9b81d2f7",
  "status": "PRODUCTION",
  "policyRules": [
    {
      "ruleId": "R-MPAM-001",
      "priority": 100,
      "effect": "DENY",
      "description": "Block unauthorized core access unless explicit maintenance mode is active.",
      "target": {
        "principal": "ALL",
        "resourceType": ["CORE_INFRASTRUCTURE", "ROOT_SECRETS"]
      },
      "condition": {
        "operator": "NOT",
        "clause": {
          "field": "system.isMaintenanceMode",
          "check": "EQUAL",
          "value": true
        }
      },
      "metadata": {
        "auditLevel": "CRITICAL",
        "enforcementEngine": "AURA_VM"
      }
    },
    {
      "ruleId": "R-MPAM-002",
      "priority": 200,
      "effect": "ALLOW",
      "description": "Scheduled telemetry access for Sovereign AGI service account.",
      "target": {
        "principalType": "SERVICE_ACCOUNT",
        "principalId": "SovereignAGI"
      },
      "condition": {
        "operator": "AND",
        "clauses": [
          {
            "field": "resource.scope",
            "check": "EQUAL",
            "value": "telemetry"
          },
          {
            "field": "time.hour",
            "check": "BETWEEN",
            "value": ["00:00", "05:00"]
          }
        ]
      },
      "metadata": {
        "auditLevel": "INFO"
      }
    }
  ]
}