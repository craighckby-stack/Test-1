{
  "manifest_id": "SVM_V1.0",
  "version": "94.1_Init",
  "asset_name": "System Vitality Metric Manifest",
  "metadata": {
    "description": "Standard definitions for governance-monitored metrics, ensuring consistent data sourcing and interpretation.",
    "normalization_schema": "Z-Score (Default)",
    "sampling_rate": "1Hz"
  },
  "metrics": [
    {
      "metric_id": "M_EX_TIME_DRIFT",
      "data_source": "system.profiler.runtime",
      "data_type": "float",
      "units": "ratio",
      "path": "system.execution.time.deviation.ratio",
      "description": "Execution time drift ratio relative to baseline averaged mean."
    },
    {
      "metric_id": "M_MODEL_INFERENCE_VAR",
      "data_source": "certified_model.telemetry",
      "data_type": "float",
      "units": "variance",
      "path": "certified_model.inference.variance",
      "description": "Variance of inference output over window N."
    },
    {
      "metric_id": "M_UTILITY_TRAJECTORY",
      "data_source": "governance.internal_state",
      "data_type": "integer",
      "units": "count",
      "path": "governance.utility.non_monotonic_trajectory_count",
      "description": "Number of cycles where system utility function decreased unexpectedly."
    }
  ]
}