{
  "utility_id": "LicenseSecurityInjector",
  "description": "Configuration for dynamically injecting standard headers (license, security tags) during code synthesis.",
  "injection_mode": "post_synthesis_verification",
  "license_template": {
    "source": "./governance/templates/standard_mit.txt",
    "insertion_point_marker": "#FILE_HEADER"
  },
  "security_tag_generation": {
    "enabled": true,
    "algorithm": "SHA256",
    "output_format": "JSON_comment",
    "fields": ["system_version", "policy_checksum", "template_hash"]
  },
  "verification": {
    "enabled": true,
    "failure_action": "reject_artifact"
  }
}