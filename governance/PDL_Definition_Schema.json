{
  "pdl_version": "3.5.0",
  "language_id": "SovereignPDL_V3",
  "reserved_keywords": [
    "MUST",
    "SHALL",
    "IF",
    "THEN",
    "WHERE",
    "SCOPE",
    "GOVERNANCE"
  ],
  "syntax_rules": {
    "policy_identifier_format": "/^GRS-[A-Z0-9]{3,}-\d{4}$/",
    "section_header_format": "Capitalized (dot-separated)",
    "required_sections": [
      "PURPOSE",
      "SCOPE",
      "RULES",
      "DEVIATIONS"
    ]
  },
  "type_constraints": [
    {
      "type": "ConfidenceScore",
      "format": "float",
      "range": [
        0.0,
        1.0
      ],
      "precision": 3
    }
  ],
  "compiler_hooks": [
    "PreLexerTransform",
    "PostASTValidation"
  ]
}