{
  "manifest_id": "ADTM_V2.0",
  "version": "94.1_Refactor",
  "asset_name": "Adaptive Anomaly Detection Threshold Manifest",
  "metadata": {
    "owner": "GAX/Sovereign_v94.1",
    "target_gates": ["S6.5", "S7.0"],
    "description": "Rules defining dynamic behavioral outliers requiring immediate governance response during runtime, post-S6.5 activation."
  },
  "anomaly_profiles": [
    {
      "metric_id": "M_EX_TIME_DRIFT",
      "metric_path": "system.execution.time.deviation.ratio",
      "window_size_cycles": 10,
      "checks": [
        {
          "severity": "WARNING",
          "comparison": "greater_than",
          "threshold_type": "STATIC",
          "value": 2.5,
          "policy_id": "POL_LOG_AND_ALERT_S3"
        },
        {
          "severity": "CRITICAL",
          "comparison": "greater_than",
          "threshold_type": "ADAPTIVE",
          "value": 3.5,
          "adaptive_policy_ref": "AP_ZSCORE_3SIGMA",
          "policy_id": "POL_VETO_S65"
        }
      ]
    },
    {
      "metric_id": "M_MODEL_INFERENCE_VAR",
      "metric_path": "certified_model.inference.variance",
      "window_size_cycles": 5,
      "checks": [
        {
          "severity": "CRITICAL",
          "comparison": "greater_than",
          "threshold_type": "STATIC",
          "value": 0.05,
          "policy_id": "POL_TRIGGER_ROLLBACK"
        }
      ]
    },
    {
      "metric_id": "M_UTILITY_TRAJECTORY",
      "metric_path": "governance.utility.non_monotonic_trajectory_count",
      "window_size_cycles": 3,
      "checks": [
        {
          "severity": "CRITICAL",
          "comparison": "greater_than",
          "threshold_type": "STATIC",
          "value": 1,
          "policy_id": "POL_INITIATE_DIAGNOSTICS_S7"
        }
      ]
    }
  ]
}