{
  "engine_id": "HVE_V2",
  "policy_config": {
    "policy_name": "EXECUTIVE_INTEGRITY",
    "strictness_level": "CRITICAL",
    "thresholds": {
      "concurrent_failures_limit": 5,
      "scan_frequency_minutes": 15
    }
  },
  "scan_scope": {
    "includes": [
      {"path": "governance/", "file_patterns": ["*.json", "*.yaml"]},
      {"path": "config/", "file_patterns": ["*.json", "*.env"]},
      {"path": "core/logic/", "file_patterns": ["*.py", "*.ts", "*.js"]}
    ],
    "excludes": [
      {"path": "config/cache/", "reason": "Temporary files"},
      {"path": "core/logic/test_harness/", "reason": "Volatile test infrastructure"}
    ]
  },
  "failure_response": {
    "hash_mismatch": {"action": "CRITICAL_HALT", "notification": "HIGH"},
    "missing_registry_entry": {"action": "LOG_WARNING_CONTINUE", "notification": "LOW"},
    "invalid_signature": {"action": "CRITICAL_HALT", "notification": "HIGH"},
    "unknown_file": {"action": "REPORT_AUDIT", "notification": "MEDIUM"}
  },
  "remediation": {
    "enabled": true,
    "default_strategy": "ROLLBACK_TO_LAST_KNOWN_GOOD_STATE",
    "remediable_failure_types": ["missing_registry_entry"]
  },
  "reporting": {
    "report_path": "logs/hve/audits/",
    "log_retention_days": 30,
    "reporting_verbosity": "DETAIL"
  }
}