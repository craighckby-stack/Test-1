    "Mutation": {
      "type": "struct",
      "fields": {
        "Risk_Score": {
          "type": "double",
          "description": "The computed risk score for the change (0.0 to 1.0)."
        }
      }
    }
  },
  "root_context_objects": [
    {"name": "Goal_Declaration", "type": "Goal_Declaration"},
