{
  "smc_spec_version": "v1.1.0",
  "name": "Sovereign_Kernel_SMC",
  "description": "Defines authoritative governance protocols and authorized state transitions for the core kernel.",
  "state_definitions": {
    "states": [
      "DORMANT",
      "BOOTSTRAP_INIT",
      "OPERATIONAL_SAFE",
      "OPERATIONAL_FULL",
      "CRITICAL_STANDBY",
      "CRITICAL_FAILURE",
      "MAINTENANCE_IDLE"
    ],
    "initial_state": "DORMANT"
  },
  "authorization_config": {
    "model_type": "MultiSig_Threshold",
    "transition_threshold": 0.75,
    "required_governance_roles": [
      "Architect_Core",
      "Governance_Trustee"
    ],
    "exempt_transitions": {
      "DORMANT__to__BOOTSTRAP_INIT": "No authorization required for initial boot sequence."
    }
  },
  "command_permissions": {
    "LOAD_MODULES": ["Architect_Core"],
    "RUN_SELF_CHECK": ["ANY"],
    "QUERY_STATE": ["ANY"],
    "INITIATE_ROLLBACK": ["Governance_Trustee", "Architect_Core"],
    "DEPLOY_NEW_CODEBASE": ["Governance_Trustee"],
    "ADJUST_GOVERNANCE_CONFIG": ["Governance_Trustee"],
    "FORCE_SHUTDOWN": ["Root_Emergency_Key"]
  },
  "state_contexts": {
    "BOOTSTRAP_INIT": {
      "min_resource_check": true
    },
    "OPERATIONAL_FULL": {
      "resource_limits": {
        "max_cpu_usage": 0.95,
        "max_memory_gb": 128
      },
      "requires_evolution_vote": true
    },
    "MAINTENANCE_IDLE": {
      "resource_limits": {
        "max_cpu_usage": 0.1
      }
    }
  },
  "transition_map": {
    "DORMANT": ["BOOTSTRAP_INIT"],
    "BOOTSTRAP_INIT": ["OPERATIONAL_SAFE", "CRITICAL_STANDBY", "CRITICAL_FAILURE"],
    "OPERATIONAL_SAFE": ["OPERATIONAL_FULL", "MAINTENANCE_IDLE", "CRITICAL_STANDBY", "CRITICAL_FAILURE"],
    "OPERATIONAL_FULL": ["OPERATIONAL_SAFE", "MAINTENANCE_IDLE", "CRITICAL_STANDBY"],
    "CRITICAL_STANDBY": ["OPERATIONAL_SAFE", "CRITICAL_FAILURE"],
    "MAINTENANCE_IDLE": ["OPERATIONAL_SAFE", "CRITICAL_STANDBY"],
    "CRITICAL_FAILURE": ["DORMANT"]
  },
  "event_logging": {
    "level": "AUDIT_HIGH",
    "required_storage_duration_days": 365
  }
}