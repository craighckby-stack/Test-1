{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "esvs_manifest_v2_schema.json",
  "title": "ESVS Manifest V2",
  "type": "object",
  "required": ["metadata", "signatures"],
  "properties": {
    "description": { "type": "string" },
    "metadata": {
      "type": "object",
      "required": ["version", "generated_timestamp", "checksum_standard"],
      "properties": {
        "version": { "type": "string", "pattern": "^2\\.\\d+$" },
        "generated_timestamp": { "type": "string", "format": "date-time" },
        "checksum_standard": { "type": "string", "enum": ["BLAKE3", "SHA3-512", "SHA256"] }
      }
    },
    "signatures": {
      "type": "object",
      "required": ["system", "dependencies"],
      "properties": {
        "system": {
          "type": "object",
          "properties": {
            "runtime_identifier": { "type": "string" },
            "signature": { "$ref": "#/definitions/signatureObject" }
          }
        },
        "dependencies": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "version", "source", "signature"],
            "properties": {
              "name": { "type": "string" },
              "version": { "type": "string" },
              "source": { "type": "string" },
              "signature": { "$ref": "#/definitions/signatureObject" }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "signatureObject": {
      "type": "object",
      "required": ["algorithm", "value"],
      "properties": {
        "algorithm": { "type": "string" },
        "value": { "type": "string", "pattern": "^[0-9a-fA-F]{32,}$" }
      }
    }
  }
}