      "parameters": {
        "snapshot_source": "DCM_Primary_Store",
        "snapshot_retention_days": 7
      },
      "audit_trail_required": true
    },
    {
      "strategy_code": "R-02_hardware_reset",
      "target_type": "INFRASTRUCTURE",
      "scope": "NODE_GROUP",
      "parameters": {
        "dry_run_timeout_s": 60,
        "parallel_limit": 5
      },
      "audit_trail_required": true
    }
  ]
}