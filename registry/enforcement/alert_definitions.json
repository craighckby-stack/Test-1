{
  "schema_version": "1.1.0",
  "definitions": {
    "INCIDENT_HIGH_SEVERITY": {
      "metadata": {
        "level": "HIGH",
        "description": "Generic high severity alert forwarded to incident management.",
        "log_level": "ERROR",
        "retention_days": 90
      },
      "action_config": {
        "handler": "IncidentHandler",
        "type": "NOTIFICATION",
        "policy": {
          "retry": "STANDARD_BACKOFF",
          "max_attempts": 3,
          "timeout_ms": 5000
        }
      }
    },
    "SYSTEM_CRITICAL_HALT": {
      "metadata": {
        "level": "CRITICAL",
        "description": "Unrecoverable error state requiring immediate system interruption.",
        "log_level": "CRITICAL",
        "retention_days": 365
      },
      "action_config": {
        "handler": "DMW_Core_Scheduler",
        "type": "SYSTEM_INTERRUPT",
        "policy": {
          "retry": "NONE",
          "max_attempts": 1,
          "timeout_ms": 10000
        }
      }
    },
    "PERFORMANCE_WARNING": {
      "metadata": {
        "level": "LOW",
        "description": "Low severity log indicating potential future performance degradation.",
        "log_level": "WARNING",
        "retention_days": 30
      },
      "action_config": {
        "handler": "SystemLogger",
        "type": "LOGGING_ONLY",
        "policy": {
          "retry": "NONE"
        }
      }
    }
  }
}