{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://registry.agi/schema/dmw_policy.schema.json",
  "title": "DMW Policy Configuration Schema (v2.0)",
  "type": "object",
  "properties": {
    "version": { "type": "string", "const": "2.0" },
    "policy_id": { "type": "string" },
    "global_settings": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "default_action": { "type": "string", "enum": ["AllowIfNoMatch", "DenyIfNoMatch"] },
        "evaluation_mode": { "type": "string", "enum": ["FirstMatchWins", "HighestPriorityWins"] }
      },
      "required": ["enabled", "default_action", "evaluation_mode"]
    },
    "policies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "rule_id": { "type": "string" },
          "priority": { "type": "integer", "minimum": 1, "maximum": 1000 },
          "effective_from": { "type": "string", "format": "date-time" },
          "target_definition": {
            "type": "object",
            "properties": {
              "context_type": { "type": "string", "enum": ["ResourcePath", "Operation", "ServiceIdentifier"] },
              "match_regex": { "type": "string" },
              "match_operation": { "type": "string", "enum": ["READ", "WRITE", "DELETE", "ALL"] }
            },
            "required": ["context_type"]
          },
          "condition": { "type": "string", "description": "Logic expression (e.g., using CEL)" },
          "action": {
            "type": "object",
            "properties": {
              "type": { "type": "string", "enum": ["Allow", "Deny", "Audit", "Throttle"] },
              "reason_code": { "type": "string" }
            },
            "required": ["type"]
          },
          "metrics_enabled": { "type": "boolean" }
        },
        "required": ["rule_id", "priority", "effective_from", "target_definition", "action"]
      }
    }
  },
  "required": ["version", "policy_id", "global_settings", "policies"],
  "additionalProperties": false
}