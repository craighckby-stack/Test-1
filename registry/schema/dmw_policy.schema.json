{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://registry.agi/schema/dmw_policy.schema.json",
  "title": "DMW Policy Configuration Schema (v3.0 - Refactored)",
  "type": "object",
  "$defs": {
    "ActionDefinition": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["Allow", "Deny", "Audit", "Throttle"],
          "description": "The resulting action upon rule match."
        },
        "reason_code": {
          "type": "string",
          "pattern": "^[A-Z0-9_]{3,15}$",
          "description": "Optional code explaining the action result."
        }
      },
      "required": ["type"],
      "additionalProperties": false
    },
    "TargetDefinition": {
      "type": "object",
      "properties": {
        "context_type": {
          "type": "string",
          "enum": ["ResourcePath", "Operation", "ServiceIdentifier"],
          "description": "Defines the scope of the rule evaluation."
        },
        "match_regex": {
          "type": "string",
          "description": "Regular expression for matching the context value (required for ResourcePath/ServiceIdentifier).
"
        },
        "match_operation": {
          "type": "string",
          "enum": ["READ", "WRITE", "DELETE", "ALL"],
          "description": "The type of data operation targeted."
        }
      },
      "required": ["context_type"],
      "additionalProperties": false
    },
    "PolicyRule": {
      "type": "object",
      "properties": {
        "rule_id": {
          "type": "string",
          "description": "Unique identifier for the specific rule.",
          "pattern": "^[a-z0-9-_]{5,50}$"
        },
        "priority": {
          "type": "integer",
          "minimum": 1,
          "maximum": 1000,
          "description": "Lower numbers mean higher priority (1 is highest)."
        },
        "effective_from": {
          "type": "string",
          "format": "date-time"
        },
        "target_definition": { "$ref": "#/$defs/TargetDefinition" },
        "condition": {
          "type": "string",
          "description": "Conditional expression using Common Expression Language (CEL)."
        },
        "action": { "$ref": "#/$defs/ActionDefinition" },
        "metrics_enabled": { "type": "boolean", "default": true }
      },
      "required": ["rule_id", "priority", "effective_from", "target_definition", "action"],
      "additionalProperties": false
    }
  },
  "properties": {
    "version": { "type": "string", "const": "3.0" },
    "policy_id": {
      "type": "string",
      "description": "Unique identifier for the policy.",
      "pattern": "^[A-Z0-9_]{8,30}$"
    },
    "global_settings": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "default_action": { "type": "string", "enum": ["AllowIfNoMatch", "DenyIfNoMatch"] },
        "evaluation_mode": { "type": "string", "enum": ["FirstMatchWins", "HighestPriorityWins"] }
      },
      "required": ["enabled", "default_action", "evaluation_mode"],
      "additionalProperties": false
    },
    "policies": {
      "type": "array",
      "items": { "$ref": "#/$defs/PolicyRule" },
      "minItems": 1,
      "description": "List of policy rules to evaluate."
    }
  },
  "required": ["version", "policy_id", "global_settings", "policies"],
  "additionalProperties": false
}