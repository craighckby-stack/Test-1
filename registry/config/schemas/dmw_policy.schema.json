{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "dmw_policy.schema.json",
  "title": "DMW Policy Configuration Schema",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "version": {"type": "string"},
        "updated_by": {"type": "string"},
        "description": {"type": "string"}
      },
      "required": ["version", "description"]
    },
    "defaults": {
      "type": "object",
      "properties": {
        "retention_period_days": {"type": "integer", "minimum": 1},
        "encryption_required": {"type": "boolean"},
        "default_action": {"type": "string", "enum": ["ALLOW", "DENY", "AUDIT"]}
      },
      "required": ["retention_period_days", "encryption_required"]
    },
    "rulesets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "string", "pattern": "^RS_"},
          "priority": {"type": "integer", "minimum": 100, "maximum": 1000, "description": "Higher priority runs first."}, 
          "rules": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "rule_id": {"type": "string", "pattern": "^DMW-R[0-9]{3}"}, 
                "condition": {"type": "string", "description": "Expression language string for evaluation."}, 
                "actions": {"type": "array", "items": {"type": "string"}},
                "retention_period_days": {"type": "integer", "minimum": 1},
                "enforcement_level": {"type": "string", "enum": ["MANDATORY", "DEFAULT", "ADVISORY"]}
              },
              "required": ["rule_id", "condition", "actions", "enforcement_level"]
            }
          }
        },
        "required": ["id", "priority", "rules"]
      }
    }
  },
  "required": ["metadata", "defaults", "rulesets"]
}