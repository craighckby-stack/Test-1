{
  "key_policy_version": "2.0.0",
  "metadata": {
    "policy_name": "Sovereign AGI Core Key Management Policy",
    "last_updated": "2024-05-15T10:00:00Z"
  },
  "key_type_definitions": {
    "ROOT_SIGNING": {
      "algorithm": "Ed25519",
      "length_bits": 256,
      "storage_tier": "HSM_FIPS_140_3_LEVEL_4",
      "required_entropy_source": "True_Random_Hardware"
    },
    "SEALING_TRANSIT": {
      "algorithm": "AES256_GCM",
      "length_bits": 256,
      "storage_tier": "Encrypted_Ephemeral",
      "required_entropy_source": "OS_Kernel_PRNG"
    }
  },
  "entity_role_definitions": {
    "sovereign_core": [
      "SIGNING.STATE_TRANSITION",
      "SEALING.DATA_CONFIDENTIALITY",
      "ATTESTATION.ROOT_AUTHORITY"
    ],
    "runtime_module": [
      "AUTHORIZATION.RUNTIME_EXECUTION",
      "ATTESTATION.INTEGRITY_CHECK",
      "DECRYPTION.INPUT_STREAM"
    ]
  },
  "rotation_schedule": {
    "SIGNING.STATE_TRANSITION": {
      "key_type": "ROOT_SIGNING",
      "lifetime_days": 180,
      "rotation_window_days": 30,
      "archival_retention_years": 5
    },
    "SEALING.DATA_CONFIDENTIALITY": {
      "key_type": "SEALING_TRANSIT",
      "lifetime_days": 30,
      "rotation_window_days": 7,
      "archival_retention_years": 0
    }
  },
  "revocation_policy": {
    "trigger_breach": {
      "event_types": [
        "INTEGRITY_VIOLATION",
        "UNAUTHORIZED_ACCESS"
      ],
      "action_required": "IMMEDIATE_REVOCATION",
      "post_action": [
        "CRL_PUBLICATION_CRITICAL",
        "STATE_REWIND_VALIDATION"
      ]
    },
    "trigger_expiration": {
      "event_types": [
        "SCHEDULED_EXPIRY"
      ],
      "action_required": "DEPRECATION_WARNING",
      "post_action": [
        "MANDATORY_REPLACEMENT_AFTER_GRACE",
        "KEY_DESTRUCTION_SCHEDULE"
      ]
    }
  }
}