{
  "metadata": {
    "version": "1.1.0",
    "updated_by": "Sovereign AGI v94.1",
    "description": "Governs Data Management Workflow (DMW) policies across environments. Structured for priority-based evaluation."
  },
  "defaults": {
    "retention_period_days": 365,
    "encryption_required": true,
    "default_action": "ALLOW"
  },
  "rulesets": [
    {
      "id": "RS_CRITICAL_DATA",
      "priority": 900,
      "description": "Rules governing PII and highly sensitive regulatory data.",
      "rules": [
        {
          "rule_id": "DMW-R001",
          "condition": "data_classification == 'PII' || data_classification == 'REGULATORY'",
          "actions": ["ENCRYPT", "LOG_AUDIT"],
          "retention_period_days": 2555,
          "enforcement_level": "MANDATORY"
        }
      ]
    },
    {
      "id": "RS_LOGGING_AND_MONITORING",
      "priority": 500,
      "description": "Standard logging and monitoring requirements.",
      "rules": [
        {
          "rule_id": "DMW-R002",
          "condition": "source_module == 'API_GATEWAY'",
          "actions": ["RATE_LIMIT(100/min)", "LOG_ACCESS"],
          "retention_period_days": 90,
          "enforcement_level": "DEFAULT"
        }
      ]
    }
  ]
}