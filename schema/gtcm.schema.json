{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://agi.sovereign/gtcm.schema.json",
  "title": "Governance Threshold Configuration Manifest Schema",
  "type": "object",
  "properties": {
    "description": { "type": "string" },
    "DATA_VERSION": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "SCHEMA_VERSION": { "type": "string", "const": "1.0.0" },
    "configurations": {
      "type": "object",
      "properties": {
        "core_metrics": {
          "type": "object",
          "properties": {
            "utility_min_threshold": { "type": "number", "minimum": 0, "maximum": 1.0 },
            "exposure_max_limit": { "type": "number", "minimum": 0, "maximum": 1.0 }
          },
          "required": ["utility_min_threshold", "exposure_max_limit"]
        },
        "arbitration_p01": {
          "type": "object",
          "properties": {
            "tolerance_delta_abs": { "type": "number", "minimum": 0 }
          },
          "required": ["tolerance_delta_abs"]
        },
        "governance_ratios": {
          "type": "object",
          "properties": {
            "sdr_hmc_score_min_ratio": { "type": "number", "minimum": 1.0 }
          },
          "required": ["sdr_hmc_score_min_ratio"]
        }
      },
      "required": ["core_metrics", "arbitration_p01", "governance_ratios"]
    }
  },
  "required": ["description", "DATA_VERSION", "SCHEMA_VERSION", "configurations"]
}