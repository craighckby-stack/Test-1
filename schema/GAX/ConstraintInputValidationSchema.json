{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Constraint Input Validation Schema",
  "type": "object",
  "properties": {
    "entity": {
      "type": "string",
      "description": "Target entity or module name."
    },
    "constraints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "key": {
            "type": "string"
          },
          "value": {
            "type": ["string", "number", "boolean", "array", "object"]
          },
          "type": {
            "type": "string",
            "enum": ["strict", "minimum", "maximum", "pattern"]
          }
        },
        "required": ["key", "value", "type"]
      },
      "minItems": 1
    }
  },
  "required": ["entity", "constraints"]
}