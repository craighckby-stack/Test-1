{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "schema/GAX/ConstraintTaxonomy.schema.json",
  "title": "GAX Constraint Taxonomy",
  "description": "Standardized definition of recognized constraint types across the GAX platform, allowing modular referencing.",
  "type": "object",
  "definitions": {
    "ConstraintType": {
      "type": "object",
      "properties": {
        "code": { "type": "string", "pattern": "^[A-Z_0-9]+", "description": "Unique, platform-wide code (e.g., MIN_LATENCY, HARD_RESOURCE_CAP)." },
        "scope": { "type": "string", "enum": ["RESOURCE", "TEMPORAL", "LOGICAL", "GEOSPATIAL", "DOMAIN"] },
        "description": { "type": "string" },
        "severity": { "type": "string", "enum": ["HARD", "SOFT"] }
      },
      "required": ["code", "scope", "severity"]
    },
    "SupportedSet": {
      "type": "array",
      "description": "A list of ConstraintType codes this component supports.",
      "items": { "type": "string" }
    }
  },
  "properties": {
    "standardConstraints": {
      "type": "array",
      "items": { "$ref": "#/definitions/ConstraintType" }
    }
  },
  "required": ["standardConstraints"]
}