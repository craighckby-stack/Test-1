{
  "$id": "$/api_schemas.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Core API Request and Response Validation Schemas, grouped by semantic version context.",
  "definitions": {
    "V1_UserCreationRequest": {
      "description": "Schema for creating a new user (V1). Includes basic security constraints.",
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "minLength": 4,
          "maxLength": 32,
          "pattern": "^[a-zA-Z0-9_-]+$",
          "description": "Alphanumeric, underscore, and hyphen allowed."
        },
        "email": { "type": "string", "format": "email" },
        "password": {
          "type": "string",
          "minLength": 8,
          "description": "Minimum 8 characters for password strength."
        }
      },
      "required": ["username", "email", "password"],
      "additionalProperties": false
    },
    "V2_GenericQuery": {
      "description": "Common schema for resource retrieval, supporting pagination.",
      "type": "object",
      "properties": {
        "limit": { 
          "type": "integer", 
          "minimum": 1, 
          "maximum": 100, 
          "default": 25,
          "description": "Max results per page."
        },
        "offset": { 
          "type": "integer", 
          "minimum": 0,
          "default": 0,
          "description": "Offset for pagination."
        },
        "sort_by": {
          "type": "string",
          "enum": ["id", "created_at", "updated_at"],
          "default": "id"
        }
      },
      "additionalProperties": false
    }
  }
}