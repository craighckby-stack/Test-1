{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://governance.sovereign.io/P01_Finality_Result.schema.json",
  "title": "P-01 Finality Checkpoint Result Schema",
  "description": "The standardized output structure immediately following the S8 Finality Check, ensuring compliant input for DCSM serialization in S9.",
  "type": "object",
  "properties": {
    "P01_PASS": {
      "type": "boolean",
      "description": "Overall status of the Finality Condition."
    },
    "criteria_I_UMA": {
      "type": "object",
      "description": "Utility Maximization Axiom result.",
      "properties": {
        "status": {"type": "boolean"},
        "TEMM_S01": {"type": "number"},
        "UFRM_S02": {"type": "number"},
        "CFTM_Epsilon": {"type": "number"},
        "margin_satisfied": {"type": "boolean", "description": "Checks if S01 >= S02 + Epsilon"}
      },
      "required": ["status", "TEMM_S01", "UFRM_S02", "CFTM_Epsilon", "margin_satisfied"]
    },
    "criteria_II_CA": {
      "type": "object",
      "description": "Context Attestation result.",
      "properties": {
        "status": {"type": "boolean"},
        "ECVM_SContext": {"type": "boolean"}
      },
      "required": ["status", "ECVM_SContext"]
    },
    "criteria_III_AI": {
      "type": "object",
      "description": "Axiomatic Integrity result.",
      "properties": {
        "status": {"type": "boolean"},
        "Veto_PVLM": {"type": "boolean", "description": "Policy Veto Status (Active Veto = True)"},
        "Veto_MPAM": {"type": "boolean", "description": "Stability Veto Status (Active Veto = True)"},
        "Veto_ADTM": {"type": "boolean", "description": "Anomaly Veto Status (Active Veto = True)"}
      },
      "required": ["status", "Veto_PVLM", "Veto_MPAM", "Veto_ADTM"]
    },
    "S8_Timestamp_UTC": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of the atomic verification checkpoint."
    },
    "TVCR_Linkage": {
      "type": "string",
      "description": "Pointer to the immutable forensic record created up to S8."
    }
  },
  "required": ["P01_PASS", "criteria_I_UMA", "criteria_II_CA", "criteria_III_AI", "S8_Timestamp_UTC", "TVCR_Linkage"]
}