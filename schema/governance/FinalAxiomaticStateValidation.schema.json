{
  "$id": "https://agi.sovereign.v94/schema/governance/FinalAxiomaticStateValidation.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Final Axiomatic State Validation Record",
  "description": "Defines the required structure for recording a successful, validated final state change against the Sovereign Axiomatic Core Principles.",
  "type": "object",
  "properties": {
    "validationId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this validation event."
    },
    "schemaVersion": {
      "type": "string",
      "const": "1.0.0",
      "description": "Version of this validation schema used."
    },
    "stateHash": {
      "type": "string",
      "pattern": "^(sha256|blake3):[a-fA-F0-9]{64,128}$",
      "description": "Cryptographic hash (algorithm:value) of the state snapshot being validated. Ensures data immutability."
    },
    "validatedAxioms": {
      "type": "array",
      "description": "List of core axioms confirmed satisfied during this state transition.",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "axiomKey": { "type": "string", "pattern": "^[A-Z_]{3,}$" },
          "status": { "type": "string", "enum": ["SATISFIED", "NOT_APPLICABLE"] }
        },
        "required": ["axiomKey", "status"],
        "additionalProperties": false
      }
    },
    "consensusProof": {
      "type": "object",
      "description": "Metadata verifying consensus mechanism execution.",
      "properties": {
        "quorumReached": { "type": "number", "minimum": 1 },
        "timestampUtc": { "type": "string", "format": "date-time" },
        "validatorSignatures": {
          "type": "array",
          "minItems": 1,
          "description": "List of cryptographic signatures from participating validators.",
          "items": { "type": "string", "format": "base64url" }
        }
      },
      "required": ["quorumReached", "timestampUtc", "validatorSignatures"],
      "additionalProperties": false
    }
  },
  "required": [
    "validationId",
    "schemaVersion",
    "stateHash",
    "validatedAxioms",
    "consensusProof"
  ],
  "additionalProperties": false
}