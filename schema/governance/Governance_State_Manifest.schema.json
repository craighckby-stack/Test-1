{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://sovereign.agi/schema/v94.1/Governance_State_Manifest.schema.json",
  "title": "Governance State Manifest (GSM)",
  "description": "Defines the cryptographic manifest of all critical Governance Configuration Schemas (FGCS) required for a certified state transition. This is hashed and signed by CRoT at S0 and committed at S10.",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "The SAG specification version."
    },
    "timestamp_utc": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp of manifest creation (S0)."
    },
    "transition_index": {
      "type": "integer",
      "description": "The proposed state evolution index (N+1)."
    },
    "fgcs_artifacts": {
      "type": "array",
      "description": "List of all axiomatic and configuration files and their verified checksums.",
      "items": {
        "type": "object",
        "properties": {
          "acronym": {
            "type": "string",
            "description": "Artifact Acronym (e.g., PVLM, MPAM, CFTM)."
          },
          "path": {
            "type": "string",
            "description": "Relative file path."
          },
          "hash_type": {
            "type": "string",
            "enum": ["SHA256", "SHA3-512"],
            "description": "Cryptographic hashing algorithm used."
          },
          "checksum": {
            "type": "string",
            "description": "The calculated hash of the artifact content."
          }
        },
        "required": ["acronym", "path", "hash_type", "checksum"]
      }
    },
    "signed_by_root": {
      "type": "string",
      "description": "CRoT's cryptographic signature over the entire GSM object."
    }
  },
  "required": ["version", "timestamp_utc", "fgcs_artifacts", "signed_by_root"]
}