{
  "version": "1.0.0-aass",
  "default_policy_id": "P_AASS_DEFAULT_V1",
  "policies": {
    "P_AASS_ENCRYPTION_V1": {
      "key_type": "SYMMETRIC",
      "algorithm": "AES-256-GCM",
      "usage": [
        "DATA_AT_REST",
        "SESSION_ENCRYPTION"
      ],
      "rotation_policy": {
        "enabled": true,
        "duration": "P180D",
        "trigger": "AUTOMATIC_SCHEDULE",
        "pre_rotation_alert": "P30D"
      },
      "revocation_behavior": "IMMEDIATE_DEACTIVATION"
    },
    "P_AASS_SIGNING_V1": {
      "key_type": "ASYMMETRIC",
      "algorithm": "ECC-P384",
      "usage": [
        "DIGITAL_SIGNATURES",
        "AUTH_TOKEN_ISSUANCE"
      ],
      "rotation_policy": {
        "enabled": true,
        "duration": "P365D",
        "trigger": "AUTOMATIC_SCHEDULE",
        "grace_period": "P7D"
      },
      "revocation_behavior": "GRACEFUL_DECOMMISSION"
    }
  },
  "lifecycle_state_machine": {
    "states": [
      "CREATED",
      "PRE_ACTIVE",
      "ACTIVE",
      "DEACTIVATED",
      "REVOKED",
      "DESTROYED"
    ],
    "initial": "CREATED",
    "transitions": [
      {
        "name": "activate",
        "from": [
          "CREATED",
          "PRE_ACTIVE"
        ],
        "to": "ACTIVE"
      },
      {
        "name": "schedule_deactivation",
        "from": "ACTIVE",
        "to": "DEACTIVATED",
        "condition": "rotation_policy_trigger"
      },
      {
        "name": "immediate_revoke",
        "from": [
          "ACTIVE",
          "DEACTIVATED"
        ],
        "to": "REVOKED"
      },
      {
        "name": "purge",
        "from": [
          "DEACTIVATED",
          "REVOKED"
        ],
        "to": "DESTROYED",
        "delay_min": "P90D"
      }
    ]
  },
  "auditing": {
    "level": "MANDATORY",
    "required_fields": [
      "policy_id",
      "old_state",
      "new_state",
      "timestamp",
      "triggered_by"
    ]
  }
}