{
  "metadata": {
    "spec_id": "CALS_V1.0",
    "description": "Certified Audit Log Specification for SGS Pipeline Operations",
    "system_version": "SGS_V95.3",
    "schema_version": "CALS-SCHEMA-V1.0"
  },
  "security_policy": {
    "non_repudiation_enforced": true,
    "signing_key_id": "CRoT_KEY_V2",
    "tamper_detection": {
      "mechanism": "Cryptographic_Chaining",
      "chain_identifier_field": "transaction_hash"
    }
  },
  "data_integrity": {
    "redundancy_level": 3,
    "mandatory_fields": [
      "transaction_hash",
      "timestamp_utc",
      "sgs_pipeline_stage_id",
      "gac_manifest_hash_at_time",
      "triggering_input_digest",
      "ga_x_finality_result",
      "sih_flag",
      "rollback_flag"
    ],
    "required_context_fields": [
        "originating_agent_id",
        "operation_type"
    ]
  },
  "deployment": {
    "primary_ledger_uri": "log_service/immutable_ledger_01",
    "secondary_archive_uri": "log_service/cold_storage_vault",
    "retention_policy_days": 3650
  }
}