{
  "name": "Schema and Attestation Policy Resolver Map (SAPR)",
  "version": "V1.0.0",
  "description": "Maps high-level schema and attestation policy IDs referenced in GICM/other manifests to concrete cryptographic definitions and JSON Schema payloads.",
  "schemas": {
    "PVLM_S2_Input_ID": "ref://Schemas/PVLM_S2_Input.json",
    "PVLM_S2_Veto_Signal_ID": "ref://Schemas/PVLM_S2_Veto_Signal.json",
    "CFTM_S7_Finality_ID": "ref://Schemas/CFTM_S7_Finality.json"
  },
  "attestation_policies": {
    "ATT_POLICY_T1_VETO": {
      "crypto_algorithm": "ECDSA_P521",
      "required_key_type": "Agent_Signing_Key_T1",
      "nonce_requirement": "Mandatory_Timestamped"
    },
    "ATT_POLICY_T0_MASTER_BIND": {
      "crypto_algorithm": "Quantum_Resistant_Hash_H4",
      "required_key_type": "Master_Commit_Key_T0",
      "nonce_requirement": "Mandatory_NonRepudiation_ID"
    }
  }
}