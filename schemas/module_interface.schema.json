{ "$schema": "https://json-schema.org/draft/2020-12/schema", "$id": "https://agi.sovereign/schemas/v94.1/module_interface.schema.json", "title": "Sovereign AGI Module Interface Definition", "description": "Defines standardized structure for module interfaces (e.g., functions, endpoints, class constructors), enforced by the AGI scaffolding pipeline.", "type": "object", "required": [ "module_name", "version", "definitions" ], "properties": { "module_name": { "type": "string" }, "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" }, "definitions": { "type": "array", "items": { "type": "object", "required": [ "name", "type", "signature" ], "properties": { "name": { "type": "string" }, "type": { "type": "string", "enum": [ "FUNCTION", "CLASS_METHOD", "ENDPOINT", "CONSTANT" ] }, "description": { "type": "string" }, "signature": { "type": "object", "required": [ "arguments", "returns" ], "properties": { "arguments": { "type": "array", "default": [], "items": { "type": "object", "required": [ "name", "data_type" ], "properties": { "name": { "type": "string" }, "data_type": { "type": "string", "description": "e.g., string, integer, List<string>" } } } }, "returns": { "type": "object", "required": [ "data_type" ], "properties": { "data_type": { "type": "string" } } } } } } } } } }