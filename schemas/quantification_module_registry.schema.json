{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://corp.net/schemas/quantification_module_registry.schema.json",
  "title": "MEE Quantification Module Registry Schema",
  "type": "object",
  "properties": {
    "schema_version": {
      "type": "string",
      "description": "Version of the registry schema itself."
    },
    "name": {
      "type": "string"
    },
    "modules": {
      "type": "array",
      "description": "List of registered quantification modules.",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the module (e.g., QUANT_EFFICACY)"
          },
          "version": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["Development", "Production", "Deprecated"]
          },
          "description": {
            "type": "string"
          },
          "quantification_scope": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "runtime_config": {
            "type": "object",
            "properties": {
              "engine_type": {
                "type": "string",
                "enum": ["SCRIPT_PYTHON", "SERVICE_RUST", "SERVICE_CONTAINER", "EXECUTABLE"]
              },
              "entrypoint": {
                "type": "string",
                "description": "Execution path or command for script engines."
              },
              "container_image": {
                "type": "string",
                "description": "Container image reference for service engines."
              },
              "artifact": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["file_bundle", "container_image"]
                  },
                  "location": {
                    "type": "string"
                  },
                  "checksum_sha256": {
                    "type": "string",
                    "pattern": "^[a-fA-F0-9]{64}$"
                  }
                },
                "required": ["type", "location", "checksum_sha256"]
              }
            },
            "required": ["engine_type", "artifact"]
          },
          "resource_spec": {
            "type": "object",
            "properties": {
              "cpu_milli_cores": {
                "type": "integer",
                "minimum": 1
              },
              "memory_mib": {
                "type": "integer",
                "minimum": 64
              }
            },
            "required": ["cpu_milli_cores", "memory_mib"]
          }
        },
        "required": ["id", "version", "status", "runtime_config", "resource_spec", "quantification_scope"]
      }
    }
  },
  "required": ["schema_version", "modules"]
}