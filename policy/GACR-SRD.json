{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "GACR-SRD.json",
  "title": "Governance Asset and Registry - Schema Repository Definition",
  "description": "Defines the mandatory structural schemas for all GACR manifests enforced by PESM.",
  "manifests": {
    "PVLM": {
      "description": "Policy Veto Logic Manifest structure.",
      "type": "object",
      "required": ["version", "veto_rules"],
      "properties": {
        "version": { "type": "string" },
        "veto_rules": { "type": "array", "minItems": 1 }
      }
    },
    "CFTM": {
      "description": "Core Failure Thresholds Manifest structure.",
      "type": "object",
      "required": ["version", "epsilon_threshold", "max_risk_S02"],
      "properties": {
        "version": { "type": "string" },
        "epsilon_threshold": { "type": "number", "format": "float", "minimum": 0.0 }
      }
    },
    "GATM": {
      "description": "Governance Agent Threshold Manifest structure.",
      "type": "object",
      "required": ["version", "agent_timeouts", "max_rollbacks"],
      "properties": {
        "agent_timeouts": { "type": "object" }
      }
    }
    /* ... schemas for CAC, SBCM, SDVM, DTEM, CALS, MDSM ... */
  },
  "definitions": {
    "GACR_Standard": {
      "type": "object",
      "required": ["manifest_id", "timestamp", "signature"],
      "properties": {
        "manifest_id": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "signature": { "type": "string" }
      }
    }
  }
}