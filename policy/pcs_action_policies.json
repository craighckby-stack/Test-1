{
  "description": "Defines concrete execution parameters and routines for abstract PCS Escalation Policy IDs.",
  "policies": {
    "ACTION_LOG_PRIORITY_PIM": {
      "target_module": "PIM",
      "routine": "log_event",
      "parameters": {
        "severity": "WARNING_ELEVATED",
        "destination": "CRITICAL_PATH_LOG"
      }
    },
    "ACTION_REQUEST_NONCRITICAL_RELEASE": {
      "target_module": "DRO",
      "routine": "memory_release",
      "parameters": {
        "scope": "NON_CRITICAL",
        "cooldown_ms": 100
      }
    },
    "ACTION_THROTTLE_INPUT_ACQUISITION": {
      "target_module": "DHC",
      "routine": "throttle_acquisition",
      "parameters": {
        "rate_limit_percent": 0.5,
        "duration_ms": 500
      }
    }
  }
}