    {
      "policy_id": "RSP_INVOKE_CM_L3",
      "action_type": "Invocation",
      "target_service": "Conflict_Management_System",
      "parameters": {
        "level": "L3_Review",
        "priority": "High",
        "payload_schema": "CVM_Violation_Payload_v1"
      }
    },
    {
      "policy_id": "RSP_GAX_OVERRIDE_L1",
      "action_type": "System_Override",
      "target_component": "Global_Axiomatic_Engine",
      "parameters": {
        "override_function": "Apply_Emergency_Floor",
        "bypass_consensus": true,
        "reason_code": "AX001_MIN_WEIGHT_VIOLATION"
      }
    }
  ]
