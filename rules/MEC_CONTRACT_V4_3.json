{
  "contract_id": "MEC-V4-3-CORE-001",
  "spec_version": "4.3.2",
  "metadata": {
    "title": "Modular Execution Configuration: Core Gateway Policy",
    "description": "Standardized Contract for Modular Execution Configuration, defining core service gateway policies.",
    "status": "ACTIVE",
    "maturity": "PRODUCTION_READY"
  },
  "configuration": {
    "enforcement_policy": "STRICT_FAILFAST",
    "cache_policy": {
      "strategy": "TTL",
      "ttl_seconds": 3600
    },
    "runtime_environment": "PRODUCTION"
  },
  "components": [
    {
      "component_id": "AUTH_SERVICE_GATEWAY",
      "component_type": "SERVICE_PROXY",
      "dependency_policy_id": "MEC-V4-3-POLICY-AUTH",
      "config": {
        "max_concurrent_requests": 1000,
        "request_timeout_ms": 5000,
        "scaling_factor": 0.9
      }
    }
  ],
  "ruleset": [
    {
      "rule_id": "R43_001_RATE_LIMIT",
      "type": "CONCURRENCY_CONTROL",
      "target_component": "AUTH_SERVICE_GATEWAY",
      "condition_ref": "PREDICATE_THRESHOLD_EXCEED",
      "config": {
        "metric_key": "REQUEST_RATE",
        "threshold_reference": "config.max_concurrent_requests * config.scaling_factor"
      },
      "action": "THROTTLE_WITH_BACKOFF",
      "severity": "ELEVATED_WARNING"
    },
    {
      "rule_id": "R43_002_TIMEOUT",
      "type": "LATENCY_CONTROL",
      "target_component": "AUTH_SERVICE_GATEWAY",
      "condition_ref": "PREDICATE_GREATER_THAN",
      "config": {
        "metric_key": "EXECUTION_TIME_MS",
        "threshold_reference": "config.request_timeout_ms"
      },
      "action": "TERMINATE_AND_LOG_CRITICAL",
      "severity": "CRITICAL"
    }
  ]
}